<screen id="popup_filedialog" background-color="#00000080" popup="true">
	<panel alignment="vertical" left="10%" top="10%" width="80%" height="80%" horizontal-align="center">
		<space height="10" />
		<text id="filedialog_caption" font="resources/gui/fonts/Foo_20.fnt" text="Load" width="auto" height="auto"/>
		<space height="10" />
		<selectbox id="filedialog_files" name="filedialog_files" width="80%" height="*">
			<scrollarea width="100%" height="100%">
				<selectbox-option text="Option 00" value="00" />
				<selectbox-option text="Option 01" value="01" />
				<selectbox-option text="Option 02" value="02" />
				<selectbox-option text="Option 03" value="03" />
				<selectbox-option text="Option 04" value="04" />
				<selectbox-option text="Option 05" value="05" />
				<selectbox-option text="Option 06" value="06" />
				<selectbox-option text="Option 07" value="07" />
				<selectbox-option text="Option 08" value="08" />
				<selectbox-option text="Option 09" value="09" />
				<selectbox-option text="Option 10" value="10" />
				<selectbox-option text="Option 10" value="10" />
			</scrollarea>
		</selectbox>
		<space height="10" />
		<input id="filedialog_filename" name="filedialog_filename" width="80%" height="auto" text="./file.end" />
		<space height="10" />
		<layout width="100%" height="auto" alignment="horizontal">
			<space width="*" />
			<button id="filedialog_apply" name="filedialog_apply" text="Apply" />
			<space width="*" />
			<button id="filedialog_abort" name="filedialog_abort" text="Abort" />
			<space width="*" />
		</layout>
		<space height="10" />
	</panel>
</screen>