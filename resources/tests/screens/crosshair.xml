<screen id="crosshair" background-color="#00000000" min-width="1920" min-height="1080" max-width="1920" max-height="1080">
	<element width="100%" height="100%" horizontal-align="center" vertical-align="center" ignore-events="true"> 
		<image id="image_crosshair" width="auto" height="auto" src="resources/tests/screens/images/Element_HUD_Crosshair.png" />
		<layout alignment="vertical" width="100%" height="100%" horizontal-align="center">
			<space height="*" />
			<space height="100" />
			<element id="crosshair_hud" width="100%" height="60" ignore-events="true">
				<layout show-on="pickup" width="100%" height="100%" alignment="horizontal" horizontal-align="center" vertical-align="top">
					<layout padding-left="5" padding-right="5" width="auto" height="25" horizontal-align="center" vertical-align="center" background-image="resources/tests/screens/images/Element_Frame_Interaction.png" background-image-scale9="8" >
						<text font="resources/gui-system/fonts/Roboto_20.fnt" text="E" color="#000000"/>
					</layout>
					<space width="10"/>
					<text id="crosshair_hud_id" font="resources/gui-system/fonts/Roboto_20.fnt" text="Interact with" color="#000000"/>
				</layout>
			</element>
			<space height="*" />
		</layout>
	</element>
</screen>