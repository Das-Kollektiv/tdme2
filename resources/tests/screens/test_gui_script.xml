<screen id="test_gui_script" script="resources/tests/scripts/gui.tscript">
	<layout width="100%" height="100%" alignment="vertical" horizontal-align="center" vertical-align="center">
		<space height="*" />
		<button id="btn_hello" text="Hi there! Click here for a warm hello!!!" />
		<space height="20" />
		<button id="btn_time" text="Hi there! Click here for the time my friend!!!" />
		<space height="20" />
		<text font="{$font.default}" size="{$fontsize.default}" color="{$color.font_normal}" padding="5" width="auto" height="auto" text="Cool!!! Check my mighty screen with a script attached!" />
		<element id="info" width="auto" height="auto">
			<text id="welcome" show-on="welcome" font="{$font.default}" size="{$fontsize.default}" color="{$color.font_normal}" padding="5" width="auto" height="auto" text="Hi there! I love you!!!" />
			<text id="time" show-on="time" font="{$font.default}" size="{$fontsize.default}" color="{$color.font_normal}" padding="5" width="auto" height="auto" text="Hm. What time is it???" />
		</element>
		<space height="20" />
		<button id="btn_clearsubnodes" text="Clear Container" />
		<space height="20" />
		<button id="btn_insertsubnodes" text="Put more love into Container" />
		<space height="20" />
		<button id="btn_replacesubnodes" text="Replace the love of Container" />
		<space height="20" />
		<layout id="container" width="auto" height="auto" alignment="vertical">
			<text font="{$font.default}" size="{$fontsize.default}" color="{$color.font_normal}" padding="5" width="auto" height="auto" text="This is a initial fancy line in my container here. LOL!" />
		</layout>
		<space height="*" />
	</layout>
</screen>
