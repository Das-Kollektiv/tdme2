<screen id="test" background-color="{$color.element_background}" min-width="1024" min-height="768" max-width="2048" max-height="1536">
	<layout background-color="{$color.element_background}" padding="5" width="100%" height="100%" alignment="vertical" horizontal-align="center" vertical-align="center"> 
		<space height="*"/>
		<element id="aaa">
			<text font="resources/engine/fonts/Roboto_20.fnt" text="aaa" color="#000000" />
			<effect-in type="position" effect-position-x="25" time="1.0" on="mouseover" persistant="true" />
			<effect-out type="position" effect-position-x="0" time="1.0" on="mouseover" />
		</element>
		<space height="10"/>
		<element id="bbb">
			<text font="resources/engine/fonts/Roboto_20.fnt" text="bbb" color="#000000" />
			<effect-in type="position" effect-position-x="25" time="1.0" on="mouseover" persistant="true" />
			<effect-out type="position" effect-position-x="0" time="1.0" on="mouseover" />
		</element>
		<space height="10"/>
		<element id="ccc">
			<text font="resources/engine/fonts/Roboto_20.fnt" text="ccc" color="#000000">
				<effect-default type="color" effect-color-mul="#00000000" effect-color-add="#00000000" time="0.0" persistant="true" />
				<effect-in type="color" effect-color-mul="#ffffffff" effect-color-add="#00000000" time="1.0" on="mouseover" persistant="true" />
				<effect-out type="color" effect-color-mul="#00000000" effect-color-add="#00000000" time="1.0" on="mouseover" persistant="false" />
			</text>
		</element>
		<space height="*"/>				
		<space height="*"/>
	</layout>
</screen>
