function: initialize($context)
	console.printLine("----------------------------------------------------------")
	console.printLine("initialize(): " + gui.screennode.getId())
	console.printLine("----------------------------------------------------------")
	console.printLine()
	$GLOBAL.context = $context
	$GLOBAL.context.screenIdx = 2
	console.printLine($GLOBAL.context)
end

# on action
function: onAction($actionType, $elementNodeId)
	#console.printLine("----------------------------------------------------------")
	#console.printLine("onAction(): " + gui.screennode.getId() + ": " + $elementNodeId + "(" + $actionType + ")")
	#console.printLine("----------------------------------------------------------")
	#console.printLine()
	if ($actionType == gui.event.ACTIONTYPE_PERFORMED())
		if ($elementNodeId == "btn_popup")
			gui.screen.push("resources/tests/screens/test_gui_popup.xml", {}, $GLOBAL.context)
		elseif ($elementNodeId == "btn_backscreen")
			gui.screen.goto("resources/tests/screens/test_gui_script.xml", {}, $GLOBAL.context)
		end
	end
end

