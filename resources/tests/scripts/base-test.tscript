# initialize
on: initialize
	console.log("-----------------------")
	console.log("base-test: Initialize")
	console.log("-----------------------")
	console.log()
end

# if no condition is met, nothing will be executed, lol :D
on: nothing
	console.log("--------------------")
	console.log("base-test: Nothing")
	console.log("--------------------")
	console.log()

	$array = array(1, 2, 3)

	console.log("array:")
	$i = 0
	forCondition($i < array.length($array))
		console.log($array[$i])
		++$i
	end

	console.log("array.length: " + internal.script.evaluateMemberAccess("$array", $array, "length"))

	console.log("array.push: 5")
	internal.script.evaluateMemberAccess("$array", $array, "push", null, 5)

	console.log("array:")
	$i = 0
	forCondition($i < array.length($array))
		console.log($array[$i])
		++$i
	end

	console.log("array.set: 0 = 10")
	internal.script.evaluateMemberAccess("$array", $array, "set", null, 0, null, 10)
	
	$array->set(0, 11)

	console.log("array:")
	$i = 0
	forCondition($i < array.length($array))
		console.log($array[$i])
		++$i
	end

	script.stop()
end

# an error has occurred
on: error
	console.log("------------------")
	console.log("base-test: Error")
	console.log("------------------")
	console.log("An error occurred")
	script.wait(1000)
end
