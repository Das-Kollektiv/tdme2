# initialize
on: initialize
	console.log("-----------------------")
	console.log("base-test: Initialize")
	console.log("-----------------------")
	console.log()
end

# if no condition is met, nothing will be executed, lol :D
on: nothing
	console.log("--------------------")
	console.log("base-test: Nothing")
	console.log("--------------------")
	console.log()

	$array = array()
	$array->push(1)
	$array->push(2)
	$array->push(3)
	$array->set(0, 111)
	$array->push(4)

	console.log("array content:")

	$i = 0
	forCondition($i < $array->length())
		console.log($array->get($i))
		++$i
	end

	script.stop()
end

# an error has occurred
on: error
	console.log("------------------")
	console.log("base-test: Error")
	console.log("------------------")
	console.log("An error occurred")
	script.wait(1000)
end
