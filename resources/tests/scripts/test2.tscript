# if no condition is met, nothing will be executed, lol :D
on: nothing
	console.log("---------")
	console.log("Nothing")
	console.log("----------")
	console.log()
	# printHelloWorld()
	factorial(5)
	script.stop()
end
# an error has occurred
on: error
	console.log("An error occurred")
	script.wait(1000)
end

function: factorial
	console.log("factorial: " + $arguments[0])
	if ($arguments[0] == 0) 
		return(1)
	end
	return($arguments[0] * factorial($arguments[0] - 1))
end 

function: printHelloWorld
	console.log("hello world")
	printHelloWorld()
end

