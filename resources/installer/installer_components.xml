<screen id="installer_components" background-color="#ffffff" min-width="1024" min-height="768" max-width="1920" max-height="1280">
	<layout alignment="vertical" width="100%" height="100%">

		<layout padding="20" vertical-align="center" alignment="horizontal" width="100%" height="80">
			<layout vertical-align="center" alignment="vertical" width="auto" height="80">
				<text font="resources/engine/fonts/Roboto_bold_20.fnt" text="Components" color="#000000" />
				<space height="10"/>
				<layout padding-left="40" vertical-align="center" alignment="horizontal" width="auto" height="auto">
					<text font="resources/engine/fonts/Roboto_20.fnt" text="Select the components for your installation." color="#000000" />
				</layout>
			</layout>
			<space width="*"/>
			<image width="40" height="40" src="resources/installer/logo-small.png" horizontal-align="center" vertical-align="center" />
		</layout>

		<layout background-color="#000000" width="100%" height="1">
		</layout>				


			<layout background-color="#F8F8F8" padding-left="60" padding-right="10" padding-top="20" padding-bottom="20" alignment="vertical" width="100%" height="*">
				
				<text font="resources/engine/fonts/Roboto_20.fnt" text="Select the components you want to install; clear the components you do not want to install." color="#000000" />
				<text font="resources/engine/fonts/Roboto_20.fnt" text="Click Next to continue." color="#000000" />
				
				<space height="30"/>
				<layout alignment="horizontal" width="100%" height="*">
					<layout background-color="#ffffff" border="1" alignment="horizontal" width="40%" height="100%">
						<scrollarea-vertical id="scrollarea_components" width="100%" height="100%">
							<space height="10" />
							<layout width="100%" alignment="horizontal">
								<space width="10" />
								<checkbox name="checkbox_component1" value="1" selected="true" />
								<space width="10" />
								<text width="*" font="resources/engine/fonts/Roboto_20.fnt" text="Component 1" color="#000000" height="100%" vertical-align="center" />
							</layout>
							<layout width="100%" alignment="horizontal">
								<space width="10" />
								<checkbox name="checkbox_component2" value="1" selected="false" />
								<space width="10" />
								<text width="*" font="resources/engine/fonts/Roboto_20.fnt" text="Component 2" color="#000000" height="100%" vertical-align="center" />
							</layout>
						</scrollarea-vertical>
					</layout>
					
					<layout padding-left="20" padding-right="20" alignment="vertical" width="60%" height="100%">
						<text font="resources/engine/fonts/Roboto_20.fnt" text="Click on a component to get its description." color="#000000" />
						<space height="25" />
						<multiline-text id="component_description" font="resources/engine/fonts/Roboto_20.fnt" color="#000000" height="*" width="100%"/>
					</layout>
				</layout>
				
				<space height="30"/>	

			</layout>
		
		<layout background-color="#000000" width="100%" height="1">
		</layout>
		
		<layout background-color="#F8F8F8" padding="10" vertical-align="center" horizontal-align="right" alignment="horizontal" width="100%" height="60">
			<button width="100" id="button_back" text="< Back" />
			<space width="10" />
			<button width="100" id="button_next" text="Next >"/>
			<space width="20" />
			<button width="100" id="button_cancel" text="Cancel" />
		</layout>
		
	</layout>
</screen>
