<screen id="installer_welcome" background-color="{$color.element_foreground}" min-width="1024" min-height="768" max-width="1920" max-height="1280">
	<layout alignment="vertical" width="100%" height="100%">
		<layout alignment="horizontal" width="100%" height="*">
					
			<layout alignment="horizontal" width="34%" height="100%" vertical-align="center" horizontal-align="center" background-color="{$color.element_foreground}">
				<image src="resources/installer/logo.png"/>
			</layout>
			
			<layout padding="20" alignment="vertical" width="66%" height="100%">
				<text font="{$font.default}" size="20" text="Welcome to the {$name} Setup" color="{$color.font_normal}" />
				<space height="40"/>
				<text font="{$font.default}" size="16" text="This will install {$name} on your computer." color="{$color.font_normal}" />
				<space height="10" />
				<text font="{$font.default}" size="16" text="It is recommended that you close all other applications" color="{$color.font_normal}" />
				<text font="{$font.default}" size="16" text="before continuing." color="{$color.font_normal}" />
				<space height="20" />
				<text font="{$font.default}" size="16" text="Click Next to continue, or Cancel to exit Setup." color="{$color.font_normal}" />
			</layout>
					
		</layout>
		
		<layout background-color="{$color.element_frame}" width="100%" height="1">
		</layout>
		
		<layout background-color="{$color.element_foreground}" padding="10" vertical-align="center" horizontal-align="right" alignment="horizontal" width="100%" height="60">
			<button width="100" id="button_next" text="Next >"/>
			<space width="20" />
			<button width="100" id="button_cancel" text="Cancel" />
		</layout>
		
	</layout>
</screen>
