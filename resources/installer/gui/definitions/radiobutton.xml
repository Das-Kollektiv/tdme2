<template>	
	<element id="{$id}" name="{$name}" value="{$value}" selected="{$selected}" disabled="{$disabled}" focusable="true" on-change="{$on-change}" on-mouse-click="{$on-mouse-click}" on-mouse-doubleclick="{$on-mouse-doubleclick}">
		<!-- unselected, no mouse over -->
		<image effect-color-mul="#F0F0F0" hide-on="disabled,focus,selected,mouseover" src="resources/installer/gui/images/radiobutton/background.png" />
		<image effect-color-mul="#000000" hide-on="disabled,focus,selected,mouseover" src="resources/installer/gui/images/radiobutton/border.png" />
		<!-- unselected, mouse over -->
		<image effect-color-mul="#B0B0FF" hide-on="disabled,focus,selected" show-on="mouseover" src="resources/installer/gui/images/radiobutton/background.png" />
		<image effect-color-mul="#000000" hide-on="disabled,focus,selected" show-on="mouseover" src="resources/installer/gui/images/radiobutton/border.png" />
		<!-- selected, no mouse over -->
		<image effect-color-mul="#8080FF" hide-on="disabled,focus,unselected,mouseover" src="resources/installer/gui/images/radiobutton/background.png" />
		<image effect-color-mul="#000000" hide-on="disabled,focus,unselected,mouseover" src="resources/installer/gui/images/radiobutton/border.png" />
		<image effect-color-mul="#FFFFFF" hide-on="disabled,focus,unselected,mouseover" src="resources/installer/gui/images/radiobutton/dotmark.png" />
		<!-- selected, mouse over -->
		<image effect-color-mul="#8080FF" hide-on="disabled,focus,unselected" show-on="mouseover" src="resources/installer/gui/images/radiobutton/background.png" />
		<image effect-color-mul="#000000" hide-on="disabled,focus,unselected" show-on="mouseover" src="resources/installer/gui/images/radiobutton/border.png" />
		<image effect-color-mul="#FFFFFF" hide-on="disabled,focus,unselected" show-on="mouseover" src="resources/installer/gui/images/radiobutton/dotmark.png" />
		<!-- unselected, focus -->
		<image effect-color-mul="#B0B0FF" hide-on="disabled,selected" show-on="focus" src="resources/installer/gui/images/radiobutton/background.png" />
		<image effect-color-mul="#8080FF" hide-on="disabled,selected" show-on="focus" src="resources/installer/gui/images/radiobutton/border.png" />
		<!-- selected, focus -->
		<image effect-color-mul="#B0B0FF" hide-on="disabled,unselected" show-on="focus" src="resources/installer/gui/images/radiobutton/background.png" />
		<image effect-color-mul="#8080FF" hide-on="disabled,unselected" show-on="focus" src="resources/installer/gui/images/radiobutton/border.png" />
		<image effect-color-mul="#FFFFFF" hide-on="disabled,unselected" show-on="focus" src="resources/installer/gui/images/radiobutton/dotmark.png" />
		<!-- unselected, disabled -->
		<image effect-color-mul="#A0A0A0" hide-on="selected" show-on="disabled" src="resources/installer/gui/images/radiobutton/background.png" />
		<image effect-color-mul="#A0A0A0" hide-on="selected" show-on="disabled" src="resources/installer/gui/images/radiobutton/border.png" />
		<!-- selected, disabled -->
		<image effect-color-mul="#A0A0A0" hide-on="unselected" show-on="disabled" src="resources/installer/gui/images/radiobutton/background.png" />
		<image effect-color-mul="#A0A0A0" hide-on="unselected" show-on="disabled" src="resources/installer/gui/images/radiobutton/border.png" />
		<image effect-color-mul="#D0D0D0" hide-on="unselected" show-on="disabled" src="resources/installer/gui/images/radiobutton/dotmark.png" />
	</element>
</template>