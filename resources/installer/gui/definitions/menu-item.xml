<template>	
	<element id="{$id}" width="100%" height="auto" value="{$value}" disabled="{$disabled}" on-mouse-click="{$on-mouse-click}" on-mouse-doubleclick="{$on-mouse-doubleclick}">
		<!-- unselected, no mouse over -->
		<text padding-left="25" padding-top="2" padding-bottom="2" width="100%" hide-on="disabled,selected,mouseover" font="resources/installer/gui/fonts/Roboto-Light.ttf" size="20" text="{$text}" color="#000000" background-color="#FFFFFF" />
		<!-- unselected, mouse over -->
		<text padding-left="25" padding-top="2" padding-bottom="2" width="100%" hide-on="disabled,selected" show-on="mouseover" font="resources/installer/gui/fonts/Roboto-Light.ttf" size="20" text="{$text}" color="#000000" background-color="#B0B0FF" />
		<!-- selected, no mouse over -->
		<text padding-left="25" padding-top="2" padding-bottom="2" width="100%" hide-on="disabled,unselected,mouseover" font="resources/installer/gui/fonts/Roboto-Light.ttf" size="20" text="{$text}" color="#ffffff" background-color="#B0B0FF" />
		<!-- selected, mouse over -->
		<text padding-left="25" padding-top="2" padding-bottom="2" width="100%" hide-on="disabled,unselected" show-on="mouseover" font="resources/installer/gui/fonts/Roboto-Light.ttf" size="20" text="{$text}" color="#FFFFFF" background-color="#B0B0FF" />
		<!-- unselected, disabled -->
		<text padding-left="25" padding-top="2" padding-bottom="2" width="100%" hide-on="selected" show-on="disabled" font="resources/installer/gui/fonts/Roboto-Light.ttf" size="20" text="{$text}" color="#D0D0D0" background-color="#FFFFFF" />
		<!-- selected, disabled -->
		<text padding-left="25" padding-top="2" padding-bottom="2" width="100%" hide-on="unselected" show-on="disabled" font="resources/installer/gui/fonts/Roboto-Light.ttf" size="20" text="{$text}" color="#D0D0D0" background-color="#B0B0FF" />
	</element>
</template>