<screen id="installer_finished" background-color="{$color.font_highlight}" min-width="1024" min-height="768" max-width="1920" max-height="1280">
	<layout alignment="vertical" width="100%" height="100%">
		<layout alignment="horizontal" width="100%" height="*">
					
			<layout alignment="horizontal" width="34%" height="100%" vertical-align="center" horizontal-align="center">
				<image src="resources/installer/logo.png"/>
			</layout>
			
			<layout padding="20" alignment="vertical" width="67%" height="100%">
				<text font="resources/engine/fonts/Roboto-Bold.ttf" size="30" text="Completing the {$name} Setup Wizard" color="#000000" />
				<space height="40"/>
				<text font="resources/engine/fonts/Roboto-Regular.ttf" size="20" text="Setup has finished installing {$name} on your computer." color="#000000" />
				<space height="10"/>
				<text font="resources/engine/fonts/Roboto-Regular.ttf" size="20" text="The application may be launched by selecting the installed" color="#000000" />
				<text font="resources/engine/fonts/Roboto-Regular.ttf" size="20" text="shortcuts." color="#000000" />
				<space height="20" />
				<text font="resources/engine/fonts/Roboto-Regular.ttf" size="20" text="Click Finish to exit Setup." color="#000000" />
				<space height="40" />
				<layout alignment="horizontal" width="auto" height="20">
					<checkbox id="checkbox_launch" value="1" selected="true" />
					<space width="10" />
					<text font="resources/engine/fonts/Roboto-Regular.ttf" size="20" text="Launch {$name}" color="#000000" />
				</layout>
				
			</layout>
					
		</layout>
		
		<layout background-color="#000000" width="100%" height="1">
		</layout>
		
		<layout background-color="#F8F8F8" padding="10" vertical-align="center" horizontal-align="right" alignment="horizontal" width="100%" height="60">
			<button width="100" id="button_finish" text="Finish" />
		</layout>
		
	</layout>
</screen>
