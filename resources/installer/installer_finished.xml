<screen id="installer_finished" background-color="{$color.element_foreground}" min-width="1024" min-height="768" max-width="1920" max-height="1280">
	<layout alignment="vertical" width="100%" height="100%">
		<layout alignment="horizontal" width="100%" height="*">
					
			<layout alignment="horizontal" width="34%" height="100%" vertical-align="center" horizontal-align="center">
				<image src="resources/installer/logo.png"/>
			</layout>
			
			<layout padding="20" alignment="vertical" width="67%" height="100%">
				<text font="{$font.default}" size="20" text="Completing the {$name} Setup Wizard" color="{$color.font_normal}" />
				<space height="40"/>
				<text font="{$font.default}" size="16" text="Setup has finished installing {$name} on your computer." color="{$color.font_normal}"/>
				<space height="10"/>
				<text font="{$font.default}" size="16" text="The application may be launched by selecting the installed" color="{$color.font_normal}" />
				<text font="{$font.default}" size="16" text="shortcuts." color="{$color.font_normal}" />
				<space height="20" />
				<text font="{$font.default}" size="16" text="Click Finish to exit Setup." color="{$color.font_normal}"/>
				<space height="40" />
				<layout alignment="horizontal" width="auto" height="20">
					<checkbox id="checkbox_launch" value="1" selected="true" />
					<space width="10" />
					<text font="{$font.default}" size="16" text="Launch {$name}" color="{$color.font_normal}" />
				</layout>
				
			</layout>
					
		</layout>
		
		<layout background-color="{$color.element_frame}" width="100%" height="1">
		</layout>
		
		<layout background-color="{$color.element_foreground}" padding="10" vertical-align="center" horizontal-align="right" alignment="horizontal" width="100%" height="60">
			<button width="100" id="button_finish" text="Finish" />
		</layout>
		
	</layout>
</screen>
