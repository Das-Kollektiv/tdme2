<screen id="installer_installing" background-color="{$color.font_highlight}" min-width="1024" min-height="768" max-width="1920" max-height="1280">
	<layout alignment="vertical" width="100%" height="100%">

		<layout padding="20" vertical-align="center" alignment="horizontal" width="100%" height="80">
			<layout vertical-align="center" alignment="vertical" width="auto" height="80">
				<text font="resources/installer/gui/fonts/Roboto-Regular.ttf" size="20" text="Installing" color="#000000" />
				<space height="10"/>
				<layout padding-left="40" vertical-align="center" alignment="horizontal" width="auto" height="auto">
					<text font="resources/installer/gui/fonts/Roboto-Light.ttf" size="20" text="Please wait while Setup installs {$name} on your computer." color="#000000" />
				</layout>
			</layout>
			<space width="*"/>
			<image width="40" height="40" src="resources/installer/logo-small.png" horizontal-align="center" vertical-align="center" />
		</layout>

		<layout background-color="#000000" width="100%" height="1">
		</layout>				

		<layout background-color="#F8F8F8" padding-left="60" padding-right="60" padding-top="20" padding-bottom="20" alignment="vertical" width="100%" height="*">
		
			<text id="message" font="resources/installer/gui/fonts/Roboto-Light.ttf" size="20" text="$InstallMessage..." color="#000000" />
			<space height="10"/>
			<text id="details" font="resources/installer/gui/fonts/Roboto-Light.ttf" size="20" text="$CurrentFilePath" color="#000000" />
			<space height="20"/>
			
			<progress-bar id="progressbar" width="100%" height="32" value="0.5" text-on="true" />	
			
		</layout>
		
		<layout background-color="#000000" width="100%" height="1">
		</layout>
		
		<layout background-color="#F8F8F8" padding="10" vertical-align="center" horizontal-align="right" alignment="horizontal" width="100%" height="60">
			<button width="100" id="button_cancel" text="Cancel" />
		</layout>
		
	</layout>
</screen>
