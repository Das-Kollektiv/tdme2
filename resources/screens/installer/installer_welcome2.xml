<screen id="test" background-color="#ffffff">
	<layout alignment="vertical" width="100%" height="100%">
		<layout alignment="horizontal" width="100%" height="*">
					
			<layout alignment="horizontal" width="34%" height="100%">
				<image src="resources/screens/installer/images/logo.png"/>
			</layout>
			
			<layout padding="20" alignment="vertical" width="66%" height="100%">
				<text font="resources/gui-system/fonts/Roboto_20.fnt" text="Welcome to the {$name} Setup" color="#000000" />
				<space height="40" />
				<text font="resources/gui-system/fonts/Roboto_20.fnt" text="{$name} is already installed on your computer." color="#000000" />
				<space height="80" />
				<layout alignment="vertical" horizontal-align="center" width="100%" height="100%">
					<button width="200" height="50" id="button_update" text="Update"/>
					<space height="40" />				
					<button width="200" height="50" id="button_repair" text="Repair"/>
					<space height="20" />
					<button width="200" height="50" id="button_uninstall" text="Uninstall"/>
				</layout>
			</layout>
					
		</layout>
		
		<layout background-color="#000000" width="100%" height="1">
		</layout>
		
		<layout background-color="#F8F8F8" padding="10" vertical-align="center" horizontal-align="right" alignment="horizontal" width="100%" height="60">
			<button width="100" id="button_cancel" text="Cancel" />
		</layout>
		
	</layout>
</screen>
