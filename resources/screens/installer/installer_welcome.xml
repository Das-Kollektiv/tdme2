<screen id="installer_welcome" background-color="#ffffff" min-width="1024" min-height="768" max-width="1920" max-height="1280">
	<layout alignment="vertical" width="100%" height="100%">
		<layout alignment="horizontal" width="100%" height="*">
					
			<layout alignment="horizontal" width="34%" height="100%">
				<image src="resources/screens/installer/images/logo.png"/>
			</layout>
			
			<layout padding="20" alignment="vertical" width="66%" height="100%">
				<text font="resources/gui-system/fonts/Roboto_bold_30.fnt" text="Welcome to the {$name} Setup" color="#000000" />
				<space height="40"/>
				<text font="resources/gui-system/fonts/Roboto_20.fnt" text="This will install {$name} on your computer." color="#000000" />
				<space height="10" />
				<text font="resources/gui-system/fonts/Roboto_20.fnt" text="It is recommended that you close all other applications" color="#000000" />
				<text font="resources/gui-system/fonts/Roboto_20.fnt" text="before continuing." color="#000000" />
				<space height="20" />
				<text font="resources/gui-system/fonts/Roboto_20.fnt" text="Click Next to continue, or Cancel to exit Setup." color="#000000" />
			</layout>
					
		</layout>
		
		<layout background-color="#000000" width="100%" height="1">
		</layout>
		
		<layout background-color="#F8F8F8" padding="10" vertical-align="center" horizontal-align="right" alignment="horizontal" width="100%" height="60">
			<button width="100" id="button_next" text="Next >"/>
			<space width="20" />
			<button width="100" id="button_cancel" text="Cancel" />
		</layout>
		
	</layout>
</screen>
