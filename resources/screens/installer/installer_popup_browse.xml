<screen id="test" background-color="#F8F8F8">
	<layout alignment="vertical" width="100%" height="100%">		

		<layout padding-top="20" padding-bottom="10" padding-left="30" padding-right="30" alignment="vertical" width="100%" height="*">
			<text font="resources/gui-system/fonts/Roboto_20.fnt" text="Select a folder in the list below, then click OK." color="#000000" />
			<space height="20"/>
			<layout background-color="#ffffff" vertical-align="center" alignment="horizontal" width="100%" height="auto">
				<input id="input-path" width="100%" maxlength="120" text="C:\Progamm Files\$Name" />
			</layout>
			<space height="20"/>
			<layout background-color="#ffffff" border="1" alignment="horizontal" width="100%" height="*">
				<scrollarea-vertical id="scrollarea_browse" width="100%" height="100%">
				</scrollarea-vertical>
			</layout>			
		</layout>
		
		<layout padding="10" vertical-align="center" horizontal-align="right" alignment="horizontal" width="100%" height="60">
			<button width="100" id="button_ok" text="OK"/>
			<space width="10" />
			<button width="100" id="button_cancel" text="Cancel" />
		</layout>
		
	</layout>
</screen>
