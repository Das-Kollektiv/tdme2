<element id="{$id}" width="auto" height="auto" background-color="#ffffff" border-color="#000000" name="{$name}" disabled="{$disabled}" focusable="false" on-change="{$on-change}" on-mouse-click="{$on-mouse-click}" on-mouse-doubleclick="{$on-mouse-doubleclick}">
	<layout alignment="vertical" width="auto">
		<layer width="auto" height="auto">
			<!-- unselected, no mouse over -->
			<text padding-top="5" padding-bottom="5" padding-left="15" padding-right="15" width="auto" hide-on="disabled,selected,mouseover" font="resources/gui-system/fonts/Roboto_20.fnt" text="{$text}" color="#000000" background-color="#FFFFFF" />
			<!-- unselected, mouse over -->
			<text padding-top="5" padding-bottom="5" padding-left="15" padding-right="15" width="auto" hide-on="disabled,selected" show-on="mouseover" font="resources/gui-system/fonts/Roboto_20.fnt" text="{$text}" color="#000000" background-color="#B0B0FF" />
			<!-- selected, no mouse over -->
			<text padding-top="5" padding-bottom="5" padding-left="15" padding-right="15" width="auto" hide-on="disabled,unselected,mouseover" font="resources/gui-system/fonts/Roboto_20.fnt" text="{$text}" color="#ffffff" background-color="#B0B0FF" />
			<!-- selected, mouse over -->
			<text padding-top="5" padding-bottom="5" padding-left="15" padding-right="15" width="auto" hide-on="disabled,unselected" show-on="mouseover" font="resources/gui-system/fonts/Roboto_20.fnt" text="{$text}" color="#FFFFFF" background-color="#B0B0FF" />
			<!-- unselected, disabled -->
			<text padding-top="5" padding-bottom="5" padding-left="15" padding-right="15" width="auto" hide-on="selected" show-on="disabled" font="resources/gui-system/fonts/Roboto_20.fnt" text="{$text}" color="#D0D0D0" background-color="#FFFFFF" />
			<!-- selected, disabled -->
			<text padding-top="5" padding-bottom="5" padding-left="15" padding-right="15" width="auto" hide-on="unselected" show-on="disabled" font="resources/gui-system/fonts/Roboto_20.fnt" text="{$text}" color="#D0D0D0" background-color="#B0B0FF" />
		</layer>
		<layout id="{$id}_inner" border="1" padding-top="5" padding-bottom="5" border-color="#000000" width="200" height="auto" alignment="vertical" show-on="opened" flow="floating" background-color="#FFFFFF">
			{__InnerXML__}
		</layout>
	</layout>
</element>
