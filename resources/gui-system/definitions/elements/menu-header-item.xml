<element id="{$id}" width="auto" height="20" name="{$name}" disabled="{$disabled}" focusable="false" on-change="{$on-change}" on-mouse-click="{$on-mouse-click}" on-mouse-doubleclick="{$on-mouse-doubleclick}">
	<layout alignment="vertical" width="auto">
		<layer width="auto" height="auto">
			<!-- unselected, no mouse over -->
			<text padding-top="5" padding-bottom="5" padding-right="30" width="auto" hide-on="disabled,selected,mouseover" font="resources/gui-system/fonts/Roboto_14_mono.fnt" text="{$text}" color="#C0C0C0" />
			<!-- unselected, mouse over -->
			<text padding-top="5" padding-bottom="5" padding-right="30" width="auto" hide-on="disabled,selected" show-on="mouseover" font="resources/gui-system/fonts/Roboto_14_mono.fnt" text="{$text}" color="#F0F0F0" />
			<!-- selected, no mouse over -->
			<text padding-top="5" padding-bottom="5" padding-right="30" width="auto" hide-on="disabled,unselected,mouseover" font="resources/gui-system/fonts/Roboto_14_mono.fnt" text="{$text}" color="#F0F0F0"/>
			<!-- selected, mouse over -->
			<text padding-top="5" padding-bottom="5" padding-right="30" width="auto" hide-on="disabled,unselected" show-on="mouseover" font="resources/gui-system/fonts/Roboto_14_mono.fnt" text="{$text}" color="#F0F0F0" />
			<!-- unselected, disabled -->
			<text padding-top="5" padding-bottom="5" padding-right="30" width="auto" hide-on="selected" show-on="disabled" font="resources/gui-system/fonts/Roboto_14_mono.fnt" text="{$text}" color="#D9D9D9" />
			<!-- selected, disabled -->
			<text padding-top="5" padding-bottom="5" padding-right="30" width="auto" hide-on="unselected" show-on="disabled" font="resources/gui-system/fonts/Roboto_14_mono.fnt" text="{$text}" color="#F0F0F0" />
		</layer>
		<layout id="{$id}_inner" border="1" padding-top="5" padding-bottom="5" border-color="#000000" width="200" height="auto" alignment="vertical" show-on="opened" flow="floating" background-color="#585858">
			{__InnerXML__}
		</layout>
	</layout>
</element>
