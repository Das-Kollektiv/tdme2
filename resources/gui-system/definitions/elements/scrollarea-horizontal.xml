<layout show-on="{$show-on}" hide-on="{$hide-on}" id="{$id}" width="{$width}" height="{$height}" alignment="vertical" background-color="{$background-color}" border="{$border}" border-color="{$border-color}" padding="{$padding}">
	<layout id="{$id}_inner" horizontal-align="{$horizontal-align}" vertical-align="{$vertical-align}" alignment="{$alignment}" overflow-x="scroll" width="100%" height="*">
		{$innerXml}
	</layout>
	<layout id="{$id}_scrollbar_horizontal_layout" alignment="horizontal" width="100%" height="auto" background-color="white">
		<element id="{$id}_scrollbar_horizontal_layout_left" border="1" border-color="#8080A0" width="24" height="24" horizontal-align="center" vertical-align="center" focusable="true">
			<!-- no mouse over -->
			<image effect-color-mul="#8080A0" hide-on="focus,mouseover" src="resources/gui-system/images/elements/scrollarea/arrow-left.png" horizontal-align="center" vertical-align="center" />
			<!-- mouse over -->
			<image effect-color-mul="#8080FF" hide-on="focus" src="resources/gui-system/images/elements/scrollarea/arrow-left.png" horizontal-align="center" vertical-align="center" />
			<!-- focus -->
			<image effect-color-mul="#FF4040" show-on="focus" hide-on="click" src="resources/gui-system/images/elements/scrollarea/arrow-left.png" horizontal-align="center" vertical-align="center" />
			<!-- click -->
			<image effect-color-mul="#FF8080" show-on="click" src="resources/gui-system/images/elements/scrollarea/arrow-left.png" horizontal-align="center" vertical-align="center" />
		</element>
		<horizontal-scrollbar-internal id="{$id}_scrollbar_horizontal_layout_bar" border-top="1" border-bottom="1" border-color="#8080A0" width="*" height="100%" color-none="#8080A0" color-mouseover="#8080FF" color-dragging="#FF8080" />
		<element id="{$id}_scrollbar_horizontal_layout_right" border="1" border-color="#8080A0" width="24" height="24" horizontal-align="center" vertical-align="center" focusable="true">
			<!-- no mouse over -->
			<image effect-color-mul="#8080A0" hide-on="focus,mouseover" src="resources/gui-system/images/elements/scrollarea/arrow-right.png" horizontal-align="center" vertical-align="center" />
			<!-- mouse over -->
			<image effect-color-mul="#8080FF" hide-on="focus" src="resources/gui-system/images/elements/scrollarea/arrow-right.png" horizontal-align="center" vertical-align="center" />
			<!-- focus -->
			<image effect-color-mul="#FF4040" show-on="focus" src="resources/gui-system/images/elements/scrollarea/arrow-right.png" horizontal-align="center" vertical-align="center" />
			<!-- click -->
			<image effect-color-mul="#FF8080" show-on="click" src="resources/gui-system/images/elements/scrollarea/arrow-right.png" horizontal-align="center" vertical-align="center" />
		</element>
	</layout>
</layout>