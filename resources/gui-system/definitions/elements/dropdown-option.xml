<element id="{$id}" width="100%" height="auto" value="{$value}" selected="{$selected}" on-mouse-click="{$on-mouse-click}" ignore-events="true">
	<!-- unselected, no mouse over -->
	<text id="{$id}_unselected" padding-top="2" padding-bottom="2" width="100%" hide-on="selected,mouseover" font="resources/gui-system/fonts/Roboto_20.fnt" text="{$text}" color="#000000" background-color="#F0F0F0" />
	<!-- unselected, mouse over -->
	<text id="{$id}_unselected,mouseover" padding-top="2" padding-bottom="2" width="100%" hide-on="selected" show-on="mouseover" font="resources/gui-system/fonts/Roboto_20.fnt" text="{$text}" color="#000000" background-color="#B0B0FF" />
	<!-- selected, no mouse over -->
	<text id="{$id}_selected" padding-top="2" padding-bottom="2" width="100%" hide-on="unselected,mouseover" font="resources/gui-system/fonts/Roboto_20.fnt" text="{$text}" color="#ffffff" background-color="#B0B0FF" />
	<!-- selected, mouse over -->
	<text id="{$id}_selected,mouseover" padding-top="2" padding-bottom="2" width="100%" hide-on="unselected" show-on="mouseover" font="resources/gui-system/fonts/Roboto_20.fnt" text="{$text}" color="#ffffff" background-color="#B0B0FF" />
</element>
