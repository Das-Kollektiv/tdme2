<element id="{$id}" width="100%" height="auto" value="{$value}" selected="{$selected}" on-mouse-click="{$on-mouse-click}" on-mouse-doubleclick="{$on-mouse-doubleclick}">
	<!-- unselected, no mouse over -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="disabled,selected,mouseover" font="resources/gui-system/fonts/Roboto_14_mono.fnt" text="{$text}" color="#F0F0F0" />
	<!-- unselected, mouse over -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="disabled,selected" show-on="mouseover" font="resources/gui-system/fonts/Roboto_14_mono.fnt" text="{$text}" color="#F0F0F0" background-color="#5680C2" />
	<!-- selected, no mouse over -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="disabled,unselected,mouseover" font="resources/gui-system/fonts/Roboto_14_mono.fnt" text="{$text}" color="#F0F0F0" />
	<!-- selected, mouse over -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="disabled,unselected" show-on="mouseover" font="resources/gui-system/fonts/Roboto_14_mono.fnt" text="{$text}" color="#F0F0F0" background-color="#5680C2" />
	<!-- unselected, disabled -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="selected" show-on="disabled" font="resources/gui-system/fonts/Roboto_14_mono.fnt" text="{$text}" color="#D9D9D9" />
	<!-- selected, disabled -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="unselected" show-on="disabled" font="resources/gui-system/fonts/Roboto_14_mono.fnt" text="{$text}" color="#D9D9D9" />
</element>
