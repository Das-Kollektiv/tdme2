<element id="{$id}" width="100%" height="auto" value="{$value}" selected="{$selected}">
	<!-- unfocused, unselected, no mouse over -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="disabled,focussed,selected,mouseover" font="resources/gui/fonts/Foo_20.fnt" text="{$text}" color="#000000" background-color="#F0F0F0" />
	<!-- unfocused, unselected, mouse over -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="disabled,focussed,selected" show-on="mouseover" font="resources/gui/fonts/Foo_20.fnt" text="{$text}" color="#000000" background-color="#B0B0FF" />
	<!-- unfocused, selected, no mouse over -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="disabled,focussed,unselected,mouseover" font="resources/gui/fonts/Foo_20.fnt" text="{$text}" color="#FFFFFF" background-color="#8080FF" />
	<!-- unfocused, selected, mouse over -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="disabled,focussed,unselected" show-on="mouseover" font="resources/gui/fonts/Foo_20.fnt" text="{$text}" color="#FFFFFF" background-color="#B0B0FF" />
	<!-- focussed, unselected -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="disabled,selected" show-on="focussed" font="resources/gui/fonts/Foo_20.fnt" text="{$text}" background-color="#B0B0FF" color="#000000" />
	<!-- focussed, selected -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="disabled,unselected" show-on="focussed" font="resources/gui/fonts/Foo_20.fnt" text="{$text}" background-color="#B0B0FF" color="#FFFFFF" />
	<!-- disabled, unselected -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="selected" show-on="disabled" font="resources/gui/fonts/Foo_20.fnt" text="{$text}" color="#D0D0D0" background-color="#A0A0A0" />
	<!-- disabled, selected -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="unselected" show-on="disabled" font="resources/gui/fonts/Foo_20.fnt" text="{$text}" color="#D0D0D0" background-color="#808080" />
</element>
