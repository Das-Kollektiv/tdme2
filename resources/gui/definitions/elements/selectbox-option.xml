<element id="{$id}" width="100%" height="auto" value="{$value}" selected="{$selected}">
	<!-- unselected, no mouse over -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="disabled,selected,mouseover" font="resources/gui/fonts/Foo_20.fnt" text="{$text}" color="#000000" background-color="#F0F0F0" />
	<!-- unselected, mouse over -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="disabled,selected" show-on="mouseover" font="resources/gui/fonts/Foo_20.fnt" text="{$text}" color="#000000" background-color="#B0B0FF" />
	<!-- selected, no mouse over -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="disabled,unselected,mouseover" font="resources/gui/fonts/Foo_20.fnt" text="{$text}" color="#ffffff" background-color="#B0B0FF" />
	<!-- selected, mouse over -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="disabled,unselected" show-on="mouseover" font="resources/gui/fonts/Foo_20.fnt" text="{$text}" color="#FFFFFF" background-color="#B0B0FF" />
	<!-- unselected, disabled -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="selected" show-on="disabled" font="resources/gui/fonts/Foo_20.fnt" text="{$text}" color="#D0D0D0" background-color="#808080" />
	<!-- selected, disabled -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="unselected" show-on="disabled" font="resources/gui/fonts/Foo_20.fnt" text="{$text}" color="#D0D0D0" background-color="#A0A0A0" />
</element>
