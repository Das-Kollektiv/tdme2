<layout show-on="{$show-on}" hide-on="{$hide-on}" id="{$id}" width="{$width}" height="{$height}" alignment="horizontal" background-color="{$background-color}" border="{$border}" border-color="{$border-color}" padding="{$padding}">
	<layout id="{$id}_inner" horizontal-align="{$horizontal-align}" vertical-align="{$vertical-align}" alignment="{$alignment}" overflow-y="scroll" width="*" height="100%">
		{$innerXml}
	</layout>
	<layout id="{$id}_scrollbar_vertical_layout" alignment="vertical" width="auto" height="100%"  background-color="white">
		<element id="{$id}_scrollbar_vertical_layout_up" border="1" border-color="#8080A0" width="24" height="24" horizontal-align="center" vertical-align="center" focusable="true">
			<!-- no mouse over -->
			<image effect-color-mul="#8080A0" hide-on="focus,mouseover" src="resources/gui/images/elements/scrollarea/arrow-up.png" horizontal-align="center" vertical-align="center" />
			<!-- mouse over -->
			<image effect-color-mul="#8080FF" hide-on="focus" src="resources/gui/images/elements/scrollarea/arrow-up.png" horizontal-align="center" vertical-align="center" />
			<!-- focus -->
			<image effect-color-mul="#FF4040" show-on="focus" hide-on="click" src="resources/gui/images/elements/scrollarea/arrow-up.png" horizontal-align="center" vertical-align="center" />
			<!-- click -->
			<image effect-color-mul="#FF8080" show-on="click" src="resources/gui/images/elements/scrollarea/arrow-up.png" horizontal-align="center" vertical-align="center" />
		</element>
		<vertical-scrollbar-internal id="{$id}_scrollbar_vertical_layout_bar" border-left="1" border-right="1" border-color="#8080A0" width="100%" height="*" color-none="#8080A0" color-mouseover="#8080FF" color-dragging="#FF8080" />
		<element id="{$id}_scrollbar_vertical_layout_down" border="1" border-color="#8080A0" width="24" height="24" horizontal-align="center" vertical-align="center" focusable="true">
			<!-- no mouse over -->
			<image effect-color-mul="#8080A0" hide-on="focus,mouseover" src="resources/gui/images/elements/scrollarea/arrow-down.png" horizontal-align="center" vertical-align="center" />
			<!-- mouse over -->
			<image effect-color-mul="#8080FF" hide-on="focus" src="resources/gui/images/elements/scrollarea/arrow-down.png" horizontal-align="center" vertical-align="center" />
			<!-- focus -->
			<image effect-color-mul="#FF4040" show-on="focus" src="resources/gui/images/elements/scrollarea/arrow-down.png" horizontal-align="center" vertical-align="center" />
			<!-- click -->
			<image effect-color-mul="#FF8080" show-on="click" src="resources/gui/images/elements/scrollarea/arrow-down.png" horizontal-align="center" vertical-align="center" />
		</element>
	</layout>
</layout>