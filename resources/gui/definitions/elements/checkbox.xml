<element id="{$id}" name="{$name}" value="{$value}" selected="{$selected}" disabled="{$disabled}" focusable="true">
	<!-- unchecked, no mouse over -->
	<image effect-color-mul="#F0F0F0" hide-on="disabled,focus,checked,mouseover" src="resources/gui/images/elements/checkbox/background.png" />
	<image effect-color-mul="#000000" hide-on="disabled,focus,checked,mouseover" src="resources/gui/images/elements/checkbox/border.png" />
	<!-- unchecked, mouse over -->
	<image effect-color-mul="#B0B0FF" hide-on="disabled,focus,checked" show-on="mouseover" src="resources/gui/images/elements/checkbox/background.png" />
	<image effect-color-mul="#000000" hide-on="disabled,focus,checked" show-on="mouseover" src="resources/gui/images/elements/checkbox/border.png" />
	<!-- checked, no mouse over -->
	<image effect-color-mul="#8080FF" hide-on="disabled,focus,unchecked,mouseover" src="resources/gui/images/elements/checkbox/background.png" />
	<image effect-color-mul="#000000" hide-on="disabled,focus,unchecked,mouseover" src="resources/gui/images/elements/checkbox/border.png" />
	<image effect-color-mul="#FFFFFF" hide-on="disabled,focus,unchecked,mouseover" src="resources/gui/images/elements/checkbox/squaremark.png" />
	<!-- checked, mouse over -->
	<image effect-color-mul="#B0B0FF" hide-on="disabled,focus,unchecked" show-on="mouseover" src="resources/gui/images/elements/checkbox/background.png" />
	<image effect-color-mul="#000000" hide-on="disabled,focus,unchecked" show-on="mouseover" src="resources/gui/images/elements/checkbox/border.png" />
	<image effect-color-mul="#FFFFFF" hide-on="disabled,focus,unchecked" show-on="mouseover" src="resources/gui/images/elements/checkbox/squaremark.png" />
	<!-- unchecked, focus -->
	<image effect-color-mul="#B0B0FF" hide-on="disabled,checked" show-on="focus" src="resources/gui/images/elements/checkbox/background.png" />
	<image effect-color-mul="#8080FF" hide-on="disabled,checked" show-on="focus" src="resources/gui/images/elements/checkbox/border.png" />
	<!-- checked, focus -->
	<image effect-color-mul="#B0B0FF" hide-on="disabled,unchecked" show-on="focus" src="resources/gui/images/elements/checkbox/background.png" />
	<image effect-color-mul="#8080FF" hide-on="disabled,unchecked" show-on="focus" src="resources/gui/images/elements/checkbox/border.png" />
	<image effect-color-mul="#FFFFFF" hide-on="disabled,unchecked" show-on="focus" src="resources/gui/images/elements/checkbox/squaremark.png" />
	<!-- unchecked, disabled -->
	<image effect-color-mul="#A0A0A0" hide-on="checked" show-on="disabled" src="resources/gui/images/elements/checkbox/background.png" />	
	<image effect-color-mul="#A0A0A0" hide-on="checked" show-on="disabled" src="resources/gui/images/elements/checkbox/border.png" />
	<!-- checked, disabled -->
	<image effect-color-mul="#A0A0A0" hide-on="unchecked" show-on="disabled" src="resources/gui/images/elements/checkbox/background.png" />
	<image effect-color-mul="#A0A0A0" hide-on="unchecked" show-on="disabled" src="resources/gui/images/elements/checkbox/border.png" />
	<image effect-color-mul="#A0A0A0" hide-on="unchecked" show-on="disabled" src="resources/gui/images/elements/checkbox/squaremark.png" />
</element>
