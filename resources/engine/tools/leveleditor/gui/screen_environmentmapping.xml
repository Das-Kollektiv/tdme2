<screen id="screen_environmentmapping" background-color="#00000000" min-width="1024" min-height="768" max-width="1920" max-height="1080">
	<layout alignment="vertical" width="100%" height="100%">
		<panel alignment="none" width="100%" height="30" padding="5" vertical-align="center">
			<text id="screen_caption" font="resources/gui-system/fonts/Roboto_20.fnt" text="Level Editor" width="100%" horizontal-align="center" height="auto" />
		</panel>
		<element id="viewport" width="100%" height="*" border="1" border-color="#000000" focusable="true" ignore-events="true" />
		<panel width="100%" height="200">
			<tabs alignment="vertical" width="100%" height="100%">
				<tabs-header>
					<tab id="tab_properties_base" text="Environment Mapping" />
					<tab id="tab_properties_model_properties" text="Properties" />
					<tab id="tab_properties_dimension" text="Dimension" />
					<tab id="tab_properties_generation" text="Generation" />
				</tabs-header>
				<tabs-content>
					<tab-content tab-id="tab_properties_base" vertical-align="center">
						<layout width="auto" height="auto" alignment="vertical">
							<layout width="auto" height="auto" alignment="horizontal" vertical-align="center">
								<text font="resources/gui-system/fonts/Roboto_20.fnt" text="Name" width="200" height="auto"/>
								<space width="5" />
								<input id="entity_name" name="entity_name" width="200" height="auto" text="Name" />
							</layout>
							<space height="5" />
							<layout width="auto" height="auto" alignment="horizontal" vertical-align="center">
								<text font="resources/gui-system/fonts/Roboto_20.fnt" text="Description" width="200" height="auto"/>
								<space width="5" />
								<input id="entity_description" name="entity_description" width="200" height="auto" text="Description" />
							</layout>
							<space height="20" />
							<layout width="100%" height="auto" alignment="none" horizontal-align="center">
								<button id="button_entity_apply" name="button_entity_apply" text="Apply" />
							</layout>
						</layout>
					</tab-content>
					<tab-content tab-id="tab_properties_model_properties" vertical-align="center">
						<layout width="auto" height="auto" alignment="horizontal">
							<layout width="auto" height="auto" alignment="vertical">
								<layout width="auto" height="auto" alignment="horizontal">
									<dropdown id="entity_properties_presets" name="entity_properties_presets" width="510" height="auto" text="Test">
										<dropdown-option text="Test 1" value="1" />										
									</dropdown>
									<space width="10" />
									<button id="button_entity_properties_presetapply" name="button_entity_properties_presetapply" text="Apply" width="80" />
								</layout>
								<space height="10" />
								<selectbox id="entity_properties_listbox" name="entity_properties_listbox" height="70">
								</selectbox>
								<space height="10" />
								<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
									<text font="resources/gui-system/fonts/Roboto_20.fnt" text="Name" width="45" height="auto"/>
									<space width="*" />
									<input id="entity_property_name" name="entity_property_name" width="240" height="auto" text="Name" />
									<space width="*" />
									<text font="resources/gui-system/fonts/Roboto_20.fnt" text="Value" width="45" height="auto"/>
									<space width="*" />
									<input id="entity_property_value" name="entity_property_value" width="240" height="auto" text="Value" />
								</layout>
							</layout>
							<space width="20" />
							<layout width="auto" height="auto" alignment="vertical">
								<button id="button_entity_properties_add" name="button_entity_properties_add" text="Add" width="80" />
								<space height="5" />
								<button id="button_entity_properties_remove" name="button_entity_properties_remove" text="Remove" width="80" />
								<space height="5" />
								<button id="button_entity_properties_save" name="button_entity_properties_save" text="Save" width="80" />
							</layout>
						</layout>
					</tab-content>
					<tab-content tab-id="tab_properties_dimension">
						<template src="resources/engine/tools/shared/gui/template_boundingvolume.xml" boundingvolume-id="0" />
					</tab-content>
					<tab-content tab-id="tab_properties_generation">
						<scrollarea-vertical width="100%" height="100%">
							<space height="20" />
							<layout width="100%" height="auto" horizontal-align="center" alignment="vertical">
								<layout width="auto" height="auto" alignment="horizontal" vertical-align="top">
									<text font="resources/gui-system/fonts/Roboto_20.fnt" text="Render pass." width="100" height="auto" />
									<space width="5" />
									<selectbox-multiple id="generation_renderpass" name="generation_renderpass" width="200" height="auto">
										<selectbox-multiple-option text="No frustum culling" value="1" />
										<selectbox-multiple-option text="Terrain" value="2" />
										<selectbox-multiple-option text="Water" value="4" />
										<selectbox-multiple-option text="Standard" value="8" />
										<selectbox-multiple-option text="Post processing" value="16" />
									</selectbox-multiple>
								</layout>
								<space height="5" />
								<layout width="auto" height="auto" alignment="horizontal" vertical-align="center">
									<text font="resources/gui-system/fonts/Roboto_20.fnt" text="Frequency" width="100" height="auto" />
									<space width="5" />
									<dropdown id="generation_frequency" name="generation_frequency" width="200" height="auto" text="One time only">
										<dropdown-option text="One time only" value="" />
										<dropdown-option text="Every frame" value="0" />
										<dropdown-option text="32ms" value="32" />
										<dropdown-option text="64ms" value="64" />
										<dropdown-option text="100ms" value="100" />
										<dropdown-option text="250ms" value="250" />
										<dropdown-option text="500ms" value="500" />
										<dropdown-option text="750ms" value="750" />
										<dropdown-option text="1000ms" value="1000" />
									</dropdown>
								</layout>
								<space height="20" />
								<layout width="auto" height="auto" alignment="none" horizontal-align="center">
									<button id="button_generation_apply" name="button_generation_apply" text="Apply" />
								</layout>
								<space height="20" />
							</layout>
						</scrollarea-vertical>
					</tab-content>
				</tabs-content>
			</tabs>
		</panel>
	</layout>
</screen>
