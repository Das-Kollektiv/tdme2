<scrollarea-vertical width="100%" height="100%">
	<layout alignment="vertical" width="100%" height="auto" horizontal-align="center">
		<space height="20" />
		<layout width="auto" height="auto" alignment="horizontal">
			<dropdown id="presets_light{$light-id}" name="presets_light{$light-id}" width="530" height="auto" text="Test">
				<dropdown-option text="Test 1" value="1" />
			</dropdown>
			<space width="10" />
			<button id="button_light{$light-id}_presetapply" name="button_light{$light-id}_presetapply" text="Apply" width="80" />
		</layout>
		<space height="20" />
		<layout alignment="horizontal" width="auto" height="auto">
			<layout width="auto" height="auto" alignment="horizontal" vertical-align="center">
				<text font="resources/gui-system/fonts/Roboto_20.fnt" text="Ambient" width="145" height="auto"/>
				<space width="5" />
				<input id="light{$light-id}_ambient" name="light{$light-id}_ambient" width="150" height="auto" text="Ambient" />
				<space width="20" />
				<text font="resources/gui-system/fonts/Roboto_20.fnt" text="Diffuse" width="145" height="auto"/>
				<space width="5" />
				<input id="light{$light-id}_diffuse" name="light{$light-id}_diffuse" width="150" height="auto" text="Diffuse" />
			</layout>
		</layout>
		<space height="5" />
		<layout alignment="horizontal" width="auto" height="auto">
			<layout width="auto" height="auto" alignment="horizontal" vertical-align="center">
				<text font="resources/gui-system/fonts/Roboto_20.fnt" text="Specular" width="145" height="auto"/>
				<space width="5" />
				<input id="light{$light-id}_specular" name="light{$light-id}_specular" width="150" height="auto" text="Specular" />
				<space width="320" />
			</layout>
		</layout>
		<space height="20" />
		<layout alignment="horizontal" width="auto" height="auto">
			<layout width="auto" height="auto" alignment="horizontal" vertical-align="center">
				<text font="resources/gui-system/fonts/Roboto_20.fnt" text="C. attenuation" width="145" height="auto"/>
				<space width="5" />
				<input id="light{$light-id}_constant_attenuation" name="light{$light-id}_constant_attenuation" width="150" height="auto" text="C. Attenuation" />
				<space width="20" />
				<text font="resources/gui-system/fonts/Roboto_20.fnt" text="L. attenuation" width="145" height="auto"/>
				<space width="5" />
				<input id="light{$light-id}_linear_attenuation" name="light{$light-id}_linear_attenuation" width="150" height="auto" text="L. Attenuation" />
			</layout>
		</layout>
		<space height="5" />
		<layout alignment="horizontal" width="auto" height="auto">
			<layout width="auto" height="auto" alignment="horizontal" vertical-align="center">
				<text font="resources/gui-system/fonts/Roboto_20.fnt" text="Q. attenuation" width="145" height="auto"/>
				<space width="5" />
				<input id="light{$light-id}_quadratic_attenuation" name="light{$light-id}_quadratic_attenuation" width="150" height="auto" text="Q. Attenuation" />
				<space width="320" />
			</layout>
		</layout>
		<space height="20" />
		<layout alignment="horizontal" width="auto" height="auto">
			<layout width="auto" height="auto" alignment="horizontal" vertical-align="center">
				<text font="resources/gui-system/fonts/Roboto_20.fnt" text="Spot from" width="145" height="auto"/>
				<space width="5" />
				<input id="light{$light-id}_position" name="light{$light-id}_position" width="150" height="auto" text="Spot from" />
				<space width="20" />
				<text font="resources/gui-system/fonts/Roboto_20.fnt" text="Spot to" width="145" height="auto"/>
				<space width="5" />
				<input id="light{$light-id}_spot_to" name="light{$light-id}_spot_to" width="150" height="auto" text="Spot to" />
			</layout>
		</layout>
		<space height="5" />
		<layout alignment="horizontal" width="auto" height="auto">
			<layout width="auto" height="auto" alignment="horizontal" vertical-align="center">
				<text font="resources/gui-system/fonts/Roboto_20.fnt" text="Spot direction" width="145" height="auto"/>
				<space width="5" />
				<input id="light{$light-id}_spot_direction" name="light{$light-id}_spot_direction" width="150" height="auto" text="Spot direction" />
				<space width="20" />
				<button id="button_light{$light-id}_spotdirection_compute" name="button_light{$light-id}_spotdirection_compute" text="Compute spot direction" width="300" />
			</layout>
		</layout>
		<space height="20" />
		<layout alignment="horizontal" width="auto" height="auto">
			<layout width="auto" height="auto" alignment="horizontal" vertical-align="center">
				<text font="resources/gui-system/fonts/Roboto_20.fnt" text="Spot cutoff" width="145" height="auto"/>
				<space width="5" />
				<input id="light{$light-id}_spot_cutoff" name="light{$light-id}_spot_cutoff" width="150" height="auto" text="Spot from" />
				<space width="20" />
				<text font="resources/gui-system/fonts/Roboto_20.fnt" text="Spot exponent" width="145" height="auto"/>
				<space width="5" />
				<input id="light{$light-id}_spot_exponent" name="light{$light-id}_spot_exponent" width="150" height="auto" text="Spot to" />
			</layout>
		</layout>
		<space height="20" />
		<layout alignment="horizontal" width="auto" height="auto" vertical-align="center">
			<layout width="300" height="auto" alignment="horizontal" vertical-align="center">
				<text font="resources/gui-system/fonts/Roboto_20.fnt" text="Enabled" width="145" height="auto"/>
				<space width="5" />
				<checkbox id="light{$light-id}_enabled" name="light{$light-id}_enabled" width="auto" height="auto" value="1" />
				<space width="*" />
			</layout>
			<space width="20" />
			<layout width="300" height="auto" alignment="horizontal" vertical-align="center">
				<space width="*" />
				<button id="button_light{$light-id}_apply" name="button_light{$light-id}_apply" text="Apply" width="150" />
			</layout>
		</layout>
		<space height="20" />
	</layout>
</scrollarea-vertical>
