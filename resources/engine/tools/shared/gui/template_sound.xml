<layout width="100%" height="100%" horizontal-align="center" alignment="center">
	<scrollarea-vertical width="100%" height="100%" alignment="vertical" horizontal-align="center">
		<space height="20" />
		<layout width="auto" height="auto" alignment="horizontal" vertical-align="center">
			<text font="resources/gui-system/fonts/Roboto_20.fnt" text="Animation" width="85" height="auto" />
			<space width="23" />
			<dropdown id="sounds_sound_animation_{$sound-id}" name="sounds_sound_animation_{$sound-id}" width="398" height="auto" text="Test">		
			</dropdown>
			<space width="10" />
			<button id="sounds_sound_animation_apply_{$sound-id}" name="sounds_sound_animation_apply_{$sound-id}" text="Apply" width="80" />
		</layout>
		<space height="10" />
		<layout width="600" height="auto" alignment="horizontal" vertical-align="center">
			<text font="resources/gui-system/fonts/Roboto_20.fnt" text="Key" width="85" height="auto" />
			<space width="23" />
			<input id="sounds_sound_key_{$sound-id}" name="sounds_sound_key_{$sound-id}" width="*" height="auto" text="key" />
		</layout>
		<space height="10" />
		<layout width="600" height="auto" alignment="horizontal" vertical-align="center">
			<text font="resources/gui-system/fonts/Roboto_20.fnt" text="File" width="85" height="auto"/>
			<space width="23" />
			<input id="sounds_sound_file_{$sound-id}" name="sounds_sound_file_{$sound-id}" width="344" height="auto" text="" />
    		<space width="10" />
    		<button id="sounds_sound_load_{$sound-id}" name="sounds_sound_load_{$sound-id}" text="Load" width="60" height="auto" />
    		<space width="10" />
    		<button id="sounds_sound_clear_{$sound-id}" name="sounds_sound_clear_{$sound-id}" text="Clear" width="60" height="auto" />
		</layout>
		<space height="10" />
		<layout width="600" height="auto" alignment="horizontal" vertical-align="center">
			<text font="resources/gui-system/fonts/Roboto_20.fnt" text="Gain" width="85" height="auto" />
			<space width="*" />
			<input id="sounds_sound_gain_{$sound-id}" name="sounds_sound_gain_{$sound-id}" width="180" height="auto" text="1.0" />
			<space width="*" />
			<text font="resources/gui-system/fonts/Roboto_20.fnt" text="Pitch" width="85" height="auto" />
			<space width="*" />
			<input id="sounds_sound_pitch_{$sound-id}" name="sounds_sound_pitch_{$sound-id}" width="180" height="auto" text="1.0" />
		</layout>
		<space height="10" />
		<layout width="600" height="auto" alignment="horizontal" vertical-align="center">
			<text font="resources/gui-system/fonts/Roboto_20.fnt" text="Offset ms" width="85" height="auto" />
			<space width="*" />
			<input id="sounds_sound_offset_{$sound-id}" name="sounds_sound_offset_{$sound-id}" width="180" height="auto" text="0" />
			<space width="*" />
			<space width="85" />
			<space width="*" />
			<space width="180" />
		</layout>
	    <space height="10" />
		<layout width="600" height="auto" alignment="horizontal" vertical-align="center">
			<text font="resources/gui-system/fonts/Roboto_20.fnt" text="Looping" width="85" height="auto" />
			<space width="22" />
			<checkbox id="sounds_sound_looping_{$sound-id}" name="sounds_sound_looping_{$sound-id}" value="1" />
			<space width="*" />
			<space width="24" />
			<text font="resources/gui-system/fonts/Roboto_20.fnt" text="Fixed" width="85" height="auto" />
			<space width="22" />
			<checkbox id="sounds_sound_fixed_{$sound-id}" name="sounds_sound_fixed_{$sound-id}" value="1" />
			<space width="*" />
		</layout>
		<space height="20" />
		<layout width="auto" height="auto" alignment="none" horizontal-align="center">
			<button id="button_animations_sound_apply_{$sound-id}" name="button_animations_sound_apply_{$sound-id}" text="Apply" />
		</layout>
		<space height="20" />
	</scrollarea-vertical>
</layout>
