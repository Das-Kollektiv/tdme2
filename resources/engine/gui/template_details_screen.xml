<template>	
	<element id="{$id}" width="100%" height="auto" ignore-events="true">
		<layout width="100%" height="auto" padding="5" alignment="vertical" vertical-align="center" horizontal-align="center">
			<button width="100%" height="25" text="Screen" on-mouse-click="{$id}.condition!=open"/>
			<layout show-on="open" width="100%" height="auto" padding="5" alignment="vertical" vertical-align="top" horizontal-align="left">			
				
				<space height="5" />	
				
				<template src="resources/engine/gui/template_details_shared_fileinput.xml" id="screen" type="Screen" />
				
				<space height="5" />
				<menu-separator />
				<space height="5" />		
				
				<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
					<text font="{$font.default}" size="{$fontsize.default}" color="{$color.font_normal}" text="Conditions" width="*" height="auto"/>
					<layout alignment="horizontal" width="75%" height="auto" horizontal-align="right">
						<input id="{$id}_conditions" width="100%" height="auto" text=""/>
					</layout>
				</layout>	

			</layout>		
		</layout>
	</element>
</template>