<element id="{$id}" width="100%" height="auto">
	<layout width="100%" height="auto" padding="5" alignment="vertical" vertical-align="center" horizontal-align="center">
		<button width="100%" height="25" text="Specular Material" on-mouse-click="{$id}.condition!=open"/>
		<layout show-on="open" width="100%" height="auto" padding="5" alignment="vertical" vertical-align="top" horizontal-align="center">			
		
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Ambient" width="90" height="auto"/>
				<space width="5"/>
				<space width="*"/>
				<!-- <input id="specularmaterial_ambient" width="70" height="auto" text="#000000" /> -->
				<image id="specularmaterial_ambient" width="100" height="auto" src="resources/engine/images/button.png" scale9="10" effect-color-mul="red"/>
				<space width="5" />						
				<button id="button_specularmaterial_ambient" width="25" height="25" image="resources/engine/images/edit.png"/>
			</layout>

			<space height="5" />

			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Diffuse" width="90" height="auto"/>
				<space width="5" />
				<space width="*"/>
				<!-- <input id="specularmaterial_diffuse" width="70" height="auto" text="#000000" /> -->
				<image id="specularmaterial_diffuse" width="100" height="auto" src="resources/engine/images/button.png" scale9="10" effect-color-mul="red"/>
				<space width="5" />						
				<button id="button_specularmaterial_diffuse" width="25" height="25" image="resources/engine/images/edit.png"/>
			</layout>

			<space height="5" />

			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Emission" width="90" height="auto"/>
				<space width="5" />
				<space width="*"/>
				<!-- <input id="specularmaterial_emission" width="70" height="auto" text="#000000" /> -->
				<image id="specularmaterial_emission" width="100" height="auto" src="resources/engine/images/button.png" scale9="10" effect-color-mul="red"/>
				<space width="5" />						
				<button id="button_specularmaterial_emission" width="25" height="25" image="resources/engine/images/edit.png"/>
			</layout>
			
			<space height="5" />

			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Specular" width="90" height="auto"/>
				<space width="5" />
				<space width="*"/>
				<!-- <input id="specularmaterial_specular" width="70" height="auto" text="#000000" /> -->
				<image id="specularmaterial_specular" width="100" height="auto" src="resources/engine/images/button.png" scale9="10" effect-color-mul="red"/>
				<space width="5" />						
				<button id="button_specularmaterial_specular" width="25" height="25" image="resources/engine/images/edit.png"/>
			</layout>
			
			<space height="5" />
			<menu-separator />
			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Shininess" width="145" height="auto"/>
				<space width="5" />
				<space width="*"/>
				<input id="specularmaterial_shininess" width="70" height="auto" text="100.00" />
			</layout>
			
			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Reflection" width="145" height="auto"/>
				<space width="5" />
				<space width="*"/>
				<input id="specularmaterial_reflection" width="70" height="auto" text="100.00" />
			</layout>

			<space height="5" />
			<menu-separator />
			<space height="5" />

			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Diffuse" width="70" height="auto"/>
				<space width="5" />
				<space width="*" />
				<input id="specularmaterial_diffuse_texture" width="120" height="auto" text="./texture.png" />
				<space width="5" />
				<button id="button_specularmaterial_diffuse_texture_open" image="resources/engine/images/folder.png" width="25" height="25"/>
				<space width="5" />
				<button id="button_specularmaterial_diffuse_texture_remove" image="resources/engine/images/delete.png" width="25" height="25" />
			</layout>

			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Transp." width="70" height="auto"/>
				<space width="5" />
				<space width="*" />
				<input id="specularmaterial_transparency_texture" width="120" height="auto" text="./texture.png" />
				<space width="5" />
				<button id="button_specularmateriall_transparency_texture_open" image="resources/engine/images/folder.png" width="25" height="25" />
				<space width="5" />
				<button id="button_specularmaterial_transparency_texture_remove" image="resources/engine/images/delete.png" width="25" height="25" />
			</layout>

			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Normal" width="70" height="auto"/>
				<space width="5" />
				<space width="*" />
				<input id="specularmaterial_normal_texture" width="120" height="auto" text="./texture.png" />
				<space width="5" />
				<button id="button_specularmaterial_normal_texture_open" image="resources/engine/images/folder.png" width="25" height="25" />
				<space width="5" />
				<button id="button_specularmaterial_normal_texture_remove" image="resources/engine/images/delete.png" width="25" height="25" />
			</layout>

			<space height="5" />

			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Specular" width="70" height="auto"/>
				<space width="5" />
				<space width="*" />
				<input id="specularmaterial_specular_texture" width="120" height="auto" text="./texture.png" />
				<space width="5" />
				<button id="button_specularmaterial_specular_texture_open" image="resources/engine/images/folder.png" width="25" height="25" />
				<space width="5" />
				<button id="button_specularmaterial_specular_texture_remove" image="resources/engine/images/delete.png" width="25" height="25" />
			</layout>
			
			<space height="5" />
			<menu-separator />
			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Masked transp." width="90" height="auto"/>
				<space width="5" />
				<space width="*" />
				<checkbox id="checkbox_specularmaterial_masked_transparency" width="auto" height="auto" value="1" />	
			</layout>
										
		</layout>		
	</layout>
</element>