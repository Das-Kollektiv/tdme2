<element id="{$id}" width="100%" height="auto">
	<layout width="100%" height="auto" padding="5" alignment="vertical" vertical-align="center" horizontal-align="center">
		<button width="100%" height="25" text="Specular Material" on-mouse-click="{$id}.condition!=open"/>
		<layout show-on="open" width="100%" height="auto" padding="5" alignment="vertical" vertical-align="top" horizontal-align="center">			
		
			<space height="5" />

			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" color="{$color.font_normal}" text="Diffuse" width="*" height="auto" horizontal-align="left" />
				<layout alignment="horizontal" width="75%" height="auto" horizontal-align="right">
					<element width="85" height="85" horizontal-align="center" vertical-align="center" border="1" border-color="{$color.element_frame}" background-color="{$color.element_midground}">
						<text font="{$font.default}" color="{$color.font_hint}" text="Select"  />
						<!-- <button template="button_template_thumbnail.xml" size="75" thumbnail="resources/engine/textures/terrain_dirt.png" icon="resources/engine/images/folder.png"/> -->
					</element>
					<space width="5" />
					<layout width="auto" height="auto" alignment="vertical">
						<button id="specularmaterial_diffuse_texture_open" image="resources/engine/images/folder.png" width="25" height="25" />
						<space height="5" />
						<button id="specularmaterial_diffuse_texture_remove" image="resources/engine/images/delete.png" width="25" height="25" />
						<space height="5" />
						<button id="specularmaterial_diffuse_texture_browseto" image="resources/engine/images/search.png" width="25" height="25" />
					</layout>
				</layout>						
			</layout>
			<space height="10" />
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" color="{$color.font_normal}" text="Transparency" width="*" height="auto" horizontal-align="left" />
				<layout alignment="horizontal" width="75%" height="auto" horizontal-align="right">
					<element width="85" height="85" horizontal-align="center" vertical-align="center" border="1" border-color="{$color.element_frame}" background-color="{$color.element_midground}">
						<text font="{$font.default}" color="{$color.font_hint}" text="Select"  />
						<!-- <button template="button_template_thumbnail.xml" size="75" thumbnail="resources/engine/textures/terrain_dirt.png" icon="resources/engine/images/folder.png"/> -->
					</element>
					<space width="5" />
					<layout width="auto" height="auto" alignment="vertical">
						<button id="specularmaterial_transparency_texture_open" image="resources/engine/images/folder.png" width="25" height="25" />
						<space height="5" />
						<button id="specularmaterial_transparency_texture_remove" image="resources/engine/images/delete.png" width="25" height="25" />
						<space height="5" />
						<button id="specularmaterial_transparency_texture_browseto" image="resources/engine/images/search.png" width="25" height="25" />
					</layout>
				</layout>						
			</layout>
			<space height="10" />
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" color="{$color.font_normal}" text="Normal" width="*" height="auto" horizontal-align="left" />
				<layout alignment="horizontal" width="75%" height="auto" horizontal-align="right">
					<element width="85" height="85" horizontal-align="center" vertical-align="center" border="1" border-color="{$color.element_frame}" background-color="{$color.element_midground}">
						<text font="{$font.default}" color="{$color.font_hint}" text="Select"  />
						<!-- <button template="button_template_thumbnail.xml" size="75" thumbnail="resources/engine/textures/terrain_dirt.png" icon="resources/engine/images/folder.png"/> -->
					</element>
					<space width="5" />
					<layout width="auto" height="auto" alignment="vertical">
						<button id="specularmaterial_normal_texture_open" image="resources/engine/images/folder.png" width="25" height="25" />
						<space height="5" />
						<button id="specularmaterial_normal_texture_remove" image="resources/engine/images/delete.png" width="25" height="25" />
						<space height="5" />
						<button id="specularmaterial_normal_texture_browseto" image="resources/engine/images/search.png" width="25" height="25" />
					</layout>
				</layout>						
			</layout>
			<space height="10" />
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" color="{$color.font_normal}" text="Specular" width="*" height="auto" horizontal-align="left" />
				<layout alignment="horizontal" width="75%" height="auto" horizontal-align="right">
					<element width="85" height="85" horizontal-align="center" vertical-align="center" border="1" border-color="{$color.element_frame}" background-color="{$color.element_midground}">
						<text font="{$font.default}" color="{$color.font_hint}" text="Select"  />
						<!-- <button template="button_template_thumbnail.xml" size="75" thumbnail="resources/engine/textures/terrain_dirt.png" icon="resources/engine/images/folder.png"/> -->
					</element>
					<space width="5" />
					<layout width="auto" height="auto" alignment="vertical">
						<button id="specularmaterial_specular_texture_open" image="resources/engine/images/folder.png" width="25" height="25" />
						<space height="5" />
						<button id="specularmaterial_specular__texture_remove" image="resources/engine/images/delete.png" width="25" height="25" />
						<space height="5" />
						<button id="specularmaterial_specular__texture_browseto" image="resources/engine/images/search.png" width="25" height="25" />
					</layout>
				</layout>						
			</layout>			
			
			<space height="5" />
			<menu-separator />
			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" color="{$color.font_normal}" text="Ambient" width="*" height="auto"/>
				<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
					<image id="specularmaterial_ambient" width="*" height="auto" src="resources/engine/images/button.png" scale9="10" effect-color-mul="red"/>
					<space width="5" />						
					<button id="button_specularmaterial_ambient" width="25" height="25" image="resources/engine/images/edit.png"/>
				</layout>
			</layout>
			<space height="5" />
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" color="{$color.font_normal}" text="Diffuse" width="*" height="auto"/>
				<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
					<image id="specularmaterial_diffuse" width="*" height="auto" src="resources/engine/images/button.png" scale9="10" effect-color-mul="red"/>
					<space width="5" />						
					<button id="button_specularmaterial_diffuse" width="25" height="25" image="resources/engine/images/edit.png"/>
				</layout>
			</layout>
			<space height="5" />
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" color="{$color.font_normal}" text="Emission" width="*" height="auto"/>
				<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
					<image id="specularmaterial_emission" width="*" height="auto" src="resources/engine/images/button.png" scale9="10" effect-color-mul="red"/>
					<space width="5" />						
					<button id="button_specularmaterial_emission" width="25" height="25" image="resources/engine/images/edit.png"/>
				</layout>
			</layout>
			<space height="5" />
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" color="{$color.font_normal}" text="Specular" width="*" height="auto"/>
				<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
					<image id="specularmaterial_specular" width="*" height="auto" src="resources/engine/images/button.png" scale9="10" effect-color-mul="red"/>
					<space width="5" />						
					<button id="button_specularmaterial_specular" width="25" height="25" image="resources/engine/images/edit.png"/>
				</layout>
			</layout>			
			
			<space height="5" />
			<menu-separator />
			<space height="5" />

			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" color="{$color.font_normal}" text="Shininess" width="*" height="auto"/>
				<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
					<input id="specularmaterial_shininess" width="75%" height="auto" text="1000.00" options="type=float,min=0.0,step=0.25,decimals=2" image="resources/engine/images/inputslider.png" />
				</layout>
			</layout>

			<space height="5" />

			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" color="{$color.font_normal}" text="Reflection" width="*" height="auto"/>
				<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
					<input id="specularmaterial_reflection" width="75%" height="auto" text="1000.00" options="type=float,min=0.0,step=0.25,decimals=2" image="resources/engine/images/inputslider.png"/>
				</layout>
			</layout>

			<space height="5" />
			<menu-separator />
			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" color="{$color.font_normal}" text="Masked Transparency" width="*" height="auto"/>
				<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
					<checkbox id="specularmaterial_maskedtransparency" width="25" height="25" value="1" />
				</layout>
			</layout>			

										
		</layout>		
	</layout>
</element>