<screen id="popup_progressbar" background-color="#00000080" popup="true" min-width="1024" min-height="768" max-width="3200" max-height="1800">
	<layout alignment="vertical" horizontal-align="center" vertical-align="center" width="100%" height="100%">
	
			<tabs width="400" height="100">
				<tabs-header>
					<tab id="progressbar_caption" image="resources/engine/images/attention.png" text="Loading" />
				</tabs-header>
				<tabs-content>
					<tab-content tab-id="progressbar_caption">
						<element id="progressbar_parent" width="100%" height="100%">
							<layout padding="10" alignment="vertical" horizontal-align="left" vertical-align="center" width="100%" height="100%">
								<progress-bar show-on="show-progressbar" id="progressbar" width="100%" heigth="25" text-on="true" value="0.5" />
								<space show-on="show-progressbar" height="5"/>
								<text id="progress_message" height="25" font="{$font.default}" size="{$fontsize.default}" text="Loading Scene Files.." color="{$color.font_normal}" />
							</layout>
						</element>
					</tab-content>
				</tabs-content>
			</tabs>	

	</layout>
</screen>
