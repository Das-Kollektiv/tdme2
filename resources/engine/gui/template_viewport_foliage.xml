<layout id="{$id}" width="100%" height="100%" padding="5" alignment="vertical" vertical-align="center" horizontal-align="center">
	<element id="{$id}_viewport" width="100%" height="*" border="1" background-color="{$color.element_midground}" focusable="true">
		<layout hide-on="notools" width="100%" height="100%" padding="10" alignment="vertical" horizontal-align="left" vertical-align="top">	
			<radiobutton template="radiobutton_template_gizmo.xml" id="{$id}_button_add" name="brush" width="40" height="40" value="1" image="resources/engine/images/foliage_add.png" />
			<space height="5"/>
			<radiobutton template="radiobutton_template_gizmo.xml" id="{$id}_button_smooth" name="brush" width="40" height="40" value="2" image="resources/engine/images/terrain_smooth.png" />
			<space height="20"/>
			<radiobutton template="radiobutton_template_gizmo.xml" id="{$id}_button_delete" name="brush" width="40" height="40" value="4" image="resources/engine/images/delete.png" />

		</layout>
		<layout width="100%" height="100%" padding="5" alignment="horizontal" horizontal-align="right" vertical-align="top">
			<layout width="auto" height="auto" alignment="horizontal" horizontal-align="center" vertical-align="center">
				<checkbox id="{$id}_checkbox_grid" template="checkbox_template_image.xml" image-unchecked="resources/engine/images/checkbox_gridoff.png" image-checked="resources/engine/images/checkbox_gridon.png" value="1" selected="true" />
				<checkbox id="{$id}_checkbox_bvs" template="checkbox_template_image.xml" image-unchecked="resources/engine/images/checkbox_bvoff.png" image-checked="resources/engine/images/checkbox_bvon.png" value="1" />
			</layout>
		</layout>
		<layout width="100%" height="100%" padding="5" alignment="horizontal" horizontal-align="right" vertical-align="bottom">
			<text id="{$id}_text_info" font="{$font.default}" text="width 512 height 512 | infotext | stuff" color="{$color.font_normal}" />
		</layout>
	</element>	
</layout>