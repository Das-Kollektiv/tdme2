<element id="{$id}" width="100%" height="auto">
	<layout width="100%" height="auto" padding="5" alignment="vertical" vertical-align="center" horizontal-align="center">
		<button width="100%" height="25" text="Terrain" on-mouse-click="{$id}.condition!=open"/>
		<layout show-on="open" width="100%" height="auto" padding="5" alignment="vertical" vertical-align="top" horizontal-align="left">			
	
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Size" width="90" height="auto"/>
				<space width="5" />
				<space width="*" />
				<input id="terrain_size_x" width="40" height="auto" text="0.0" />
				<space width="5" />
				<input id="terrain_size_z"  width="40" height="auto" text="0.0" />
			</layout>
			<space height="5" />
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Grid Density" width="90" height="auto"/>
				<space width="5" />
				<space width="*" />
				<input id="terrain_density" width="70" height="auto" text="100" />
			</layout>
			<space height="5" />
			<menu-separator />
			<space height="5" />
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Mirror Mode" width="90" height="auto"/>
				<space width="5" />
				<space width="*" />
				<dropdown id="terrain_mirrormode" width="130" height="auto" text="Select Mode">
					<dropdown-option text="Normal" selected="true" value="1" on-mouse-click="terrain_mirrormode_details.condition="/>
					<dropdown-option text="X Mirror" value="2" on-mouse-click="terrain_mirrormode_details.condition=oneaxis"/>
					<dropdown-option text="Z Mirror" value="3" on-mouse-click="terrain_mirrormode_details.condition=oneaxis"/>
					<dropdown-option text="XZ Mirror" value="4" on-mouse-click="terrain_mirrormode_details.condition=" />
				</dropdown>
			</layout>
			<element id="terrain_mirrormode_details" width="100%" height="auto">
				<layout show-on="oneaxis" alignment="vertical" width="100%" height="auto" horizontal-align="center" >
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Flipped" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<checkbox id="terrain_mirrormode_flipped" width="25" height="25" value="1" />
					</layout>
				</layout>
			</element>
							
		</layout>		
	</layout>
</element>