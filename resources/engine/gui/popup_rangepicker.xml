<screen id="popup_rangepicker" popup="true" min-width="1024" min-height="768" max-width="3200" max-height="1800">
	<layout alignment="vertical" horizontal-align="center" vertical-align="center" width="100%" height="100%">	
		<tabs width="360" height="300">
			<tabs-header id="rangepicker_tabs-header">
				<tab id="rangepicker_caption" image="resources/engine/images/attention.png" text="Range over Life Time" closeable="true"/>
			</tabs-header>
			<tabs-content>
				<tab-content tab-id="rangepicker_caption">
				
					<layout padding="5" border="0" border-color="{$color.element_frame}" width="auto" height="auto" alignment="vertical" background-color="{$color.element_foreground}">
						<layer border="1" border-color="{$color.element_frame}" width="340" height="145" background-color="{$color.element_midground}">
							<layout alignment="horizontal" width="100%" height="100%" horizontal-align="center">
								<space width="*"/>
								<layout width="1" height="100%" background-color="{$color.element_foreground}"/>
								<space width="*"/>
								<layout width="1" height="100%" background-color="{$color.element_foreground}"/>
								<space width="*"/>
								<layout width="1" height="100%" background-color="{$color.element_foreground}"/>
								<space width="*"/>
								<layout width="1" height="100%" background-color="{$color.element_foreground}"/>
								<space width="*"/>
								<layout width="1" height="100%" background-color="{$color.element_foreground}"/>
								<space width="*"/>
							</layout>
							<layout alignment="vertical" width="100%" height="100%" vertical-align="center">
								<space height="*"/>
								<layout width="100%" height="1" background-color="{$color.element_foreground}"/>
								<space height="*"/>
								<layout width="100%" height="1" background-color="{$color.element_foreground}"/>
								<space height="*"/>
								<layout width="100%" height="1" background-color="{$color.element_foreground}"/>
								<space height="*"/>
							</layout>
						</layer>
						<space height="5" />
						<menu-separator />
						<space height="5" />
						<layout  width="100%" height="auto" alignment="horizontal" vertical-align="center">
							<text font="{$font.default}" size="{$fontsize.default}" color="{$color.font_normal}" text="Highest Range" width="*" height="auto" />
							<layout alignment="horizontal" width="75%" height="auto" horizontal-align="right" vertical-align="center">
								<layout alignment="horizontal" width="34%" height="auto" horizontal-align="right">
									<input id="rangepicker_highest_min" width="*" height="auto" text="10.0" options="type=float,min=0.0,step=0.1,decimals=1" image="resources/engine/images/inputslider.png" />
								</layout>
								<space width="5" />
								<text font="{$font.default}" size="{$fontsize.default}" color="{$color.font_normal}" text="-"/>
								<space width="5" />
								<layout alignment="horizontal" width="34%" height="auto" horizontal-align="right">
									<input id="rangepicker_highest_max" width="*" height="auto" text="10.0"  options="type=float,min=0.0,step=0.1,decimals=1" image="resources/engine/images/inputslider.png"/>
								</layout>
								<space width="10" />
								<radiobutton template="radiobutton_template_toolbar.xml" id="rangepicker_highest_link" name="highestlink" width="25" height="25" value="1" image="resources/engine/images/checkbox_linked.png" />
							</layout>
						</layout>
						<space height="5" />
						<layout  width="100%" height="auto" alignment="horizontal" vertical-align="center">
							<text font="{$font.default}" size="{$fontsize.default}" color="{$color.font_normal}" text="Lowest Range" width="*" height="auto" />
							<layout alignment="horizontal" width="75%" height="auto" horizontal-align="right" vertical-align="center">
								<layout alignment="horizontal" width="34%" height="auto" horizontal-align="right">
									<input id="rangepicker_lowest_min" width="*" height="auto" text="10.0" options="type=float,min=0.0,step=0.1,decimals=1" image="resources/engine/images/inputslider.png" />
								</layout>
								<space width="5" />
								<text font="{$font.default}" size="{$fontsize.default}" color="{$color.font_normal}" text="-"/>
								<space width="5" />
								<layout alignment="horizontal" width="34%" height="auto" horizontal-align="right">
									<input id="rangepicker_lowest_max" width="*" height="auto" text="10.0"  options="type=float,min=0.0,step=0.1,decimals=1" image="resources/engine/images/inputslider.png"/>
								</layout>
								<space width="10" />
								<radiobutton template="radiobutton_template_toolbar.xml" id="rangepicker_lowest_link" name="lowestlink" width="25" height="25" value="1" image="resources/engine/images/checkbox_linked.png" />
							</layout>
						</layout>
						<space height="10" />
						<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
							<button id="rangepicker_apply" width="*" height="25" text="Apply"/>
							<space width="5" />
							<button id="rangepicker_reset" width="*" height="25" text="Reset"/>
						</layout>
					</layout>
				
				</tab-content>
			</tabs-content>
		</tabs>
	</layout>
</screen>
