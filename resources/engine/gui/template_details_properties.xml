<element id="{$id}" width="100%" height="auto">
	<layout width="100%" height="auto" padding="5" alignment="vertical" vertical-align="center" horizontal-align="center">
		<button width="100%" height="25" text="Properties" on-mouse-click="{$id}.condition!=open"/>
		<layout show-on="open" width="100%" height="auto" padding="5" alignment="vertical" vertical-align="top" horizontal-align="center">				

			<layout width="100%" height="auto" alignment="horizontal" vertical-align="top">
				<layout width="*" height="auto" alignment="vertical">
					<selectbox width="100%" id="selectbox_properties_objects" boder="0">
						<scrollarea background-color="{$color.element_midground}" width="100%" height="130" focusable="true">

						</scrollarea>
					</selectbox>
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Name" width="50" height="auto"/>
						<space width="5" />
						<input id="properties_name" width="*" height="auto" text="Name" />
					</layout>
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Value" width="50" height="auto"/>
						<space width="5" />
						<input id="properties_value" width="*" height="auto" text="Value" />
					</layout>
				</layout>
				<space width="5" />
				<layout width="auto" height="auto" alignment="vertical">
					<button id="button_properties_object_add" image="resources/engine/images/add.png" width="25" height="25" />
					<space height="5" />
					<button id="button_properties_object_substract" image="resources/engine/images/substract.png" width="25" height="25" />
					<space height="5" />
					<menu-separator />
					<space height="5" />
					<button id="button_properties_object_import" image="resources/engine/images/import.png" width="25" height="25" />
					<space height="5" />
					<button id="button_properties_object_save" image="resources/engine/images/save.png" width="25" height="25" />
				</layout>
			</layout>			
					
		</layout>		
	</layout>
</element>