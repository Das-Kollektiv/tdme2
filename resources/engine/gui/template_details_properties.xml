<element id="{$id}" width="100%" height="auto">
	<layout width="100%" height="auto" padding="5" alignment="vertical" vertical-align="center" horizontal-align="center">
		<button width="100%" height="25" text="Properties" on-mouse-click="{$id}.condition!=open"/>
		<layout show-on="open" width="100%" height="auto" padding="5" alignment="vertical" vertical-align="top" horizontal-align="center">			
							
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<dropdown id="entity_properties_presets" name="entity_properties_presets" width="*" height="auto" text="Test">										
				</dropdown>
				<space width="5" />
				<button id="button_entity_properties_add" name="button_entity_properties_add" image="resources/engine/images/add.png" width="25" height="25"/>
				<space width="5" />
				<button id="button_entity_properties_remove" name="button_entity_properties_remove" image="resources/engine/images/delete.png" width="25" height="25"/>
			</layout>
			<space height="5" />
			<selectbox id="entity_properties_listbox" name="entity_properties_listbox" height="70">
			</selectbox>
			<space height="5" />
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Name" width="50" height="auto"/>
				<space width="5" />
				<input id="entity_property_name" name="entity_property_name" width="*" height="auto" text="Name" />
			</layout>
			<space height="5" />
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Value" width="50" height="auto"/>
				<space width="5" />
				<input id="entity_property_value" name="entity_property_value" width="*" height="auto" text="Value" />
			</layout>	
								
		</layout>		
	</layout>
</element>