<element id="{$id}" width="100%" height="auto">
	<layout width="100%" height="auto" padding="5" alignment="vertical" vertical-align="center" horizontal-align="center">
		<button width="100%" height="25" text="Material" on-mouse-click="{$id}.condition!=open"/>
		<layout show-on="open" width="100%" height="auto" padding="5" alignment="vertical" vertical-align="top" horizontal-align="center">			
		
									<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
										<text font="{$font.default}" text="Ambient color" width="145" height="auto"/>
										<space width="5"/>
										<space width="*"/>
										<input id="materials_material_ambient" name="materials_material_ambient" width="130" height="auto" text="#000000" />
									</layout>

									<space height="5" />

									<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
										<text font="{$font.default}" text="Diffuse color" width="145" height="auto"/>
										<space width="5" />
										<space width="*"/>
										<input id="materials_material_diffuse" name="materials_material_diffuse" width="130" height="auto" text="#000000" />
									</layout>

									<space height="5" />

									<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
										<text font="{$font.default}" text="Specular color" width="145" height="auto"/>
										<space width="5" />
										<space width="*"/>
										<input id="materials_material_specular" name="materials_material_specular" width="130" height="auto" text="#000000" />
									</layout>

									<space height="5" />

									<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
										<text font="{$font.default}" text="Emission color" width="145" height="auto"/>
										<space width="5" />
										<space width="*"/>
										<input id="materials_material_emission" name="materials_material_emission" width="130" height="auto" text="#000000" />
									</layout>

									<space height="5" />
									<menu-separator />
									<space height="5" />

									<layout width="auto" height="auto" alignment="horizontal" vertical-align="center">
										<text font="{$font.default}" text="Shininess" width="145" height="auto"/>
										<space width="5" />
										<input id="materials_material_shininess" name="materials_material_shininess" width="450" height="auto" text="Shininess" />
									</layout>

								<space height="5" />

								<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
									<text font="{$font.default}" text="Diffuse texture" width="90" height="auto"/>
									<space width="5" />
									<space width="*" />
									<input id="input_material_diffuse_texture" width="130" height="auto" text="./texture.png" />
									<space width="5" />
									<button id="button_material_diffuse_texture_open" image="resources/engine/images/folder.png" width="25" height="25"/>
									<space width="5" />
									<button id="button_material_diffuse_texture_remove" image="resources/engine/images/delete.png" width="25" height="25" />
								</layout>

								<space height="5" />
								
								<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
									<text font="{$font.default}" text="Trans. texture" width="90" height="auto"/>
									<space width="5" />
									<space width="*" />
									<input id="input_material_transparency_texture" width="130" height="auto" text="./texture.png" />
									<space width="10" />
									<button id="button_material_transparency_texture_open" image="resources/engine/images/folder.png" width="25" height="25" />
									<space width="10" />
									<button id="button_material_transparency_texture_remove" image="resources/engine/images/delete.png" width="25" height="25" />
								</layout>

								<space height="5" />
								
								<layout width="auto" height="auto" alignment="horizontal" vertical-align="center">
									<text font="{$font.default}" text="Normal texture" width="145" height="auto"/>
									<space width="5" />
									<input id="materials_material_normal_texture" name="materials_material_normal_texture" width="302" height="auto" text="Normal texture" disabled="true" />
									<space width="10" />
									<button id="button_materials_material_normal_texture_load" name="button_materials_material_normal_texture_load" text="Load" width="60" height="auto" />
									<space width="10" />
									<button id="button_materials_material_normal_texture_clear" name="button_materials_material_normal_texture_clear" text="Clear" width="60" height="auto" />
								</layout>

								<space height="5" />
								<layout alignment="horizontal" width="auto" height="auto">
									<layout width="auto" height="auto" alignment="horizontal" vertical-align="center">
										<text font="{$font.default}" text="Specular texture" width="145" height="auto"/>
										<space width="5" />
										<input id="materials_material_specular_texture" name="materials_material_specular_texture" width="302" height="auto" text="Specular texture" disabled="true" />
										<space width="10" />
										<button id="button_materials_material_specular_texture_load" name="button_materials_material_specular_texture_load" text="Load" width="60" height="auto" />
										<space width="10" />
										<button id="button_materials_material_specular_texture_clear" name="button_materials_material_specular_texture_clear" text="Clear" width="60" height="auto" />
									</layout>
								</layout>
								<space height="20" />
								<layout width="auto" height="auto" alignment="horizontal" vertical-align="center">
									<checkbox id="materials_material_pbr_enabled" name="materials_material_pbr_enabled" value="1" />
									<space width="5" />
									<text font="{$font.default}" text="Enable PBR" width="auto" height="auto"/>
								</layout>
                                <space height="10" />
                                <layout alignment="horizontal" width="auto" height="auto">
                                    <layout width="auto" height="auto" alignment="horizontal" vertical-align="center">
                                        <text font="{$font.default}" text="Base color factor" width="145" height="auto"/>
                                        <space width="5" />
                                        <input id="materials_material_pbr_base_color_factor" name="materials_material_pbr_base_color_factor" width="450" height="auto" text="Base color factor" />
                                    </layout>
                                </layout>
								<space height="5" />
								<layout alignment="horizontal" width="auto" height="auto">
									<layout width="auto" height="auto" alignment="horizontal" vertical-align="center">
										<text font="{$font.default}" text="Base color texture" width="145" height="auto"/>
										<space width="5" />
										<input id="materials_material_pbr_base_color_texture" name="materials_material_pbr_base_color_texture" width="302" height="auto" text="Base color texture" disabled="true" />
										<space width="10" />
										<button id="button_materials_material_pbr_base_color_texture_load" name="button_materials_material_pbr_base_color_texture_load" text="Load" width="60" height="auto" />
										<space width="10" />
										<button id="button_materials_material_pbr_base_color_texture_clear" name="button_materials_material_pbr_base_color_texture_clear" text="Clear" width="60" height="auto" />
									</layout>
								</layout>
								<space height="5" />
								<layout alignment="horizontal" width="auto" height="auto">
									<layout width="auto" height="auto" alignment="horizontal" vertical-align="center">
										<text font="{$font.default}" text="Metallic factor" width="145" height="auto"/>
										<space width="5" />
										<input id="materials_material_pbr_metallic_factor" name="materials_material_pbr_metallic_factor" width="450" height="auto" text="Metallic factor" />
									</layout>
								</layout>
								<space height="5" />
								<layout alignment="horizontal" width="auto" height="auto">
									<layout width="auto" height="auto" alignment="horizontal" vertical-align="center">
										<text font="{$font.default}" text="Roughness factor" width="145" height="auto"/>
										<space width="5" />
										<input id="materials_material_pbr_roughness_factor" name="materials_material_pbr_roughness_factor" width="450" height="auto" text="Roughness factor" />
									</layout>
								</layout>
								<space height="5" />
								<layout alignment="horizontal" width="auto" height="auto">
									<layout width="auto" height="auto" alignment="horizontal" vertical-align="center">
										<text font="{$font.default}" text="Metallic/Roughness" width="145" height="auto"/>
										<space width="5" />
										<input id="materials_material_pbr_metallic_roughness_texture" name="materials_material_pbr_metallic_roughness_texture" width="302" height="auto" text="Metallic/roughness texture" disabled="true" />
										<space width="10" />
										<button id="button_materials_material_pbr_metallic_roughness_texture_load" name="button_materials_material_pbr_metallic_roughness_texture_load" text="Load" width="60" height="auto" />
										<space width="10" />
										<button id="button_materials_material_pbr_metallic_roughness_texture_clear" name="button_materials_material_pbr_metallic_roughness_texture_clear" text="Clear" width="60" height="auto" />
									</layout>
								</layout>
								<space height="5" />
								<layout alignment="horizontal" width="auto" height="auto">
									<layout width="auto" height="auto" alignment="horizontal" vertical-align="center">
										<text font="{$font.default}" text="Normal scale" width="145" height="auto"/>
										<space width="5" />
										<input id="materials_material_pbr_normal_scale" name="materials_material_pbr_normal_scale" width="450" height="auto" text="Normal scaler" />
									</layout>
								</layout>
								<space height="5" />
								<layout alignment="horizontal" width="auto" height="auto">
									<layout width="auto" height="auto" alignment="horizontal" vertical-align="center">
										<text font="{$font.default}" text="Normal texture" width="145" height="auto"/>
										<space width="5" />
										<input id="materials_material_pbr_normal_texture" name="materials_material_pbr_normal_texture" width="302" height="auto" text="Base color texture" disabled="true" />
										<space width="10" />
										<button id="button_materials_material_pbr_normal_texture_load" name="button_materials_material_pbr_normal_texture_load" text="Load" width="60" height="auto" />
										<space width="10" />
										<button id="button_materials_material_pbr_normal_texture_clear" name="button_materials_material_pbr_normal_texture_clear" text="Clear" width="60" height="auto" />
									</layout>
								</layout>
								<space height="5" />
								<layout alignment="horizontal" width="auto" height="auto">
									<layout width="auto" height="auto" alignment="horizontal" vertical-align="center">
										<text font="{$font.default}" text="Exposure" width="145" height="auto"/>
										<space width="5" />
										<input id="materials_material_pbr_exposure" name="materials_material_pbr_exposure" width="450" height="auto" text="Exposure" />
									</layout>
								</layout>
								<space height="20" />
								<layout alignment="horizontal" width="auto" height="auto">
									<layout width="602" height="auto" alignment="horizontal" vertical-align="center">
										<text font="{$font.default}" text="Masked transp." width="145" height="auto"/>
										<space width="5" />
										<checkbox id="materials_material_use_masked_transparency" name="materials_material_use_masked_transparency" width="auto" height="auto" value="1" />
										<space width="*" />
									</layout>
								</layout>
                                <space height="5" />
                                <layout alignment="horizontal" width="auto" height="auto">
                                    <layout width="auto" height="auto" alignment="horizontal" vertical-align="center">
                                        <text font="{$font.default}" text="Threshold" width="145" height="auto"/>
                                        <space width="5" />
                                        <input id="materials_material_masked_transparency_threshold" name="materials_material_masked_transparency_threshold" width="450" height="auto" text="Threshold" />
                                    </layout>
                                </layout>
					
		</layout>		
	</layout>
</element>