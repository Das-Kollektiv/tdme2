<screen id="popup_findreplace" background-color="#00000080" popup="true" min-width="1024" min-height="768" max-width="3200" max-height="1800">
	<layout alignment="none" horizontal-align="center" vertical-align="center" width="100%" height="100%">
	
		<moveable alignment="vertical" width="auto" height="auto">
			<tabs width="500" height="330">
				<tabs-header id="findreplace_tabs-header">
					<tab id="findreplace_caption" image="resources/engine/images/attention.png" text="Find and Replace" closeable="true"/>
				</tabs-header>
				<tabs-content>
					<tab-content tab-id="findreplace_caption" vertical-align="center">
					
						<layout padding="10" alignment="vertical" horizontal-align="center" vertical-align="center" width="100%" height="100%">
						
							<layout alignment="horizontal" horizontal-align="center" vertical-align="center" width="100%" height="auto">
								<text font="{$font.default}" size="{$fontsize.default}" color="{$color.font_normal}" text="Find:" width="140" height="25" />
								<input id="findreplace_findtext" width="*" height="25" text="" />
							</layout>
							
							<space height="10" />
							
							<layout alignment="horizontal" horizontal-align="center" vertical-align="center" width="100%" height="auto">
								<text font="{$font.default}" size="{$fontsize.default}" color="{$color.font_normal}" text="Replace with:" width="140" height="25" />
								<input id="findreplace_replacetext" width="*" height="25" text="" />
							</layout>
					
							<space height="20" />
							
							<layout alignment="vertical" horizontal-align="left" vertical-align="center" width="100%" height="auto">
								<checkbox id="findreplace_matchcase" width="25" height="25" value="1" text="match case" />	
								<space height="10" />
								<checkbox id="findreplace_wholewordonly" width="25" height="25" value="1" text="whole word only" />
								<space height="10" />
								<checkbox id="findreplace_inselectiononly" width="25" height="25" value="1" text="in selection only" />
							</layout>
							
							<space height="40" />
							
							<element id="button_panel" width="100%" height="auto" horizontal-align="center" vertical-align="center">
								
								<layout width="100%" height="auto" alignment="vertical" horizontal-align="center" vertical-align="center" >
									<layout width="100%" height="auto" alignment="horizontal" horizontal-align="center" vertical-align="center" >
										<button width="*" id="findreplace_find" text="Find" />
										<space width="10" />
										<button width="*" id="findreplace_count" text="Count" />
										<space width="20" />
										<button width="*" id="findreplace_cancel" text="Cancel" />
									</layout>
									<space height="10" />
									<layout width="100%" height="auto" alignment="horizontal" horizontal-align="center" vertical-align="center" >
										<button width="*" id="findreplace_replace" text="Replace" />
										<space width="10" />
										<button width="*" id="findreplace_replaceall" text="Replace All" />
										<space width="20" />
										<space width="*" />
									</layout>
								</layout>
								
							</element>
					
						</layout>
						
					</tab-content>
				</tabs-content>
			</tabs>
		</moveable>

	</layout>
</screen>

