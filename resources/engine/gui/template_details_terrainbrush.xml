<element id="{$id}" width="100%" height="auto">
	<layout width="100%" height="auto" padding="5" alignment="vertical" vertical-align="center" horizontal-align="center">
		<button width="100%" height="25" text="Terrain Brush" on-mouse-click="{$id}.condition!=open"/>
		<layout show-on="open" width="100%" height="auto" padding="5" alignment="vertical" vertical-align="top" horizontal-align="left">			
	
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Texture" width="70" height="auto" />
				<space width="5" />
				<space width="*" />
				<input id="terrainbrush_texture" width="120" height="auto" text="./texture.png" />
				<space width="5" />
				<button id="terrainbrush_texture_open" image="resources/engine/images/folder.png" width="25" height="25" />
				<space width="5" />
				<button id="terrainbrush_texture_remove" image="resources/engine/images/delete.png" width="25" height="25" />
			</layout>							
			<space height="5" />
			<menu-separator />
			<space height="5" />
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Scale" width="90" height="auto" />
				<space width="5" />
				<space width="*" />
				<input id="terrainbrush_scale"  width="70" height="auto" text="100.00" />
			</layout>
			<space height="5" />
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Strength" width="90" height="auto" />
				<space width="5" />
				<space width="*" />
				<input id="terrainbrush_strength" width="70" height="auto" text="100.00" />
			</layout>
			<space height="5" />
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Smoothness" width="90" height="auto" />
				<space width="5" />
				<space width="*" />
				<input id="terrainbrush_smoothness" width="70" height="auto" text="100.00" />
			</layout>
				
		</layout>		
	</layout>
</element>