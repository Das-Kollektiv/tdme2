<element id="{$id}" width="100%" height="auto">
	<layout width="100%" height="auto" padding="5" alignment="vertical" vertical-align="center" horizontal-align="center">
		<button width="100%" height="25" text="Particle Type" on-mouse-click="{$id}.condition!=open"/>
		<layout show-on="open" width="100%" height="auto" padding="5" alignment="vertical" vertical-align="top" horizontal-align="left">			
	
			<dropdown id="particletype_type" width="100%" height="auto" text="Select Type">
				<dropdown-option text="Object Particle" value="1" on-mouse-click="particletype_type_details.condition=object" />
				<dropdown-option text="Point Particle" value="2" on-mouse-click="particletype_type_details.condition=point" />
				<dropdown-option text="Fog Particle" value="3" on-mouse-click="particletype_type_details.condition=fog" />
			</dropdown>
			
			<element id="particletype_type_details" width="100%" height="auto">
			
				<layout show-on="object" alignment="vertical" width="100%" height="auto" horizontal-align="center" >
					<space height="5" /> 
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Model" width="70" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="particletype_object_model"  width="120" height="auto" text="./model.tm" />
						<space width="5" />
						<button id="button_particletype_object_open" image="resources/engine/images/folder.png" width="25" height="25" />
						<space width="5" />
						<button id="button_particletype_object_remove" image="resources/engine/images/delete.png" width="25" height="25"/>	
					</layout>
					<space height="5" />
					<menu-separator />
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Scale" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="particletype_object_scale_x" width="40" height="auto" text="0.0" />
						<space width="5" />
						<input id="particletype_object_scale_y"  width="40" height="auto" text="0.0" />
						<space width="5" />
						<input id="particletype_object_scale_z"  width="40" height="auto" text="0.0" />
					</layout>
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Max count" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="particletype_object_maxcount" width="130" height="auto" text="1000" />
					</layout>
					<space height="5" />
					<menu-separator />
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Auto emit" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<checkbox id="particletype_object_autoemit" width="25" height="25" value="1" />
					</layout>
				</layout>
				
				<layout show-on="point" alignment="vertical" width="100%" height="auto" horizontal-align="center" >
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Texture" width="70" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="particletype_point_texture" width="120" height="auto" text="./texture.png" />
						<space width="5" />
						<button id="button_particletype_point_texture_open" image="resources/engine/images/folder.png" width="25" height="25" />
						<space width="5" />
						<button id="button_particletype_point_texture_remove" image="resources/engine/images/delete.png" width="25" height="25"/>	
					</layout>
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Transp." width="70" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="particletype_point_transparency" width="120" height="auto" text="./texture.png" />
						<space width="5" />
						<button id="button_particletype_point_transparency_open" image="resources/engine/images/folder.png" width="25" height="25" />
						<space width="5" />
						<button id="button_particletype_point_transparency_remove" image="resources/engine/images/delete.png" width="25" height="25"/>	
					</layout>
					<space height="5" />
					<menu-separator />
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Max points" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="particletype_point_maxpoints" width="50" height="auto" text="1000" />
					</layout>
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Point size" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="particletype_point_pointsize" width="50" height="auto" text="100" />
					</layout>
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Horiz. sprites" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="particletype_point_horizontal_sprites"  width="30" height="auto" text="10" />
					</layout>
					<space height="5" /> 
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Vert. sprites" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="particletype_point_vertical_sprites" width="30" height="auto" text="10" />
					</layout>
					<space height="5" />
					<menu-separator />
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="FPS" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="particletype_point_fps" width="50" height="auto" text="100" />
					</layout>
					<space height="5" />
					<menu-separator />
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Auto emit" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<checkbox id="particletype_point_auto_emit" width="25" height="25" value="1" />
					</layout>
				</layout>
				
				<layout show-on="fog" alignment="vertical" width="100%" height="auto" horizontal-align="center" >
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Texture" width="70" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="particletype_fog_texture" width="120" height="auto" text="./texture.png" />
						<space width="5" />
						<button id="button_particletype_fog_texture_open" image="resources/engine/images/folder.png" width="25" height="25" />
						<space width="5" />
						<button id="button_particletype_fog_texture_remove" image="resources/engine/images/delete.png" width="25" height="25"/>	
					</layout>
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Transp." width="70" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="particletype_fog_transparency" width="120" height="auto" text="./texture.png" />
						<space width="5" />
						<button id="button_particletype_fog_transparency_open" image="resources/engine/images/folder.png" width="25" height="25" />
						<space width="5" />
						<button id="button_particletype_fog_transparency_remove" image="resources/engine/images/delete.png" width="25" height="25"/>	
					</layout>
					<space height="5" />
					<menu-separator />
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Max points" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="particletype_fog_maxpoints" width="50" height="auto" text="1000" />
					</layout>
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Point size" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="particletype_fog_pointsize" width="50" height="auto" text="100" />
					</layout>
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Horiz. sprites" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="particletype_fog_horizontal_sprites"  width="30" height="auto" text="10" />
					</layout>
					<space height="5" /> 
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Vert. sprites" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="particletype_fog_vertical_sprites" width="30" height="auto" text="10" />
					</layout>
					<space height="5" />
					<menu-separator />
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="FPS" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="particletype_fog_fps" width="50" height="auto" text="100" />
					</layout>
				</layout>
			</element>
				
		</layout>		
	</layout>
</element>