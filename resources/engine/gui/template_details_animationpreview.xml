<element id="{$id}" width="100%" height="auto">
	<layout width="100%" height="auto" padding="5" alignment="vertical" vertical-align="center" horizontal-align="center">
		<button width="100%" height="25" text="Preview" on-mouse-click="{$id}.condition!=open"/>
		<layout show-on="open" width="100%" height="auto" padding="5" alignment="vertical" vertical-align="top" horizontal-align="left">			
								
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Base Animation" width="90" height="auto" />
				<space width="5" />
				<space width="*" />
				<dropdown id="dropdown_animationpreview_base" width="130" height="auto" text="tdme.none">
					<scrollarea width="100%" height="100">
					</scrollarea>
				</dropdown>
			</layout>
			
			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Overlay #1" width="90" height="auto" />
				<space width="5" />
				<space width="*" />
				<dropdown id="dropdown_animationpreview_overlay1" width="130" height="auto" text="tdme.none">
					<scrollarea width="100%" height="100">
					</scrollarea>
				</dropdown>
			</layout>
			
			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Overlay #2" width="90" height="auto" />
				<space width="5" />
				<space width="*" />
				<dropdown id="dropdown_animationpreview_overlay2" width="130" height="auto" text="tdme.none">
					<scrollarea width="100%" height="100">
					</scrollarea>
				</dropdown>
			</layout>
			
			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Overlay #3" width="90" height="auto" />
				<space width="5" />
				<space width="*" />
				<dropdown id="dropdown_animationpreview_overlay3" width="130" height="auto" text="tdme.none">
					<scrollarea width="100%" height="100">
					</scrollarea>
				</dropdown>
			</layout>
			
			<space height="5" />
			<menu-separator />
			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Bone" width="70" height="auto" />
				<space width="5" />
				<space width="*" />
				<dropdown id="dropdown_animationpreview_attachment1_bone" width="180" height="auto" text="tdme.none">
					<scrollarea width="100%" height="100">
						<dropdown-option text="<No bone>" value="" selected="true" />
					</scrollarea>
				</dropdown>
			</layout>
			
			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Attachment" width="70" height="auto" horizontal-align="left" />
				<space width="5" />
				<space width="*" />
				<input id="animationpreview_attachment1_model" width="120" height="auto" text="./model.tm" />
				<space width="5" />
				<button id="animationpreview_attachment1_model_open" image="resources/engine/images/folder.png" width="25" height="25" />
				<space width="5" />
				<button id="animationpreview_attachment1_model_remove" image="resources/engine/images/delete.png" width="25" height="25" />
			</layout>
								
		</layout>		
	</layout>
</element>