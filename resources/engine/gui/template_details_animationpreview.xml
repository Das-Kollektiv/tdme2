<element id="{$id}" width="100%" height="auto">
	<layout width="100%" height="auto" padding="5" alignment="vertical" vertical-align="center" horizontal-align="center">
		<button width="100%" height="25" text="Preview" on-mouse-click="{$id}.condition!=open"/>
		<layout show-on="open" width="100%" height="auto" padding="5" alignment="vertical" vertical-align="top" horizontal-align="left">			
								
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" color="{$color.font_normal}" text="Base Animation" width="*" height="auto" />
				<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
					<dropdown id="animationpreview_base" width="100%" height="auto" text="tdme.none">
						<scrollarea id="animationpreview_base_scrollarea" width="100%" height="100">
						</scrollarea>
					</dropdown>
				</layout>
			</layout>
			
			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" color="{$color.font_normal}" text="Overlay #1" width="*" height="auto" />
				<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
					<dropdown id="animationpreview_overlay1" width="100%" height="auto" text="tdme.none">
						<scrollarea id="animationpreview_overlay1_scrollarea" width="100%" height="100">
						</scrollarea>
					</dropdown>
				</layout>
			</layout>
			
			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" color="{$color.font_normal}" text="Overlay #2" width="*" height="auto" />
				<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
					<dropdown id="animationpreview_overlay2" width="100%" height="auto" text="tdme.none">
						<scrollarea id="animationpreview_overlay2_scrollarea" width="100%" height="100">
						</scrollarea>
					</dropdown>
				</layout>
			</layout>
			
			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" color="{$color.font_normal}" text="Overlay #3" width="*" height="auto" />
				<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
					<dropdown id="animationpreview_overlay3" width="100%" height="auto" text="tdme.none">
						<scrollarea id="animationpreview_overlay3_scrollarea3" width="100%" height="100">
						</scrollarea>
					</dropdown>
				</layout>
			</layout>
			
			<space height="5" />
			<menu-separator />
			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" color="{$color.font_normal}" text="Bone" width="*" height="auto" />
				<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
					<dropdown id="animationpreview_attachment1_bone" width="100%" height="auto" text="tdme.none">
						<scrollarea id="animationpreview_attachment1_bone_scrollarea" width="100%" height="100">
							<dropdown-option text="<No bone>" value="" selected="true" />
						</scrollarea>
					</dropdown>
				</layout>
			</layout>
			
			<space height="5" />
			<menu-separator />
			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" color="{$color.font_normal}" text="Attachment" width="*" height="auto" horizontal-align="left" />
				<layout alignment="horizontal" width="75%" height="auto" horizontal-align="right">
					<element width="85" height="85" horizontal-align="center" vertical-align="center" border="1" border-color="{$color.element_frame}" background-color="{$color.element_midground}">
						<text font="{$font.default}" color="{$color.font_hint}" text="Select"  />
						<!-- <button template="button_template_thumbnail.xml" size="75" thumbnail="resources/engine/textures/terrain_dirt.png" icon="resources/engine/images/folder.png"/> -->
					</element>
					<space width="5" />
					<layout width="auto" height="auto" alignment="vertical">
						<button id="animationpreview_attachment1_model_open" image="resources/engine/images/folder.png" width="25" height="25" />
						<space height="5" />
						<button id="animationpreview_attachment1_model_remove" image="resources/engine/images/delete.png" width="25" height="25" />
						<space height="5" />
						<button id="animationpreview_attachment1_model_browseto" image="resources/engine/images/search.png" width="25" height="25" />
					</layout>
				</layout>
			</layout>
								
		</layout>		
	</layout>
</element>