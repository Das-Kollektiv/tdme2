<element id="{$id}" width="100%" height="auto">
	<layout width="100%" height="auto" padding="5" alignment="vertical" vertical-align="center" horizontal-align="center">
		<button width="100%" height="25" text="Visibility" on-mouse-click="{$id}.condition!=open"/>
		<layout show-on="open" width="100%" height="auto" padding="5" alignment="vertical" vertical-align="top" horizontal-align="left">			

			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" color="{$color.font_normal}" text="Show on" width="*" height="auto"/>
				<layout alignment="horizontal" width="75%" height="auto" horizontal-align="right">
					<input id="{$id}_show" width="100%" height="auto" text="condition1, condition2"/>
				</layout>	
			</layout>
			
			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" color="{$color.font_normal}" text="Hide on" width="*" height="auto"/>
				<layout alignment="horizontal" width="75%" height="auto" horizontal-align="right">
					<input id="{$id}_hide" width="100%" height="auto" text="condition1, condition2"/>
				</layout>
			</layout>	
								
		</layout>		
	</layout>
</element>