<element id="{$id}" width="100%" height="auto">
	<layout width="100%" height="auto" padding="5" alignment="vertical" vertical-align="center" horizontal-align="center">
		<button width="100%" height="25" text="Foliage Brush" on-mouse-click="{$id}.condition!=open"/>
		<layout show-on="open" width="100%" height="auto" padding="5" alignment="vertical" vertical-align="top" horizontal-align="left">	

			<element id="foliagebrush_details_panel" width="100%" height="auto">
			
				<layout width="100%" height="auto" alignment="vertical" vertical-align="top" horizontal-align="left">	
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" color="{$color.font_normal}" text="Texture" width="*" height="auto" horizontal-align="left" />
						<layout alignment="horizontal" width="75%" height="auto" horizontal-align="right">
							<element width="85" height="85" horizontal-align="center" vertical-align="center" border="1" border-color="{$color.element_frame}" background-color="{$color.element_midground}">
								<text font="{$font.default}" color="{$color.font_hint}" text="Select"  />
								<!-- <button template="button_template_thumbnail.xml" size="75" thumbnail="resources/engine/textures/terrain_dirt.png" icon="resources/engine/images/folder.png"/> -->
							</element>
							<space width="5" />
							<layout width="auto" height="auto" alignment="vertical">
								<button id="foliagebrush_texture_open" image="resources/engine/images/folder.png" width="25" height="25" />
								<space height="5" />
								<button id="foliagebrush_texture_remove" image="resources/engine/images/delete.png" width="25" height="25" />
								<space height="5" />
								<button id="foliagebrush_texture_browseto" image="resources/engine/images/search.png" width="25" height="25" />
							</layout>
						</layout>						
					</layout>							
					<space height="5" />
					<menu-separator />
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" color="{$color.font_normal}" text="Brush Size" width="*" height="auto" />
						<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
							<input id="foliagebrush_size"  width="75%" height="auto" text="32" unit="m" options="type=int,min=0.0,step=1" image="resources/engine/images/inputslider.png" />
						</layout>
					</layout>
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" color="{$color.font_normal}" text="Brush Density" width="*" height="auto" />
						<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
							<input id="foliagebrush_density" width="75%" height="auto" text="100" unit="/m" options="type=float,min=0.0,step=1,decimals=2" image="resources/engine/images/inputslider.png" />
						</layout>
					</layout>
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" color="{$color.font_normal}" text="Brush Smoothness" width="*" height="auto" />
						<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
							<input id="foliagebrush_smoothness" width="75%%" height="auto" text="100" options="type=int,min=0.0,step=1" image="resources/engine/images/inputslider.png"/>
						</layout>
					</layout>
					<space height="5" />
					<menu-separator />
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="top">
						<layout width="*" height="auto" alignment="vertical">
							<selectbox width="100%" id="selectbox_foliagebrush_objects" boder="0">
								<scrollarea background-color="{$color.element_midground}" width="100%" height="100" focusable="true">


								</scrollarea>
							</selectbox>
							<space height="5" />
							<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
								<text font="{$font.default}" color="{$color.font_normal}" text="Count" width="90" height="auto" />
								<space width="5" />
								<space width="*" />
								<input id="foliagebrush_object_count" width="70" height="auto" text="100" options="type=int,min=0,step=1" image="resources/engine/images/inputslider.png"  />
							</layout>
						</layout>
						<space width="5" />
						<layout width="auto" height="auto" alignment="vertical">
							<button id="foliagebrush_object_add" image="resources/engine/images/add.png" width="25" height="25" />
							<space height="5" />
							<button id="foliagebrush_object_substract" image="resources/engine/images/substract.png" width="25" height="25" />
						</layout>
					</layout>	
					<space height="5" />
					<menu-separator />
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" color="{$color.font_normal}" text="Normal Align" width="*" height="auto"/>
						<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
							<checkbox id="foliagebrush_normalalign" width="25" height="25" value="1" on-mouse-click="foliagebrush_details_panel.condition!=normalalign" />
						</layout>
					</layout>
					<space height="5" />
					<menu-separator />
					<space height="5" hide-on="normalalign" />
					<layout hide-on="normalalign" width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" color="{$color.font_normal}" text="Rotation" width="*" height="auto" />
						<layout alignment="horizontal" width="75%" height="auto" horizontal-align="right" vertical-align="center">
							<layout alignment="horizontal" width="40%" height="auto" horizontal-align="right">
								<layout width="5" height="25" background-color="{$color.xaxis}" />
								<input id="foliagebrush_rotationrange_x_min" width="*" height="auto" text="-180°" unit="°" options="type=int,step=1" image="resources/engine/images/inputslider.png" />
							</layout>
							<space width="5" />
							<text font="{$font.default}" color="{$color.font_normal}" text="-"/>
							<space width="5" />
							<layout alignment="horizontal" width="40%" height="auto" horizontal-align="right">
								<layout width="5" height="25" background-color="{$color.xaxis}" />
								<input id="foliagebrush_rotationrange_x_max" width="*" height="auto" text="-180°" unit="°" options="type=int,step=1" image="resources/engine/images/inputslider.png"/>
							</layout>
						</layout>
					</layout>
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text show-on="normalalign" font="{$font.default}" color="{$color.font_normal}" text="Rotation" width="*" height="auto" />
						<text hide-on="normalalign" font="{$font.default}" color="{$color.font_normal}" text="" width="*" height="auto" />
						<layout alignment="horizontal" width="75%" height="auto" horizontal-align="right" vertical-align="center">
							<layout alignment="horizontal" width="40%" height="auto" horizontal-align="right">
								<layout width="5" height="25" background-color="{$color.yaxis}" />
								<input id="foliagebrush_rotationrange_y_min" width="*" height="auto" text="-180°" unit="°" options="type=int,step=1" image="resources/engine/images/inputslider.png" />
							</layout>
							<space width="5" />
							<text font="{$font.default}" color="{$color.font_normal}" text="-"/>
							<space width="5" />
							<layout alignment="horizontal" width="40%" height="auto" horizontal-align="right">
								<layout width="5" height="25" background-color="{$color.yaxis}" />
								<input id="foliagebrush_rotationrange_y_max" width="*" height="auto" text="-180°"  unit="°" options="type=int,step=1" image="resources/engine/images/inputslider.png"/>
							</layout>
						</layout>
					</layout>
					<space height="5" hide-on="normalalign" />
					<layout hide-on="normalalign" width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" color="{$color.font_normal}" text="" width="*" height="auto" />
						<layout alignment="horizontal" width="75%" height="auto" horizontal-align="right" vertical-align="center">
							<layout alignment="horizontal" width="40%" height="auto" horizontal-align="right">
								<layout width="5" height="25" background-color="{$color.zaxis}" />
								<input id="foliagebrush_rotationrange_z_min" width="*" height="auto" text="-180°" unit="°" options="type=int,step=1" image="resources/engine/images/inputslider.png" />
							</layout>
							<space width="5" />
							<text font="{$font.default}" color="{$color.font_normal}" text="-"/>
							<space width="5" />
							<layout alignment="horizontal" width="40%" height="auto" horizontal-align="right">
								<layout width="5" height="25" background-color="{$color.zaxis}" />
								<input id="foliagebrush_rotationrange_z_max" width="*" height="auto" text="-180°" unit="°" options="type=int,step=1" image="resources/engine/images/inputslider.png" />
							</layout>
						</layout>
					</layout>
					<space height="5" />
					<menu-separator />
					<space height="5" />

					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" color="{$color.font_normal}" text="Scale" width="*" height="auto" />
						<layout alignment="horizontal" width="75%" height="auto" horizontal-align="right" vertical-align="center">
							<input id="foliagebrush_scalerange_min" width="40%" height="auto" text="10.00" options="type=float,min=0.0,step=1,decimals=2" image="resources/engine/images/inputslider.png" />
							<space width="5" />
							<text font="{$font.default}" color="{$color.font_normal}" text="-"/>
							<space width="5" />
							<input id="foliagebrush_scalerange_max" width="40%" height="auto" text="10.00" options="type=float,min=0.0,step=1,decimals=2" image="resources/engine/images/inputslider.png" />
						</layout>
					</layout>
					
					<space height="5" />
					<menu-separator />
					<space height="5" />
					
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" color="{$color.font_normal}" text="Height" width="*" height="auto" />
						<layout alignment="horizontal" width="75%" height="auto" horizontal-align="right" vertical-align="center">
							<input id="foliagebrush_heightrange_min" width="40%" height="auto" text="-100" unit="m" options="type=int,step=1" image="resources/engine/images/inputslider.png"/>
							<space width="5" />
							<text font="{$font.default}" color="{$color.font_normal}" text="-"/>
							<space width="5" />
							<input id="foliagebrush_heightrange_max" width="40%" height="auto" text="100" unit="m" options="type=int,step=1" image="resources/engine/images/inputslider.png" />
						</layout>
					</layout>
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" color="{$color.font_normal}" text="Slope" width="*" height="auto" />
						<layout alignment="horizontal" width="75%" height="auto" horizontal-align="right" vertical-align="center">
							<input id="foliagebrush_sloperange_min" width="40%" height="auto" text="0°" unit="°" options="type=int,min=0,max=90,step=1" image="resources/engine/images/inputslider.png"/>
							<space width="5" />
							<text font="{$font.default}" color="{$color.font_normal}" text="-"/>
							<space width="5" />
							<input id="foliagebrush_sloperange_max" width="40%" height="auto" text="90°" unit="°" options="type=int,min=0,max=90,step=1" image="resources/engine/images/inputslider.png"/>
						</layout>
					</layout>
				
				</layout>
			
			</element> 
				
		</layout>		
	</layout>
</element>