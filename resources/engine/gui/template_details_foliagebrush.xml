<element id="{$id}" width="100%" height="auto">
	<layout width="100%" height="auto" padding="5" alignment="vertical" vertical-align="center" horizontal-align="center">
		<button width="100%" height="25" text="Foliage Brush" on-mouse-click="{$id}.condition!=open"/>
		<layout show-on="open" width="100%" height="auto" padding="5" alignment="vertical" vertical-align="top" horizontal-align="left">	

			<element id="foliagebrush_details_panel" width="100%" height="auto">
			
				<layout width="100%" height="auto" alignment="vertical" vertical-align="top" horizontal-align="left">	
		
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Texture" width="70" height="auto" />
						<space width="5" />
						<space width="*" />
						<input id="foliagebrush_texture" width="120" height="auto" text="./texture.png" />
						<space width="5" />
						<button id="foliagebrush_texture_open" image="resources/engine/images/folder.png" width="25" height="25" />
						<space width="5" />
						<button id="foliagebrush_texture_remove" image="resources/engine/images/delete.png" width="25" height="25" />
					</layout>							
					<space height="5" />
					<menu-separator />
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Size" width="90" height="auto" />
						<space width="5" />
						<space width="*" />
						<input id="foliagebrush_size"  width="70" height="auto" text="100.00" />
					</layout>
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Density" width="90" height="auto" />
						<space width="5" />
						<space width="*" />
						<input id="foliagebrush_density" width="70" height="auto" text="100.00" />
					</layout>
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Smoothness" width="90" height="auto" />
						<space width="5" />
						<space width="*" />
						<input id="foliagebrush_smoothness" width="70" height="auto" text="100.00" />
					</layout>
					<space height="5" />
					<menu-separator />
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="top">
						<layout width="*" height="auto" alignment="vertical">
							<selectbox width="100%" id="selectbox_foliagebrush_objects" boder="0">
								<scrollarea background-color="{$color.element_midground}" width="100%" height="100" focusable="true">


								</scrollarea>
							</selectbox>
							<space height="5" />
							<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
								<text font="{$font.default}" text="Count" width="90" height="auto" />
								<space width="5" />
								<space width="*" />
								<input id="foliagebrush_object_count" width="70" height="auto" text="100" />
							</layout>
						</layout>
						<space width="5" />
						<layout width="auto" height="auto" alignment="vertical">
							<button id="foliagebrush_object_add" image="resources/engine/images/add.png" width="25" height="25" />
							<space height="5" />
							<button id="foliagebrush_object_substract" image="resources/engine/images/substract.png" width="25" height="25" />
						</layout>
					</layout>	
					<space height="5" />
					<menu-separator />
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Normal Align" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<checkbox id="foliagebrush_normalalign" width="25" height="25" value="1" on-mouse-click="foliagebrush_details_panel.condition!=normalalign" />
					</layout>
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Scale Range" width="70" height="auto" />
						<space width="5" />
						<space width="*" />
						<input id="foliagebrush_scalerange_min" width="50" height="auto" text="10.0" />
						<space width="5" />
						<text font="{$font.default}" text="-"/>
						<space width="5" />
						<input id="foliagebrush_scalerange_max" width="50" height="auto" text="10.0" />
					</layout>
					<space height="5" hide-on="normalalign" />
					<layout hide-on="normalalign" width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Rotation Range X" width="90" height="auto" />
						<space width="5" />
						<space width="*" />
						<input id="foliagebrush_rotationrange_x_min" width="50" height="auto" text="-180°" />
						<space width="5" />
						<text font="{$font.default}" text="-"/>
						<space width="5" />
						<input id="foliagebrush_rotationrange_x_max" width="50" height="auto" text="-180°" />
					</layout>
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Rotation Range Y" width="90" height="auto" />
						<space width="5" />
						<space width="*" />
						<input id="foliagebrush_rotationrange_y_min" width="50" height="auto" text="-180°" />
						<space width="5" />
						<text font="{$font.default}" text="-"/>
						<space width="5" />
						<input id="foliagebrush_rotationrange_y_max" width="50" height="auto" text="-180°" />
					</layout>
					<space height="5" hide-on="normalalign" />
					<layout hide-on="normalalign" width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Rotation Range Z" width="90" height="auto" />
						<space width="5" />
						<space width="*" />
						<input id="foliagebrush_rotationrange_z_min" width="50" height="auto" text="-180°" />
						<space width="5" />
						<text font="{$font.default}" text="-"/>
						<space width="5" />
						<input id="foliagebrush_rotationrange_z_max" width="50" height="auto" text="-180°" />
					</layout>
					<space height="5" />
					<menu-separator />
					<space height="5" />			
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Height Range" width="90" height="auto" />
						<space width="5" />
						<space width="*" />
						<input id="foliagebrush_heightrange_min" width="50" height="auto" text="-180°" />
						<space width="5" />
						<text font="{$font.default}" text="-"/>
						<space width="5" />
						<input id="foliagebrush_heightrange_max" width="50" height="auto" text="-180°" />
					</layout>
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Slope Range" width="90" height="auto" />
						<space width="5" />
						<space width="*" />
						<input id="foliagebrush_sloperange_min" width="50" height="auto" text="-180°" />
						<space width="5" />
						<text font="{$font.default}" text="-"/>
						<space width="5" />
						<input id="foliagebrush_sloperange_max" width="50" height="auto" text="-180°" />
					</layout>
				
				</layout>
			
			</element> 
				
		</layout>		
	</layout>
</element>