<screen id="popup_infodialog" background-color="#00000080" popup="true" min-width="1024" min-height="768" max-width="3200" max-height="1800">
	<layout alignment="vertical" horizontal-align="center" vertical-align="center" width="100%" height="100%">
	
			<tabs width="400" height="200">
				<tabs-header id="infodialog_tabs-header">
					<tab id="infodialog_caption" image="resources/engine/images/attention.png" text="Information" closeable="true"/>
				</tabs-header>
				<tabs-content>
					<tab-content tab-id="infodialog_caption" vertical-align="center">
					
						<layout padding="10" alignment="vertical" horizontal-align="center" vertical-align="center" width="100%" height="100%">
					
							<scrollarea width="100%" height="100" padding="5" border="1" background-color="{$color.element_midground}">
								<styled-text id="infodialog_message" font="{$font.default}" size="{$fontsize.default}" color="{$color.font_normal}" width="100%" height="auto">
									An message should be displayed here!
								</styled-text>
							</scrollarea>
					
							<space height="20" />
					
							<element id="button_panel" width="100%" height="auto" horizontal-align="center" vertical-align="center">
								<layout width="100%" height="auto" alignment="horizontal" horizontal-align="center" vertical-align="center" >
									<button width="*" id="infodialog_button1" text="Okay" />
									<space show-on="button2" width="10" />
									<button show-on="button2" width="*" id="infodialog_button2" text="Okay" />
									<space show-on="button3" width="10" />
									<button show-on="button3" width="*" id="infodialog_button3" text="Okay" />
								</layout>
							</element>
					
						</layout>
						
					</tab-content>
				</tabs-content>
			</tabs>
			
	</layout>
</screen>

