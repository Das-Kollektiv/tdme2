<screen id="popup_infodialog" background-color="#00000080" popup="true" min-width="1024" min-height="768" max-width="1920" max-height="1080">
	<layout alignment="vertical" horizontal-align="center" vertical-align="center" width="100%" height="100%">
		<layout padding="20" alignment="vertical" width="500" height="auto" horizontal-align="center" vertical-align="center" border="1" background-color="{$color.element_foreground}">
			<text id="infodialog_caption" font="{$font.default}" text="Info" width="auto" height="auto"/>
			<space height="*" />
			<scrollarea width="100%" height="100">
				<multiline-text id="infodialog_message" font="{$font.default}" color="#000000" width="auto" height="auto">
					An message should be displayed here!
				</multiline-text>
			</scrollarea>
			<space height="*" />
			<layout width="100%" height="auto" alignment="horizontal">
				<space width="*" />
				<button id="infodialog_ok" name="infodialog_okay" text="Okay" />
				<space width="*" />
			</layout>
		</layout>
	</layout>
</screen>
