<element id="{$id}" width="100%" height="auto">
	<layout width="100%" height="auto" padding="5" alignment="vertical" vertical-align="center" horizontal-align="center">
		<button width="100%" height="25" text="Properties" on-mouse-click="{$id}.condition!=open"/>
		<layout show-on="open" width="100%" height="auto" padding="5" alignment="vertical" vertical-align="top" horizontal-align="center">				

			<space height="5" />
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Name" width="50" height="auto"/>
				<space width="5" />
				<input id="property_name" width="*" height="auto" text="Name" />
			</layout>
			<space height="5" />
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Value" width="50" height="auto"/>
				<space width="5" />
				<input id="property_value" width="*" height="auto" text="Value" />
			</layout>

		</layout>		
	</layout>
</element>