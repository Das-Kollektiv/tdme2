<element id="{$id}" width="100%" height="auto">
	<layout width="100%" height="auto" padding="5" alignment="vertical" vertical-align="center" horizontal-align="center">
		<button width="100%" height="25" text="Rendering" on-mouse-click="{$id}.condition!=open"/>
		<layout show-on="open" width="100%" height="auto" padding="5" alignment="vertical" vertical-align="top" horizontal-align="left">			
							
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Shader" width="120" height="auto" />
				<space width="5" />
				<dropdown id="rendering_shader" name="rendering_shader" width="*" height="auto" text="Default">
					<dropdown-option text="Default" value="default" />
					<dropdown-option text="Foliage" value="foliage" />
					<dropdown-option text="Terrain" value="terrain" />
					<dropdown-option text="Tree" value="tree" />
					<dropdown-option text="Water" value="water" />
					<dropdown-option text="PBR Default" value="pbr-default" />
				</dropdown>
			</layout>
			<space height="5" />
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Dist. shader" width="120" height="auto" />
				<space width="5" />
				<dropdown id="rendering_distance_shader" name="rendering_distance_shader" width="*" height="auto" text="Default">
					<dropdown-option text="Default" value="default" />
					<dropdown-option text="Foliage" value="foliage" />
					<dropdown-option text="Tree" value="tree" />
					<dropdown-option text="Terrain" value="terrain" />
					<dropdown-option text="Water" value="water" />
					<dropdown-option text="PBR Default" value="pbr-default" />
				</dropdown>
			</layout>
			<space height="5" />
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Min. distance" width="120" height="auto" />
				<space width="5" />
				<input id="rendering_distance_shader_distance" name="rendering_distance_shader_distance" width="*" height="auto" text="10000" />
			</layout>
			<space height="20" />

			<checkbox id="rendering_contributes_shadows" name="rendering_contributes_shadows" text="Contributes shadows" value="1" />
			<checkbox id="rendering_receives_shadows" name="rendering_receives_shadows" text="Receives shadows" value="1" />
			<checkbox id="rendering_render_groups" name="rendering_render_groups" text="Use render groups" value="1" />
					
		</layout>		
	</layout>
</element>