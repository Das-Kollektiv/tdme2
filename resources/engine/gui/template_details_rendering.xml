<element id="{$id}" width="100%" height="auto">
	<layout width="100%" height="auto" padding="5" alignment="vertical" vertical-align="center" horizontal-align="center">
		<button width="100%" height="25" text="Rendering" on-mouse-click="{$id}.condition!=open"/>
		<layout show-on="open" width="100%" height="auto" padding="5" alignment="vertical" vertical-align="top" horizontal-align="left">			

			<layout show-on="shader" width="100%" height="auto" alignment="vertical" vertical-align="center" horizontal-align="center">
				<space height="5" />

				<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
					<text font="{$font.default}" color="{$color.font_normal}" text="Shader" width="*" height="auto" />
					<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
						<dropdown id="rendering_shader" width="100%" height="auto" text="Default">
						</dropdown>
					</layout>
				</layout>

				<space height="5" />
				<menu-separator />
				<space height="5" />

				<layout id="rendering_shader_details" alignment="vertical" width="100%" height="auto" horizontal-align="center">

				</layout>

				<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
					<text font="{$font.default}" color="{$color.font_normal}" text="Distance Shader" width="*" height="auto" />
					<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
						<dropdown id="rendering_distance_shader" width="100%" height="auto" text="Default">
						</dropdown>
					</layout>
				</layout>
				<space height="5" />
				<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
					<text font="{$font.default}" color="{$color.font_normal}" text="Min Distance" width="*" height="auto" />
					<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
						<input id="rendering_distanceshader_distance" name="rendering_distance_shader_distance" width="100%" height="auto" text="1000.00" unit="m" options="type=float,min=0.0,step=0.25,decimals=2" image="resources/engine/images/inputslider.png"/>
					</layout>
				</layout>

				<space height="5" />
				<menu-separator />
				<space height="5" />		

				<layout id="rendering_distanceshader_details" alignment="vertical" width="100%" height="auto" horizontal-align="center">

				</layout>

			</layout>

			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" color="{$color.font_normal}" text="Contributes Shadows" width="*" height="auto"/>
				<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
					<checkbox id="rendering_contributes_shadows" width="25" height="25" value="1" />
				</layout>
			</layout>
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" color="{$color.font_normal}" text="Receives Shadows" width="*" height="auto"/>
				<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
					<checkbox id="rendering_receives_shadows" width="25" height="25" value="1" />
				</layout>
			</layout>
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" color="{$color.font_normal}" text="Use Render Groups" width="*" height="auto"/>
				<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
					<checkbox id="rendering_render_groups" width="25" height="25" value="1" />
				</layout>
			</layout>
					
		</layout>		
	</layout>
</element>