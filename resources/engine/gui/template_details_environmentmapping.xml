<element id="{$id}" width="100%" height="auto">
	<layout width="100%" height="auto" padding="5" alignment="vertical" vertical-align="center" horizontal-align="center">
		<button width="100%" height="25" text="Render Settings" on-mouse-click="{$id}.condition!=open"/>
		<layout show-on="open" width="100%" height="auto" padding="5" alignment="vertical" vertical-align="top" horizontal-align="left">			
	
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Standard" width="90" height="auto"/>
				<space width="5" />
				<space width="*" />
				<checkbox id="rendersettings_renderpass_standard" width="25" height="25" value="8" />
			</layout>
			<space height="5" />
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Sky" width="90" height="auto"/>
				<space width="5" />
				<space width="*" />
				<checkbox id="rendersettings_renderpass_sky" width="25" height="25" value="1" />
			</layout>
			<space height="5" />
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Terrain" width="90" height="auto"/>
				<space width="5" />
				<space width="*" />
				<checkbox id="rendersettings_renderpass_terrain" width="25" height="25" value="2" />
			</layout>
			<space height="5" />
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Water" width="90" height="auto"/>
				<space width="5" />
				<space width="*" />
				<checkbox id="rendersettings_renderpass_water" width="25" height="25" value="4" />
			</layout>
			<space height="5" />
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Post Processing" width="90" height="auto"/>
				<space width="5" />
				<space width="*" />
				<checkbox id="rendersettings_renderpass_postprocessing" width="25" height="25" value="16" />
			</layout>
			<space height="5" />
			<menu-separator />
			<space height="5" />
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Frequency" width="90" height="auto" />
				<space width="5" />
				<space width="*" />
				<dropdown id="dropdown_rendersettings_frequency" width="130" height="auto" text="Select Frequ.">
					<dropdown-option text="One time only" value="1" on-mouse-click="rendersettings_frequency_details.condition="/>
					<dropdown-option text="Every frame" value="2" on-mouse-click="rendersettings_frequency_details.condition="/>
					<dropdown-option text="Custom" value="3" on-mouse-click="rendersettings_frequency_details.condition=custom"/>
				</dropdown>
			</layout>
			<element id="rendersettings_frequency_details" width="100%" height="auto">
				<layout show-on="custom" alignment="vertical" width="100%" height="auto" horizontal-align="center" >
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Value in ms" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="rendersettings_frequency_value" width="70" height="auto" text="1000" />
					</layout>
				</layout>
			</element>
							
		</layout>		
	</layout>
</element>