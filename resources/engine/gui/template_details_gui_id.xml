<element id="{$id}" width="100%" height="auto">
	<layout width="100%" height="auto" padding="5" alignment="vertical" vertical-align="center" horizontal-align="center">
		<button width="100%" height="25" text="ID / Name" on-mouse-click="{$id}.condition!=open"/>
		<layout show-on="open" width="100%" height="auto" padding="5" alignment="vertical" vertical-align="top" horizontal-align="left">			

			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" size="{$fontsize.default}" color="{$color.font_normal}" text="ID" width="*" height="auto" />
				<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
					<input id="{$id}_id" width="100%" height="auto" text="id_name" />
				</layout>	
			</layout>
			
			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" size="{$fontsize.default}" color="{$color.font_normal}" text="Name" width="*" height="auto" />
				<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
					<input id="{$id}_name" width="100%" height="auto" text="name"  />
				</layout>
			</layout>	
								
		</layout>		
	</layout>
</element>