<element id="{$id}" width="100%" height="auto">
	<layout width="100%" height="auto" padding="5" alignment="vertical" vertical-align="center" horizontal-align="center">
		<button width="100%" height="25" text="Transformation" on-mouse-click="{$id}.condition!=open"/>
		<layout show-on="open" width="100%" height="auto" padding="5" alignment="vertical" vertical-align="top" horizontal-align="left">			

			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Translation" width="90" height="auto" horizontal-align="left" />
				<space width="5" />
				<space width="*" />
				<input id="transformation_translation_x" width="40" height="auto" text="0.0" />
				<space width="5" />
				<input id="transformation_translation_y"  width="40" height="auto" text="0.0" />
				<space width="5" />
				<input id="transformation_translation_z"  width="40" height="auto" text="0.0" />	
			</layout>
			
			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Scale" width="90" height="auto" horizontal-align="left" />
				<space width="5" />
				<space width="*" />
				<input id="transformation_scale_x" width="40" height="auto" text="0.0" />
				<space width="5" />
				<input id="transformation_scale_y"  width="40" height="auto" text="0.0" />
				<space width="5" />
				<input id="transformation_scale_z"  width="40" height="auto" text="0.0" />	
			</layout>
			
			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Rotation" width="90" height="auto" horizontal-align="left" />
				<space width="5" />
				<space width="*" />
				<input id="transformation_rotation_x" width="40" height="auto" text="0.0" />
				<space width="5" />
				<input id="transformation_rotation_y"  width="40" height="auto" text="0.0" />
				<space width="5" />
				<input id="transformation_rotation_z"  width="40" height="auto" text="0.0" />	
			</layout>
								
		</layout>		
	</layout>
</element>