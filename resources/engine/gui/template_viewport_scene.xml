<layout width="100%" height="100%" padding="5" alignment="vertical" vertical-align="center" horizontal-align="center">
	<element id="viewport" width="100%" height="*" border="1" background-color="{$color.element_midground}" focusable="true">
		<layout width="100%" height="100%" padding="10" alignment="vertical" horizontal-align="left" vertical-align="top">	
			<radiobutton template="radiobutton_template_gizmo.xml" id="button_select" name="gizmo" width="40" height="40" value="1" image="resources/engine/images/select.png" />
			<space height="10"/>
			<radiobutton template="radiobutton_template_gizmo.xml" id="button_translate" name="gizmo" width="40" height="40" value="2" image="resources/engine/images/translate.png" />
			<space height="5"/>
			<radiobutton template="radiobutton_template_gizmo.xml" id="button_rotate" name="gizmo" width="40" height="40" value="3" image="resources/engine/images/rotate.png" />
			<space height="5"/>
			<radiobutton template="radiobutton_template_gizmo.xml" id="button_scale" name="gizmo" width="40" height="40" value="4" image="resources/engine/images/scale.png" />
			<space height="5"/>
			<radiobutton template="radiobutton_template_gizmo.xml" id="button_gizmo" name="gizmo" width="40" height="40" value="5" image="resources/engine/images/gizmo.png" />
		</layout>
		<layout width="100%" height="100%" padding="5" alignment="horizontal" horizontal-align="right" vertical-align="top">
			<layout width="auto" height="auto" alignment="horizontal" horizontal-align="center" vertical-align="center">
				<checkbox id="checkbox_grid" template="checkbox_template_grid.xml" value="1" selected="true" />
				<space width="5"/>
				<checkbox id="checkbox_snapping" template="checkbox_template_snapping.xml" value="1" selected="true" />
				<space width="5"/>
				<text font="{$font.default}" text="X" color="{$color.font_normal}" />
				<space width="5"/>
				<input width="40" id="snapping_x" text="1.0" />
				<space width="10"/>
				<text font="{$font.default}" text="Y" color="{$color.font_normal}" />
				<space width="5"/>
				<input width="40" id="snapping_y" text="1.0" />
			</layout>
		</layout>
		<layout width="100%" height="100%" padding="5" alignment="horizontal" horizontal-align="right" vertical-align="bottom">
			<text id="text_info" font="{$font.default}" text="width 512 height 512 | infotext | stuff" color="{$color.font_normal}" />
		</layout>
	</element>	
</layout>