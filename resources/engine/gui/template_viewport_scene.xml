<layout id="{$id}" width="100%" height="100%" padding="5" alignment="vertical" vertical-align="center" horizontal-align="center">
	<element id="{$id}_viewport" width="100%" height="*" border="1" background-color="{$color.element_midground}" focusable="true">
		<layout hide-on="notools" width="100%" height="100%" padding="10" alignment="vertical" horizontal-align="left" vertical-align="top">	
			<radiobutton template="radiobutton_template_gizmo.xml" id="{$id}_button_select" name="gizmo" width="40" height="40" value="1" image="resources/engine/images/select.png" />
			<space height="20"/>
			<radiobutton template="radiobutton_template_gizmo.xml" id="{$id}_button_translate" name="gizmo" width="40" height="40" value="2" image="resources/engine/images/translate.png" />
			<space height="5"/>
			<radiobutton template="radiobutton_template_gizmo.xml" id="{$id}_button_rotate" name="gizmo" width="40" height="40" value="3" image="resources/engine/images/rotate.png" />
			<space height="5"/>
			<radiobutton template="radiobutton_template_gizmo.xml" id="{$id}_button_scale" name="gizmo" width="40" height="40" value="4" image="resources/engine/images/scale.png" />
			<space height="5"/>
			<radiobutton template="radiobutton_template_gizmo.xml" id="{$id}_button_gizmo" name="gizmo" width="40" height="40" value="5" image="resources/engine/images/gizmo.png" />
		</layout>
		<layout width="100%" height="100%" padding="5" alignment="horizontal" horizontal-align="right" vertical-align="top">
			<layout width="auto" height="auto" alignment="horizontal" horizontal-align="center" vertical-align="center">
				<checkbox id="{$id}_checkbox_grid" template="checkbox_template_image.xml" image-unchecked="resources/engine/images/checkbox_gridoff.png" image-checked="resources/engine/images/checkbox_gridon.png" value="1" selected="true" />
				<checkbox id="{$id}_checkbox_bvs" template="checkbox_template_image.xml" image-unchecked="resources/engine/images/checkbox_bvoff.png" image-checked="resources/engine/images/checkbox_bvon.png" value="1" />
				<checkbox id="{$id}_checkbox_snapping" template="checkbox_template_image.xml" image-unchecked="resources/engine/images/checkbox_snappingoff.png" image-checked="resources/engine/images/checkbox_snappingon.png" value="1" on-mouse-click="snapping_details.condition!=snapping_on" />
				<element id="snapping_details">
					<layout show-on="snapping_on" width="auto" height="auto" alignment="horizontal" horizontal-align="center" vertical-align="center">
						<text font="{$font.default}" text="X" color="{$color.font_normal}" />
						<space width="5"/>
						<input width="80" id="{$id}_snapping_x" text="10.00" options="type=float,min=0.0,step=0.25" image="resources/engine/images/inputslider.png" />
						<space width="10"/>
						<text font="{$font.default}" text="Y" color="{$color.font_normal}" />
						<space width="5"/>
						<input width="80" id="{$id}_snapping_y" text="10.00" options="type=float,min=0.0,step=0.25" image="resources/engine/images/inputslider.png" />
					</layout>
				</element>
			</layout>
		</layout>
		<layout width="100%" height="100%" padding="5" alignment="horizontal" horizontal-align="right" vertical-align="bottom">
			<text id="{$id}_text_info" font="{$font.default}" text="width 512 height 512 | infotext | stuff" color="{$color.font_normal}" />
		</layout>
	</element>	
</layout>