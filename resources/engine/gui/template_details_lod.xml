<element id="{$id}" width="100%" height="auto">
	<layout width="100%" height="auto" padding="5" alignment="vertical" vertical-align="center" horizontal-align="center">
		<button width="100%" height="25" text="LOD" on-mouse-click="{$id}.condition!=open"/>
		<layout show-on="open" width="100%" height="auto" padding="5" alignment="vertical" vertical-align="top" horizontal-align="left">			
							
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Mesh" width="70" height="auto"/>
				<space width="5" />
				<space width="*" />
				<input id="lod_model_file" name="lod_model_file" width="120" height="auto" text="./model.tm" />
				<space width="5" />
				<button id="lod_model_file_load" name="lod_model_file_load" image="resources/engine/images/folder.png" width="25" height="25" />
				<space width="5" />
				<button id="lod_model_file_clear" name="lod_model_file_clear" image="resources/engine/images/delete.png" width="25" height="25" />
			</layout>
			
			<space height="5" />
			<menu-separator />
			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Min. dist." width="90" height="auto" horizontal-align="left" />
				<space width="5" />
				<space width="*" />
				<input id="lod_min_distance" name="lod_min_distance" width="70" height="auto" text="1000.00" />
			</layout>
			
			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="LOD color add" width="90" height="auto"/>
				<space width="5" />
				<space width="*" />
				<input id="lod_color_add" name="lod_color_add" width="70" height="auto" text="#000000" />
			</layout>
			
			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="LOD color mul" width="90" height="auto"/>
				<space width="5" />
				<space width="*" />
				<input id="lod_color_mul" name="lod_color_mul" width="70" height="auto" text="#000000" />
			</layout>
					
		</layout>		
	</layout>
</element>