<element id="{$id}" width="100%" height="auto">
	<layout width="100%" height="auto" padding="5" alignment="vertical" vertical-align="center" horizontal-align="center">
		<button width="100%" height="25" text="LOD" on-mouse-click="{$id}.condition!=open"/>
		<layout show-on="open" width="100%" height="auto" padding="5" alignment="vertical" vertical-align="top" horizontal-align="left">			
							
			<dropdown id="lod_level" name="lod_level" width="100%" height="auto" text="LOD level 1">
				<dropdown-option text="LOD level 1" value="1" />
				<dropdown-option text="LOD level 2" value="2" />
				<dropdown-option text="LOD level 3" value="3" />
			</dropdown>

			<space height="20" />
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Type" width="140" height="auto" horizontal-align="left" />
				<space width="5" />
				<dropdown id="lod_type" name="lod_type" width="*" height="auto" text="None">
					<scrollarea width="100%" height="70">
						<dropdown-option text="None" value="0" />
						<dropdown-option text="Model" value="1" />
						<dropdown-option text="Ignore" value="2" />
					</scrollarea>
				</dropdown>
			</layout>
			<space height="5" />
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<input id="lod_model_file" name="lod_model_file" width="*" height="auto" text="./model.tm" />
				<space width="5" />
				<button id="lod_model_file_load" name="lod_model_file_load" image="resources/engine/images/folder.png" width="25" height="25" />
				<space width="5" />
				<button id="lod_model_file_clear" name="lod_model_file_clear" image="resources/engine/images/delete.png" width="25" height="25" />
			</layout>
			<space height="5" />
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Min. dist." width="140" height="auto" horizontal-align="left" />
				<space width="5" />
				<input id="lod_min_distance" name="lod_min_distance" width="*" height="auto" text="0.0" />
				<space width="*" />
			</layout>
			<space height="5" />
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="LOD color add" width="140" height="auto"/>
				<space width="5" />
				<input id="lod_color_add" name="lod_color_add" width="*" height="auto" text="0.0, 0.0, 0.0, 0.0" />
			</layout>
			<space height="5" />
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="LOD color mul" width="140" height="auto"/>
				<space width="5" />
				<input id="lod_color_mul" name="lod_color_mul" width="*" height="auto" text="1.0, 1.0, 1.0, 1.0" />
			</layout>
					
		</layout>		
	</layout>
</element>