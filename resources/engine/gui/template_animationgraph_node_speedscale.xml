<template>
	<moveable id="{$id}" horizontal-align="center" vertical-align="center" left="{$left}" top="{$top}" width="auto" height="auto">	

		<element width="215" height="auto" horizontal-align="center" value="node_{$id}">

			<layout border-right="1" border-bottom="1" border-color="{$color.element_frame}" width="200" height="*" alignment="vertical" vertical-align="top" background-color="{$color.element_foreground}">

				<layer border-bottom="1" border-color="{$color.element_frame}" width="100%" height="auto" >
					<layout width="100%" height="30" background-color="{$node-type-color}"/>
					<layout width="100%" height="30" background-color="#00000080"/>
				</layer>

			</layout>

			<layout padding="5" alignment="horizontal" horizontal-align="left" vertical-align="center" width="200" height="auto">
				<text font="{$font.default}" size="{$fontsize.default}" color="{$color.font_normal}" text="Speed Scale" width="*" height="auto"/>
			</layout>
			
			<layout padding-top="40" padding-bottom="10" alignment="horizontal" width="100%" height="auto">
			
				<!-- input container -->
				<layout id="{$id}_input_container" alignment="vertical" width="85%" height="auto">
					
					<template
						id="name"
						src="resources/engine/gui/template_visualcode_input.xml"
						on-initialize="name_input_type_panel.condition=input"

						text="Name"
					/>

					<space height="20"/>
					
					<template
						id="base"
						src="resources/engine/gui/template_visualcode_input.xml"
						
						pin_type_connected="resources/engine/images/visualcode_flow_connected.png"
						pin_type_unconnected="resources/engine/images/visualcode_flow_unconnected.png"
						
						text="In"
					/>
					
					<template
						id="speed"
						src="resources/engine/gui/template_visualcode_input.xml"
						on-initialize="speed_input_type_panel.condition=input"
						
						text="Scale"

						input_text="1.00"
						input_options="type=float,,step=0.01,decimals=2"
						input_image="resources/engine/images/inputslider.png"
					/>
					
				</layout>
				<!-- --------------- -->

				<!-- output container -->			
				<layout id="{$id}_output_container" alignment="vertical" width="15%" height="auto">
				
					<template
						id="output1"
						src="resources/engine/gui/template_visualcode_output.xml"
					
						pin_type_connected="resources/engine/images/visualcode_flow_connected.png"
						pin_type_unconnected="resources/engine/images/visualcode_flow_unconnected.png"
					/>
					
				</layout>
				<!-- --------------- -->

			</layout>		
		
		</element>
				
	</moveable>
</template>
