<element id="{$id}" width="100%" height="auto">
	<layout width="100%" height="auto" padding="5" alignment="vertical" vertical-align="center" horizontal-align="center">
		<button width="100%" height="25" text="Layout Content" on-mouse-click="{$id}.condition!=open"/>
		<layout show-on="open" width="100%" height="auto" padding="5" alignment="vertical" vertical-align="top" horizontal-align="left">			

			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" color="{$color.font_normal}" text="Alignment" width="*" height="auto" />
				<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
					<dropdown id="content_layout_alignemnt" width="100%" height="auto">
						<dropdown-option text="vertical" value="vertical" />
						<dropdown-option text="horizontal" value="horizontal" />
						<dropdown-option text="none" value="none" selected="true" />
					</dropdown>
				</layout>
			</layout>
								
		</layout>		
	</layout>
</element>