<screen id="popup_about" background-color="#00000080" popup="true" min-width="1024" min-height="768" max-width="3200" max-height="1800">
	<layout alignment="vertical" horizontal-align="center" vertical-align="center" width="100%" height="100%">
	
			<tabs width="400" height="400">
				<tabs-header id="about_tabs-header">
					<tab id="about_caption" image="resources/engine/images/tdme.png" text="About" closeable="true"/>
				</tabs-header>
				<tabs-content>
					<tab-content tab-id="about_caption" vertical-align="center">
					
						<layout padding="20" alignment="vertical" horizontal-align="center" vertical-align="center" width="100%" height="100%">
					
							<image width="339" height="94" src="resources/engine/images/tdme_fontlogo_white.png"/>
							
							<space height="10" />
							
							<text id="about_platform" font="{$font.default}" size="{$fontsize.default}" color="{$color.font_disabled}" width="100%" height="auto" horizontal-align="center" text="Platform: " />
							
							<space height="5" />
							
							<styled-text id="about_graphics" font="{$font.default}" size="{$fontsize.default}" color="{$color.font_disabled}" width="100%" height="auto" horizontal-align="center">
								<![CDATA[
									Graphics:
								]]>
							</styled-text>
							
							<space height="20" />
						
							<layout alignment="horizontal" horizontal-align="center" vertical-align="center" width="100%" height="*">
							
								<layout alignment="vertical" horizontal-align="left" vertical-align="top" width="auto" height="125">
									<text font="{$font.default}" size="{$fontsize.default}" color="{$color.font_normal}" text="TDME2" width="auto" height="25" />
									
									<text id="about_version" font="{$font.default}" size="{$fontsize.default}" color="{$color.font_disabled}" text="v1.9.99" width="auto" height="25" />
								</layout>
								
								<space width="150"/>
								
								<layout alignment="vertical" horizontal-align="left" vertical-align="top" width="auto" height="125">
									<!-- 
									<element id="about_releasenotes_element" width="auto" height="auto" on-mouse-click="https://github.com/andreasdr/tdme2/commits/master" options="mouse-cursor=hand">
										<layout alignment="horizontal" horizontal-align="left" vertical-align="center" width="auto" height="25">
											<image src="resources/engine/images/weblink.png"/>
											<space width="5"/>
											<text id="about_releasenotes" font="{$font.default}" size="{$fontsize.default}" color="{$color.font_normal}" text="Release Notes" width="auto" />
										</layout>
									</element>
									 -->
									<element id="about_github_element" width="auto" height="auto" on-mouse-click="https://github.com/andreasdr/tdme2" options="mouse-cursor=hand">
										<layout alignment="horizontal" horizontal-align="left" vertical-align="center" width="auto" height="25">
											<image src="resources/engine/images/weblink.png"/>
											<space width="5"/>
											<text id="about_github" font="{$font.default}" size="{$fontsize.default}" color="{$color.font_normal}" text="GitHub" width="auto" />
										</layout>
									</element>										
									<element id="about_discord_element" width="auto" height="auto" on-mouse-click="https://discord.gg/tMqrmcp23Q" options="mouse-cursor=hand">
										<layout alignment="horizontal" horizontal-align="left" vertical-align="center" width="auto" height="25">
											<image src="resources/engine/images/weblink.png"/>
											<space width="5"/>
											<text id="about_discord" font="{$font.default}" size="{$fontsize.default}" color="{$color.font_normal}" text="Discord" width="auto" />
										</layout>
									</element>
									<element id="about_license_element" width="auto" height="auto" on-mouse-click="https://github.com/andreasdr/tdme2/blob/master/LICENSE" options="mouse-cursor=hand">
										<layout alignment="horizontal" horizontal-align="left" vertical-align="center" width="auto" height="25">
											<image src="resources/engine/images/weblink.png"/>
											<space width="5"/>
											<text id="about_license" font="{$font.default}" size="{$fontsize.default}" color="{$color.font_normal}" text="License" width="auto" />
										</layout>
									</element>
									<!-- 								
									<element id="about_patreon_element" width="auto" height="auto">
										<layout alignment="horizontal" horizontal-align="left" vertical-align="center" width="auto" height="25">
											<image src="resources/engine/images/weblink.png"/>
											<space width="5"/>
											<text id="about_patreon" font="{$font.default}" size="{$fontsize.default}" color="{$color.font_normal}" text="Patreon" width="auto" />
										</layout>
									</element>
 									-->
									<space height="5" />
								</layout>

							</layout>

							<styled-text font="{$font.default}" size="{$fontsize.default}" color="{$color.font_disabled}" width="100%" height="auto" horizontal-align="center">
								<![CDATA[
									Developed 2012-2022 by [url=https://drewke.net]drewke.net[/url], [url=https://mindty.com]mindty.com[/url]
								]]>
							 </styled-text>
						
						</layout>
						
					</tab-content>
				</tabs-content>
			</tabs>
			
	</layout>
</screen>

