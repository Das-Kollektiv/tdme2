<screen id="screen_colorpicker" min-width="1024" min-height="768" max-width="1920" max-height="1080">
	<layout padding="5" border="1" border-color="{$color.element_frame}" width="auto" height="auto" alignment="vertical" background-color="{$color.element_foreground}">
		<layout alignment="horizontal" width="200" height="auto">
			<image src="resources/engine/images/colorpicker.png"/>
			<space width="5" />
			<space width="*" />
			<slider-vertical template="slider-v_template_gradient.xml" id="slider_colorpicker_brightness" value="0.5" height="175" />
		</layout>
		<space height="5" />
		<menu-separator />
		<layout padding="5" width="200" height="auto" alignment="horizontal">	
			<layout width="*" height="auto" alignment="vertical">	
				<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
					<text font="{$font.default}" text="Red" width="45" height="auto" />
					<space width="5" />
					<space width="*" />
					<input id="colorpicker_red" width="50" height="auto" text="255" />
				</layout>
				<space height="5" />
				<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
					<text font="{$font.default}" text="Green" width="45" height="auto" />
					<space width="5" />
					<space width="*" />
					<input id="colorpicker_green" width="50" height="auto" text="255" />
				</layout>
				<space height="5" />
				<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
					<text font="{$font.default}" text="Blue" width="45" height="auto" />
					<space width="5" />
					<space width="*" />
					<input id="colorpicker_blue" width="50" height="auto" text="255" />
				</layout>
				<space height="10" />
				<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
					<text font="{$font.default}" text="Alpha" width="45" height="auto" />
					<space width="5" />
					<space width="*" />
					<input id="colorpicker_alpha" width="50" height="auto" text="100" />
				</layout>
			</layout>
			<space width="10" />
			<layout width="auto" height="auto" alignment="vertical">
				<button id="button_colorpicker_pipette" image="resources/engine/images/pipette.png" width="25" height="25" />
			</layout>
		</layout>
		<menu-separator />
		<layout padding="5" width="100%" height="auto" alignment="horizontal" vertical-align="center">
			<text font="{$font.default}" text="Hex" width="90" height="auto" />
			<space width="5" />
			<space width="*" />
			<input id="colorpicker_hex" width="85" height="auto" text="#00000000" />
		</layout>		
	</layout>	
</screen>
