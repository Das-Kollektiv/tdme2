<element id="{$id}" width="100%" height="auto">
	<layout width="100%" height="auto" padding="5" alignment="vertical" vertical-align="center" horizontal-align="center">
		<button width="100%" height="25" text="Physics" on-mouse-click="{$id}.condition!=open"/>
		<layout show-on="open" width="100%" height="auto" padding="5" alignment="vertical" vertical-align="top" horizontal-align="center">			
							
			<dropdown id="physics_bodytype" width="100%" text="None">
				<dropdown-option text="None" value="none" on-mouse-click="physics_bodytype_details.condition=" />
				<dropdown-option text="Collision body" value="collisionbody" on-mouse-click="physics_bodytype_details.condition=" />
				<dropdown-option text="Static rigid body" value="staticrigidbody" on-mouse-click="physics_bodytype_details.condition=static" />
				<dropdown-option text="Dynamic rigid body" value="dynamicrigidbody" on-mouse-click="physics_bodytype_details.condition=dynamic" />
			</dropdown>
			
			<element id="physics_bodytype_details" width="100%" height="auto">
				<layout width="100%" height="auto" alignment="vertical" vertical-align="center">
					
					<layout show-on="dynamic" width="100%" height="auto" alignment="vertical" vertical-align="center">
						<space height="5" />
						<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
							<text font="{$font.default}" color="{$color.font_normal}" text="Mass" width="*" height="auto"/>
							<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
								<input id="physics_dynamic_mass" width="100%" height="auto" text="1000.00" unit="kg" options="type=float,min=0.0,step=0.25,decimals=2" image="resources/engine/images/inputslider.png"/>
							</layout>
						</layout>
						<space height="5" />
						<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
							<text font="{$font.default}" color="{$color.font_normal}" text="Bounciness" width="*" height="auto"/>
							<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
								<input id="physics_dynamic_bounciness" width="100%" height="auto" text="1000.00" options="type=float,min=0.0,step=0.25,decimals=2" image="resources/engine/images/inputslider.png"/>
							</layout>
						</layout>
						<space height="5" />
						<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
							<text font="{$font.default}" color="{$color.font_normal}" text="Friction" width="*" height="auto"/>
							<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
								<input id="physics_dynamic_friction" width="100%" height="auto" text="1000.00" options="type=float,min=0.0,step=0.25,decimals=2" image="resources/engine/images/inputslider.png"/>
							</layout>
						</layout>

						<space height="5" />
						<menu-separator />
						<space height="5" />

						<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
							<text font="{$font.default}" color="{$color.font_normal}" text="Inertia tensor" width="*" height="auto" horizontal-align="left" />
							<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
								<layout width="5" height="25" background-color="{$color.xaxis}" />
								<input id="physics_dynamic_inertiatensor_x" width="*" height="auto" text="0.0" unit="m" options="type=float,min=0.0,step=0.25,decimals=2" image="resources/engine/images/inputslider.png" />
							</layout>
						</layout>
						<space height="5" />
						<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
							<text font="{$font.default}" color="{$color.font_normal}" text="" width="*" height="auto" horizontal-align="left" />
							<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
								<layout width="5" height="25" background-color="{$color.yaxis}" />
								<input id="physics_dynamic_inertiatensor_y"  width="*" height="auto" text="0.0" unit="m" options="type=float,min=0.0,step=0.25,decimals=2" image="resources/engine/images/inputslider.png" />
							</layout>
						</layout>
						<space height="5" />
						<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
							<text font="{$font.default}" color="{$color.font_normal}" text="" width="*" height="auto" horizontal-align="left" />
							<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
								<layout width="5" height="25" background-color="{$color.zaxis}" />
								<input id="physics_dynamic_inertiatensor_z"  width="*" height="auto" text="0.0" unit="m" options="type=float,min=0.0,step=0.25,decimals=2" image="resources/engine/images/inputslider.png" />
							</layout>
						</layout>







						
					</layout>

					<layout show-on="static" width="100%" height="auto" alignment="vertical" vertical-align="center">
						<space height="5" />
						<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
							<text font="{$font.default}" color="{$color.font_normal}" text="Friction" width="*" height="auto"/>
							<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
								<input id="physics_static_friction" width="100%" height="auto" text="1000.00" options="type=float,min=0.0,step=0.25,decimals=2" image="resources/engine/images/inputslider.png"/>
							</layout>
						</layout>
					</layout>

				</layout>
			</element>
					
		</layout>		
	</layout>
</element>