<element id="{$id}" width="{$width}" height="{$height}" background-color="#3E3E3E"  name="{$name}" disabled="{$disabled}" focusable="true" on-change="{$on-change}" on-mouse-click="{$on-mouse-click}" on-mouse-doubleclick="{$on-mouse-doubleclick}">
	<layout id="{$id}_layout_vertical" alignment="vertical" vertical-align="center" horizontal-align="center" width="100%">
		<layout id="{$id}_layout_horizontal" width="100%" padding="5" alignment="horizontal">
			<element id="{$id}_layout_horizontal_element" width="*" height="auto"> 
				<text show-on="enabled" id="{$id}_text_enabled" width="100%" height="auto" font="resources/engine/fonts/Roboto_14_mono.fnt" text="{$text}" color="#F0F0F0" />
				<text show-on="disabled" id="{$id}_text_disabled" width="100%" height="auto" font="resources/engine/fonts/Roboto_14_mono.fnt" text="{$text}" color="#D0D0D0" />
			</element>
			<element show-on="enabled" id="{$id}_arrow" width="auto" height="100%" vertical-align="center">
				<!-- Image needs transparency and white arrow so that I can do effects on it -->
				<image effect-color-mul="#FFFFFF" hide-on="opened,mouseover" src="resources/engine/images/arrow_down.png" vertical-align="center" />
				<image effect-color-mul="#FFFFFF" hide-on="opened" src="resources/engine/images/arrow_down.png" vertical-align="center" />
				<image effect-color-mul="#FFFFFF" hide-on="closed,mouseover" src="resources/engine/images/arrow_up.png" vertical-align="center" />
				<image effect-color-mul="#FFFFFF" hide-on="closed" src="resources/engine/images/arrow_up.png" vertical-align="center" />
			</element>
		</layout>
		<layout id="{$id}_inner"  width="100%" height="auto" alignment="vertical" show-on="opened" flow="floating" background-color="#3E3E3E">
			{__InnerXML__}
		</layout>
	</layout>
</element>
