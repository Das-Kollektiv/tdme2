<element id="{$id}" width="100%" height="auto" value="{$value}" selected="{$selected}" on-mouse-click="{$on-mouse-click}" on-mouse-doubleclick="{$on-mouse-doubleclick}">
	<!-- unselected, no mouse over -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="disabled,selected,mouseover" font="{$font.default}" text="{$text}" color="{$color.font_normal}" />
	<!-- unselected, mouse over -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="disabled,selected" show-on="mouseover" font="{$font.default}" text="{$text}" color="{$color.font_normal}" background-color="{$color.focus}" />
	<!-- selected, no mouse over -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="disabled,unselected,mouseover" font="{$font.default}" text="{$text}" color="{$color.font_normal}" />
	<!-- selected, mouse over -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="disabled,unselected" show-on="mouseover" font="{$font.default}" text="{$text}" color="{$color.font_normal}" background-color="{$color.focus}" />
	<!-- unselected, disabled -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="selected" show-on="disabled" font="{$font.default}" text="{$text}" color="#D9D9D9" />
	<!-- selected, disabled -->
	<text padding-top="2" padding-bottom="2" width="100%" hide-on="unselected" show-on="disabled" font="{$font.default}" text="{$text}" color="#D9D9D9" />
</element>
