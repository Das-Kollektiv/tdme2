<element id="{$id}" width="100%" height="auto" value="{$value}" selected="{$selected}" on-mouse-click="{$on-mouse-click}" on-mouse-doubleclick="{$on-mouse-doubleclick}" padding-left="5" padding-right="5">
	<!-- unselected, no mouse over -->
	<text id="{$id}_unselected" padding-top="2" padding-bottom="2" width="100%" hide-on="selected,mouseover" font="resources/engine/fonts/Roboto_14_mono.fnt" text="{$text}" color="#ffffff"/>
	<!-- unselected, mouse over -->
	<text id="{$id}_unselected,mouseover" padding-top="2" padding-bottom="2" width="100%" hide-on="selected" show-on="mouseover" font="resources/engine/fonts/Roboto_14_mono.fnt" text="{$text}" color="#ffffff" background-color="#5680C2" />
	<!-- selected, no mouse over -->
	<text id="{$id}_selected" padding-top="2" padding-bottom="2" width="100%" hide-on="unselected,mouseover" font="resources/engine/fonts/Roboto_14_mono.fnt" text="{$text}" color="#ffffff" />
	<!-- selected, mouse over -->
	<text id="{$id}_selected,mouseover" padding-top="2" padding-bottom="2" width="100%" hide-on="unselected" show-on="mouseover" font="resources/engine/fonts/Roboto_14_mono.fnt" text="{$text}" color="#ffffff" background-color="#5680C2" />
</element>
