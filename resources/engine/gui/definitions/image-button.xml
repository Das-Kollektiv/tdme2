<element id="{$id}" name="{$name}" width="auto" height="auto" horizontal-align="center" vertical-align="center" border="2" value="{$value}" disabled="{$disabled}" focusable="true" on-initialize="{$on-initialize}" on-mouse-over="{$on-mouse-over}" on-mouse-click="{$on-mouse-click}" on-mouse-doubleclick="{$on-mouse-doubleclick}" on-mouse-out="{$on-mouse-out}" show-on="{$show-on}" hide-on="{$hide-on}" tooltip="{$tooltip}">
	<!-- normal -->
	<image src="{$src-normal}" width="{$width}" height="{$height}" hide-on="disabled,mouseover,click" />
	<!-- mouse over -->
	<image src="{$src-over}" width="{$width}" height="{$height}" hide-on="disabled" show-on="mouseover" />
	<!-- clicked -->
	<image src="{$src-clicked}" width="{$width}" height="{$height}" hide-on="disabled" show-on="click" />
	<!-- disabled -->
	<image src="{$src-disabled}" width="{$width}" height="{$height}" show-on="disabled" />
</element>
