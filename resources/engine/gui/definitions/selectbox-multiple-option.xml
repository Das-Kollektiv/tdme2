<element id="{$id}" parent-id="{$parent-id}" width="100%" height="auto" value="{$value}" selected="{$selected}" on-mouse-click="{$on-mouse-click}" on-mouse-doubleclick="{$on-mouse-doubleclick}">
	<layer width="100%" >
		
		<!-- normal -->
		<layout width="100%" height="auto" alignment="horizontal" horizontal-align="left" vertical-align="center" hide-on="disabled,selected,mouseover,focussed" >
			<space show-on="child" width="45" factor="{__TreeDepth__}" />
			<space width="15"/>
			<layout width="25" height="25" alignment="horizontal" horizontal-align="center" vertical-align="center">
				<image src="{$image}" />
			</layout>			
			<text padding-left="5" padding-top="2" padding-bottom="2" height="25" font="{$font.default}" text="{$text}" color="{$color.font_normal}" />			
		</layout>
	
		<!-- mouse over / focussed -->
		<layout width="100%" height="auto" alignment="horizontal" horizontal-align="left" vertical-align="center" hide-on="disabled,selected" show-on="mouseover,focussed" background-color="{$color.focus}" >
			<space show-on="child" width="45" factor="{__TreeDepth__}" />
			<space width="15"/>		
			<layout width="25" height="25" alignment="horizontal" horizontal-align="center" vertical-align="center">
				<image src="{$image}" />
			</layout>
			<text padding-left="5" padding-top="2" padding-bottom="2" height="25" font="{$font.default}" text="{$text}" color="{$color.font_highlight}" />
		</layout>
	
		<!-- disabled -->
		<layout width="100%" height="auto" alignment="horizontal" horizontal-align="left" vertical-align="center" show-on="disabled" >
			<space show-on="child" width="45" factor="{__TreeDepth__}" />
			<space width="15"/>
			<layout width="25" height="25" alignment="horizontal" horizontal-align="center" vertical-align="center">
				<image src="{$image}" />
			</layout>
			<text padding-left="5" padding-top="2" padding-bottom="2" height="25" font="{$font.default}" text="{$text}" color="{$color.font_disabled}" />
		</layout>
		
		<!-- selected -->
		<layout width="100%" height="auto" alignment="horizontal" horizontal-align="left" vertical-align="center" hide-on="disabled,unselected,mouseover,focussed" background-color="{$color.focus}" >
			<space show-on="child" width="45" factor="{__TreeDepth__}" />
			<space width="15"/>
			<layout width="25" height="25" alignment="horizontal" horizontal-align="center" vertical-align="center">
				<image src="{$image}" />
			</layout>
			<text padding-left="5" padding-top="2" padding-bottom="2" height="25" font="{$font.default}" text="{$text}" color="{$color.font_normal}" />
		</layout>
	
		<!-- <!-- selected, mouse over --> -->
		<!-- <layout width="100%" height="auto" alignment="horizontal" horizontal-align="left" vertical-align="center" hide-on="disabled,unselected" show-on="mouseover" background-color="{$color.focus}" > -->
			<!-- <space show-on="child" width="45" factor="{__TreeDepth__}" /> -->
			<!-- <space width="15"/> -->
			<!-- <layout width="25" height="25" alignment="horizontal" horizontal-align="center" vertical-align="center"> -->
				<!-- <image src="{$image}" /> -->
			<!-- </layout> -->
			<!-- <text padding-left="5" padding-top="2" padding-bottom="2" height="25" font="{$font.default}" text="{$text}" color="{$color.font_highlight}" /> -->
		<!-- </layout> -->
	
	</layer>
		
</element>
