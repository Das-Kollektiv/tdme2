<template>	
	<element id="{$id}" width="auto" height="auto" value="{$value}" selected="{$selected}" on-initialize="{$on-initialize}" on-mouse-over="{$on-mouse-over}" on-mouse-click="{$on-mouse-click}" on-mouse-doubleclick="{$on-mouse-doubleclick}" on-mouse-out="{$on-mouse-out}" disabled="{$disabled}" show-on="{$show-on}" hide-on="{$hide-on}" tooltip="{$tooltip}">
		<layer width="auto" >
			
			<!-- normal -->
			<layout width="auto" height="auto" alignment="horizontal" horizontal-align="left" vertical-align="center" hide-on="disabled,selected,mouseover,focussed" >
				<space width="15"/>
				<layout hide-on="empty('{$image}')" width="25" height="25" horizontal-align="center" vertical-align="center">
					<image src="{$image}" />
				</layout>			
				<text
					text="{$text}"
					font="{$font.default}" size="{$fontsize.default}"
					color="{$color.font_normal}"
					
					width="auto" 
					height="25" 
					vertical-align="center" 
				/>			
			</layout>
		
			<!-- mouse over / focussed -->
			<layout width="auto" height="auto" alignment="horizontal" horizontal-align="left" vertical-align="center" hide-on="disabled" show-on="mouseover,focussed" background-color="{$color.focus}" >
				<space width="15"/>			
				<layout hide-on="empty('{$image}')" width="25" height="25" horizontal-align="center" vertical-align="center">
					<image src="{$image}" />
				</layout>
				<text
					text="{$text}"
					font="{$font.default}" size="{$fontsize.default}"
					color="{$color.font_highlight}"
					
					width="auto" 
					height="25" 
					vertical-align="center"				 
				/>
			</layout>
			
			<!-- selected -->
			<layout width="auto" height="auto" alignment="horizontal" horizontal-align="left" vertical-align="center" hide-on="disabled,unselected,mouseover,focussed" background-color="{$color.selected}" >
				<space width="15"/>
				<layout hide-on="empty('{$image}')" width="25" height="25" horizontal-align="center" vertical-align="center">
					<image src="{$image}" />
				</layout>
				<text 
					text="{$text}"			
					font="{$font.default}" size="{$fontsize.default}" 
					color="{$color.font_normal}"
					
					width="auto" 
					eight="25"
					vertical-align="center"	
				/>
			</layout>
		
			<!-- disabled -->
			<layout width="auto" height="auto" alignment="horizontal" horizontal-align="left" vertical-align="center" show-on="disabled" >
				<space width="15"/>
				<layout hide-on="empty('{$image}')" width="25" height="25" horizontal-align="center" vertical-align="center">
					<image src="{$image}" />
				</layout>
				<text
					text="{$text}"
					font="{$font.default}" size="{$fontsize.default}"
					color="{$color.font_disabled}"
					
					width="auto"
					height="25"
					vertical-align="center"
				/>
			</layout>
		
		</layer>
		
	</element>
</template>