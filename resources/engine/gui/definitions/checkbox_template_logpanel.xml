<template>	
	<element id="{$id}" name="{$name}" value="{$value}" selected="{$selected}" disabled="{$disabled}" focusable="true" on-initialize="{$on-initialize}" on-mouse-over="{$on-mouse-over}" on-mouse-click="{$on-mouse-click}" on-mouse-doubleclick="{$on-mouse-doubleclick}" on-mouse-out="{$on-mouse-out}" on-change="{$on-change}" show-on="{$show-on}" hide-on="{$hide-on}" tooltip="{$tooltip}">

		<!-- unchecked -->
		<layout width="{$width}" height="{$height}" padding="5" alignment="horizontal" horizontal-align="center" vertical-align="center" hide-on="disabled,checked,mouseover" >
			<image effect-color-mul="{$color.font_normal}" src="{$image-unchecked}" />
			<space hide-on="empty('{$text}'),empty('{$image-unchecked}')" width="5"/>
			<text font="{$font.default}" size="{$fontsize.default}" text="{$text}" color="{$color.font_normal}" />
		</layout>
		<!-- unchecked, mouse over -->
		<layout width="{$width}" height="{$height}" padding="5" alignment="horizontal" horizontal-align="center" vertical-align="center" hide-on="disabled,checked" show-on="mouseover" background-color="{$color.focus}" >
			<image effect-color-mul="{$color.font_highlight}" src="{$image-unchecked}" />
			<space hide-on="empty('{$text}'),empty('{$image-unchecked}')" width="5"/>
			<text font="{$font.default}" size="{$fontsize.default}" text="{$text}" color="{$color.font_highlight}" />
		</layout>
		<!-- unchecked, disabled -->
		<layout width="{$width}" height="{$height}" padding="5" alignment="horizontal" horizontal-align="center" vertical-align="center" hide-on="checked" show-on="disabled" >
			<image effect-color-mul="{$color.font_disabled}" src="{$image-unchecked}" />
			<space hide-on="empty('{$text}'),empty('{$image-unchecked}')" width="5"/>
			<text font="{$font.default}" size="{$fontsize.default}" text="{$text}" color="{$color.font_disabled}" />
		</layout>

		
		<!-- checked -->
		<layout width="{$width}" height="{$height}" padding="5" alignment="horizontal" horizontal-align="center" vertical-align="center" hide-on="disabled,unchecked,mouseover" background-color="{$color.selected}" >
			<image effect-color-mul="{$color.font_normal}" src="{$image-checked}" />
			<space hide-on="empty('{$text}'),empty('{$image-checked}')" width="5"/>
			<text font="{$font.default}" size="{$fontsize.default}" text="{$text}" color="{$color.font_normal}" />
		</layout>
		<!-- checked, mouse over -->
		<layout width="{$width}" height="{$height}" padding="5" alignment="horizontal" horizontal-align="center" vertical-align="center" hide-on="disabled,unchecked" show-on="mouseover" background-color="{$color.focus}" >
			<image effect-color-mul="{$color.font_highlight}" src="{$image-checked}" />
			<space hide-on="empty('{$text}'),empty('{$image-checked}')" width="5"/>
			<text font="{$font.default}" size="{$fontsize.default}" text="{$text}" color="{$color.font_highlight}" />
		</layout>
		<!-- checked, disabled -->
		<layout width="{$width}" height="{$height}" padding="5" alignment="horizontal" horizontal-align="center" vertical-align="center" hide-on="unchecked" show-on="disabled" >
			<image effect-color-mul="{$color.font_disabled}" src="{$image-checked}" />
			<space hide-on="empty('{$text}'),empty('{$image-checked}')" width="5"/>
			<text font="{$font.default}" size="{$fontsize.default}" text="{$text}" color="{$color.font_disabled}" />
		</layout>

	</element>
</template>
