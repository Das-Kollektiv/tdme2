<element id="{$id}" width="auto" height="auto" disabled="{$disabled}" on-mouse-click="{$on-mouse-click}" on-mouse-doubleclick="{$on-mouse-doubleclick}">
	<!-- unselected, no mouse over -->
	<text background-color="#3E3E3E" hide-on="disabled,selected,mouseover" width="auto" height="24" padding-top="2" padding-left="10" padding-right="10" horizontal-align="center" font="resources/engine/fonts/Roboto_14_mono.fnt" text="{$text}" color="#C0C0C0" />
	<!-- unselected, mouse over -->
	<text background-color="#3E3E3E" hide-on="disabled,selected" show-on="mouseover" width="auto" height="24" padding-top="2" padding-left="10" padding-right="10" horizontal-align="center" font="resources/engine/fonts/Roboto_14_mono.fnt" text="{$text}" color="#F0F0F0" />
	<!-- selected, no mouse over -->
	<text background-color="#585858" hide-on="disabled,unselected,mouseover" width="auto" height="24" padding-top="2" padding-left="10" padding-right="10" border-left="1" border-right="1" horizontal-align="center" font="resources/engine/fonts/Roboto_14_mono.fnt" text="{$text}" color="#F0F0F0" />
	<!-- selected, mouse over -->
	<text background-color="#585858" hide-on="disabled,unselected" show-on="mouseover" width="auto" height="24" padding-top="2" padding-left="10" padding-right="10" border-left="1" border-right="1" horizontal-align="center" font="resources/engine/fonts/Roboto_14_mono.fnt" text="{$text}" color="#F0F0F0" />
	<!-- unselected, disabled -->
	<text background-color="#A0A0A0" hide-on="selected" show-on="disabled" width="auto" height="24" padding-top="2" padding-left="10" padding-right="10" horizontal-align="center" font="resources/engine/fonts/Roboto_14_mono.fnt" text="{$text}" color="#D9D9D9" />
	<!-- selected, disabled -->
	<text background-color="#A0A0A0" hide-on="unselected" show-on="disabled" width="auto" height="24" padding-top="2" padding-left="10" padding-right="10" horizontal-align="center" font="resources/engine/fonts/Roboto_14_mono.fnt" text="{$text}" color="#F0F0F0" />
</element>
