<element id="{$id}" value="{$value}" width="auto" height="25" disabled="{$disabled}" on-mouse-click="{$on-mouse-click}" on-mouse-doubleclick="{$on-mouse-doubleclick}" on-initialize="{$id}.condition+={$closeable}" vertical-align="center" >
	
	<!-- normal -->
	<layout 
		width="auto" 
		height="25" 
		padding-left="10" 
		padding-right="10"
		alignment="horizontal" 
		horizontal-align="center" 
		vertical-align="center"
		background-color="{$color.element_midground}"
		
		border-left="1" 
		border-right="1" 
		border-color="{$color.element_background}"
		border-top="1"
		border-color-top="{$type-color}"
		border-bottom="1" 
		border-color-bottom="{$color.element_frame}"
		
		hide-on="disabled,selected,mouseover" 
	>
		<image src="{$image}" />
		<space hide-on="empty('{$image}')" width="5"/>
		<text
			text="{$text}"
			font="{$font.default}" 
			color="{$color.font_normal}"
			
			width="auto" 
			height="25"				
			vertical-align="center"
		/>
		<space show-on="true" width="10"/>
		<button show-on="true" template="button_template_tab.xml" id="{$id}_close_normal" width="18" height="18" image="resources/engine/images/cross.png" />
	</layout>
	
	<!-- mouse over / focussed -->
	<layout 
		width="auto" 
		height="25" 
		padding-left="10" 
		padding-right="10"
		alignment="horizontal" 
		horizontal-align="center" 
		vertical-align="center"
		background-color="{$color.focus}"
		
		border-left="1" 
		border-right="1" 
		border-color="{$color.element_frame}"
		border-top="1"
		border-color-top="{$type-color}"
		border-bottom="1" 
		border-color-bottom="{$color.element_foreground}"
		
		show-on="mouseover,focussed"
		hide-on="disabled"
	>
		<image src="{$image}" />
		<space hide-on="empty('{$image}')" width="5"/>
		<text
			text="{$text}"
			font="{$font.default}" 
			color="{$color.font_normal}"
			
			width="auto" 
			height="25"				
			vertical-align="center"
		/>
		<space show-on="true" width="10"/>
		<button show-on="true" template="button_template_tab.xml" id="{$id}_close_mouseover" width="18" height="18" image="resources/engine/images/cross.png" />
	</layout>
	
	<!-- selected -->
	<layout 
		width="auto" 
		height="25" 
		padding-left="10" 
		padding-right="10"
		alignment="horizontal" 
		horizontal-align="center" 
		vertical-align="center"
		background-color="{$color.element_foreground}"
		
		border-left="1" 
		border-right="1" 
		border-color="{$color.element_frame}"
		border-top="1"
		border-color-top="{$type-color}"
		border-bottom="1" 
		border-color-bottom="{$color.element_foreground}"
		
		hide-on="disabled,unselected,mouseover"
	>
		<image src="{$image}" />
		<space hide-on="empty('{$image}')" width="5"/>
		<text
			text="{$text}"
			font="{$font.default}"
			color="{$color.font_highlight}"
			
			width="auto" 
			height="25"				
			vertical-align="center"
		/>
		<space show-on="true" width="10"/>
		<button show-on="true" template="button_template_tab.xml" id="{$id}_close_selected" width="18" height="18" image="resources/engine/images/cross.png" />
	</layout>
	
	<!-- disabled -->
	<layout 
		width="auto" 
		height="25" 
		padding-left="10" 
		padding-right="10"
		alignment="horizontal" 
		horizontal-align="center" 
		vertical-align="center"
		background-color="{$color.element_foreground}"
		
		border-left="1" 
		border-right="1" 
		border-color="{$color.element_background}"
		border-top="1"
		border-color-top="{$type-color}"
		border-bottom="1" 
		border-color-bottom="{$color.element_frame}"
		
		show-on="disabled"
	>
		<image src="{$image}" />
		<space hide-on="empty('{$image}')" width="5"/>
		<text
			text="{$text}"
			font="{$font.default}"
			color="{$color.font_disabled}"
			
			width="auto" 
			height="25"				
			vertical-align="center"
		/>
		<space show-on="true" width="10"/>
		<button show-on="true" template="button_template_tab.xml" id="{$id}_close_disabled" width="18" height="18" image="resources/engine/images/cross.png" />
	</layout>

</element>
