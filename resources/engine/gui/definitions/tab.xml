<element id="{$id}" width="auto" height="auto" disabled="{$disabled}" on-mouse-click="{$on-mouse-click}" on-mouse-doubleclick="{$on-mouse-doubleclick}">
	<!-- unselected, no mouse over -->
	<text background-color="{$color.element_midground}" hide-on="disabled,selected,mouseover" width="auto" height="24" padding-top="2" padding-left="10" padding-right="10" horizontal-align="center" font="{$font.default}" text="{$text}" color="#C0C0C0" />
	<!-- unselected, mouse over -->
	<text background-color="{$color.element_midground}" hide-on="disabled,selected" show-on="mouseover" width="auto" height="24" padding-top="2" padding-left="10" padding-right="10" horizontal-align="center" font="{$font.default}" text="{$text}" color="{$color.font_normal}" />
	<!-- selected, no mouse over -->
	<text background-color="{$color.element_foreground}" hide-on="disabled,unselected,mouseover" width="auto" height="24" padding-top="2" padding-left="10" padding-right="10" border-left="1" border-right="1" horizontal-align="center" font="{$font.default}" text="{$text}" color="{$color.font_normal}" />
	<!-- selected, mouse over -->
	<text background-color="{$color.element_foreground}" hide-on="disabled,unselected" show-on="mouseover" width="auto" height="24" padding-top="2" padding-left="10" padding-right="10" border-left="1" border-right="1" horizontal-align="center" font="{$font.default}" text="{$text}" color="{$color.font_normal}" />
	<!-- unselected, disabled -->
	<text background-color="{$color.button_normal}" hide-on="selected" show-on="disabled" width="auto" height="24" padding-top="2" padding-left="10" padding-right="10" horizontal-align="center" font="{$font.default}" text="{$text}" color="#D9D9D9" />
	<!-- selected, disabled -->
	<text background-color="{$color.button_normal}" hide-on="unselected" show-on="disabled" width="auto" height="24" padding-top="2" padding-left="10" padding-right="10" horizontal-align="center" font="{$font.default}" text="{$text}" color="{$color.font_normal}" />
</element>
