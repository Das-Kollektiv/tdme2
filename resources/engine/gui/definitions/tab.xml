<element id="{$id}" width="auto" height="auto" disabled="{$disabled}" on-mouse-click="{$on-mouse-click}" on-mouse-doubleclick="{$on-mouse-doubleclick}">
	<!-- normal -->
	<text
		text="{$text}"
		font="{$font.default}" 		
		color="{$color.font_normal}"
		
		width="auto" 		
		height="25" 	
		padding-left="10" 
		padding-right="10" 
		horizontal-align="center" 
		vertical-align="center"			
		background-color="{$color.element_midground}"

		border-left="1" 
		border-right="1" 
		border-color="{$color.element_background}"
		border-bottom="1" 
		border-color-bottom="{$color.element_frame}"		
		
		hide-on="disabled,selected,mouseover" 
	/>
	
	<!-- mouse over / focussed -->
	<text
		text="{$text}"
		font="{$font.default}"
		color="{$color.font_highlight}"
		
		width="auto" 
		height="25" 
		padding-left="10" 
		padding-right="10" 
		horizontal-align="center"
		vertical-align="center"				
		background-color="{$color.focus}"
		
		border-left="1" 
		border-right="1" 
		border-color="{$color.element_frame}"
		border-bottom="1" 
		border-color-bottom="{$color.element_foreground}"
		
		show-on="mouseover,focussed"
		hide-on="disabled" 	 
	/>
	
	<!-- selected -->
	<text
		text="{$text}"
		font="{$font.default}"
		color="{$color.font_highlight}"
		
		width="auto" 
		height="25" 
		padding-left="10" 
		padding-right="10" 
		horizontal-align="center"
		vertical-align="center"	
		background-color="{$color.element_foreground}"
		
		border-left="1" 
		border-right="1" 
		border-color="{$color.element_frame}"
		border-bottom="1" 
		border-color-bottom="{$color.element_foreground}"
		
		hide-on="disabled,unselected,mouseover"
	/>
	
	<!-- disabled -->
	<text
		text="{$text}"
		font="{$font.default}"
		color="{$color.font_disabled}"
		
		width="auto" 
		height="25" 
		padding-left="10" 
		padding-right="10" 
		horizontal-align="center"
		vertical-align="center"
		background-color="{$color.button_normal}"
		
		border-left="1" 
		border-right="1" 
		border-color="{$color.element_background}"
		border-bottom="1" 
		border-color-bottom="{$color.element_frame}"
		
		show-on="disabled"
	/>
</element>
