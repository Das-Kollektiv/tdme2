<element id="{$id}" name="{$name}" value="{$value}" selected="{$selected}" disabled="{$disabled}" focusable="true" on-initialize="{$on-initialize}" on-mouse-over="{$on-mouse-over}" on-mouse-click="{$on-mouse-click}" on-mouse-doubleclick="{$on-mouse-doubleclick}" on-mouse-out="{$on-mouse-out}" on-change="{$on-change}" tooltip="{$tooltip}">

	<!-- unselected -->
	<layout width="{$width}" height="{$height}" alignment="horizontal" horizontal-align="center" vertical-align="center" hide-on="disabled,selected,mouseover" background-image="resources/engine/images/button.png" background-image-scale9="10" background-image-effect-color-mul="{$color.button_normal}" >
		<image effect-color-mul="{$color.font_normal}" src="{$image}" />
	</layout>
	<!-- unselected, mouse over -->
	<layout width="{$width}" height="{$height}" alignment="horizontal" horizontal-align="center" vertical-align="center" hide-on="disabled,selected" show-on="mouseover" background-image="resources/engine/images/button.png" background-image-scale9="10" background-image-effect-color-mul="{$color.focus}" >
		<image effect-color-mul="{$color.font_highlight}" src="{$image}" />
	</layout>
	<!-- unselected, disabled -->
	<layout width="{$width}" height="{$height}" alignment="horizontal" horizontal-align="center" vertical-align="center" hide-on="selected" show-on="disabled" background-image="resources/engine/images/button.png" background-image-scale9="10" background-image-effect-color-mul="{$color.button_disabled}" >
		<image effect-color-mul="{$color.font_disabled}" src="{$image}" />
	</layout>
	
	
	<!-- selected -->
	<layout width="{$width}" height="{$height}" alignment="horizontal" horizontal-align="center" vertical-align="center" hide-on="disabled,unselected,mouseover" background-image="resources/engine/images/button.png" background-image-scale9="10" background-image-effect-color-mul="{$color.selected}" >
		<image effect-color-mul="{$color.font_normal}" src="{$image}" />
	</layout>
	
	<!-- selected, mouse over -->
	<layout width="{$width}" height="{$height}" alignment="horizontal" horizontal-align="center" vertical-align="center" hide-on="disabled,unselected" show-on="mouseover" background-image="resources/engine/images/button.png" background-image-scale9="10" background-image-effect-color-mul="{$color.focus}" >
		<image effect-color-mul="{$color.font_highlight}" src="{$image}" />
	</layout>
	<!-- selected, disabled -->
	<layout width="{$width}" height="{$height}" alignment="horizontal" horizontal-align="center" vertical-align="center" hide-on="unselected" show-on="disabled" background-image="resources/engine/images/button.png" background-image-scale9="10" background-image-effect-color-mul="{$color.selected}" >
		<image effect-color-mul="{$color.font_disabled}" src="{$image}" />
	</layout>
	
</element>
