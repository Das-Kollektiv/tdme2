<element id="{$id}" width="auto" height="25" value="{$value}" selected="{$selected}" on-mouse-click="{$on-mouse-click}" on-mouse-doubleclick="{$on-mouse-doubleclick}" disabled="{$disabled}">
	<text
		show-on="selected"
		id="{$id}_normal"
		text="{$text}"	
		font="{$font.default}"
		color="{$color.font_highlight}"
		width="auto"
		height="25"
		vertical-align="center"		
	/>
</element>
