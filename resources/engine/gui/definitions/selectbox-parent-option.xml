<element id="{$id}" width="100%" height="auto" value="{$value}" selected="{$selected}" on-mouse-click="{$on-mouse-click}" on-mouse-doubleclick="{$on-mouse-doubleclick}">
	<layout alignment="horizontal" width="100%" height="auto">
		<element show-on="enabled" id="{$id}_arrow" width="15" height="20" horizontal-align="center" vertical-align="center">
			<!-- Image needs transparency and white arrow so that I can do effects on it -->
			<image effect-color-mul="#8080A0" hide-on="opened,mouseover" src="resources/engine/images/arrow_right.png" vertical-align="center" />
			<image effect-color-mul="#8080FF" hide-on="opened" src="resources/engine/images/arrow_right.png" vertical-align="center" />
			<image effect-color-mul="#8080A0" hide-on="closed,mouseover" src="resources/engine/images/arrow_down.png" vertical-align="center" />
			<image effect-color-mul="#8080FF" hide-on="closed" src="resources/engine/images/arrow_down.png" vertical-align="center" />
		</element>
		<layer width="*" height="auto">
			<!-- unselected, no mouse over -->
			<text padding-top="2" padding-bottom="2" width="100%" hide-on="disabled,selected,mouseover" font="resources/engine/fonts/Roboto_14_mono.fnt" text="{$text}" color="#F0F0F0" />
			<!-- unselected, mouse over -->
			<text padding-top="2" padding-bottom="2" width="100%" hide-on="disabled,selected" show-on="mouseover" font="resources/engine/fonts/Roboto_14_mono.fnt" text="{$text}" color="#F0F0F0" background-color="#5680C2" />
			<!-- selected, no mouse over -->
			<text padding-top="2" padding-bottom="2" width="100%" hide-on="disabled,unselected,mouseover" font="resources/engine/fonts/Roboto_14_mono.fnt" text="{$text}" color="#F0F0F0" />
			<!-- selected, mouse over -->
			<text padding-top="2" padding-bottom="2" width="100%" hide-on="disabled,unselected" show-on="mouseover" font="resources/engine/fonts/Roboto_14_mono.fnt" text="{$text}" color="#F0F0F0" background-color="#5680C2" />
			<!-- unselected, disabled -->
			<text padding-top="2" padding-bottom="2" width="100%" hide-on="selected" show-on="disabled" font="resources/engine/fonts/Roboto_14_mono.fnt" text="{$text}" color="#D9D9D9" />
			<!-- selected, disabled -->
			<text padding-top="2" padding-bottom="2" width="100%" hide-on="unselected" show-on="disabled" font="resources/engine/fonts/Roboto_14_mono.fnt" text="{$text}" color="#D9D9D9"/>
		</layer>
	</layout>
</element>
<layout show-on="{$id}_arrow.opened" alignment="horizontal" width="100%" height="auto">
	<space width="30" />
	<layout id="{$id}_inner" alignment="vertical" width="*" height="auto">
		{__InnerXML__}
	</layout>
</layout>
