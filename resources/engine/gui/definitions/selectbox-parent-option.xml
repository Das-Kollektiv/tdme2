<element id="{$id}" parent-id="{$parent-id}" width="100%" height="auto" value="{$value}" selected="{$selected}" on-mouse-click="{$on-mouse-click}" on-mouse-doubleclick="{$on-mouse-doubleclick}">
	<layer width="100%" >
		
		<!-- normal -->
		<layout width="100%" height="auto" alignment="horizontal" horizontal-align="left" vertical-align="center" hide-on="disabled,selected,mouseover,focussed" >
			<space show-on="child" width="15" factor="{__TreeDepth__}" />
			<space width="15"/>
			<layout width="25" height="25" alignment="horizontal" horizontal-align="center" vertical-align="center">
				<image src="{$image}" />
			</layout>			
			<text padding-top="2" padding-bottom="2" height="25" font="{$font.default}" text="{$text}" color="{$color.font_normal}" />			
		</layout>
	
		<!-- mouse over / focussed -->
		<layout width="100%" height="auto" alignment="horizontal" horizontal-align="left" vertical-align="center" hide-on="disabled" show-on="mouseover,focussed" background-color="{$color.focus}" >
			<space show-on="child" width="15" factor="{__TreeDepth__}" />
			<space width="15"/>			
			<layout width="25" height="25" alignment="horizontal" horizontal-align="center" vertical-align="center">
				<image src="{$image}" />
			</layout>
			<text padding-top="2" padding-bottom="2" height="25" font="{$font.default}" text="{$text}" color="{$color.font_highlight}" />
		</layout>
	
		<!-- disabled -->
		<layout width="100%" height="auto" alignment="horizontal" horizontal-align="left" vertical-align="center" show-on="disabled" >
			<space show-on="child" width="15" factor="{__TreeDepth__}" />
			<space width="15"/>
			<layout width="25" height="25" alignment="horizontal" horizontal-align="center" vertical-align="center">
				<image src="{$image}" />
			</layout>
			<text padding-top="2" padding-bottom="2" height="25" font="{$font.default}" text="{$text}" color="{$color.font_disabled}" />
		</layout>
		
		<!-- selected -->
		<layout width="100%" height="auto" alignment="horizontal" horizontal-align="left" vertical-align="center" hide-on="disabled,unselected,mouseover,focussed" background-color="{$color.selected}" >
			<space show-on="child" width="15" factor="{__TreeDepth__}" />
			<space width="15"/>
			<layout width="25" height="25" alignment="horizontal" horizontal-align="center" vertical-align="center">
				<image src="{$image}" />
			</layout>
			<text padding-top="2" padding-bottom="2" height="25" font="{$font.default}" text="{$text}" color="{$color.font_normal}" />
		</layout>
		
		<!-- arrow -->
		<layout width="100%" height="auto" alignment="horizontal" horizontal-align="left" vertical-align="center" >
			<space show-on="child" width="15" factor="{__TreeDepth__}" />
			<element show-on="enabled" id="{$id}_arrow" width="15" height="25" horizontal-align="center" vertical-align="center">
				<image effect-color-mul="{$color.font_normal}" hide-on="opened,mouseover" src="resources/engine/images/arrow_right.png" vertical-align="center" />
				<image effect-color-mul="{$color.font_highlight}" hide-on="opened" src="resources/engine/images/arrow_right.png" vertical-align="center" />
				<image effect-color-mul="{$color.font_normal}" hide-on="closed,mouseover" src="resources/engine/images/arrow_down.png" vertical-align="center" />
				<image effect-color-mul="{$color.font_highlight}" hide-on="closed" src="resources/engine/images/arrow_down.png" vertical-align="center" />
			</element>	
		</layout>
		
	</layer>
		
</element>

<layout show-on="{$id}_arrow.opened" alignment="horizontal" width="100%" height="auto">
	<layout id="{$id}_inner" alignment="vertical" width="*" height="auto">
		<inner-xml parent-id="{$id}"> 
			<![CDATA[
				{__InnerXML__}
			]]>
		</inner-xml>
	</layout>
</layout>
