<element id="{$id}" width="100%" height="auto" value="{$value}" selected="{$selected}" on-mouse-click="{$on-mouse-click}" on-mouse-doubleclick="{$on-mouse-doubleclick}">
	<layer width="auto" >
		
		<!-- normal -->
		<layout width="250" height="auto" alignment="horizontal" horizontal-align="left" vertical-align="center" hide-on="disabled,selected,mouseover" >
			<space width="15"/>
			<layout width="25" height="25" alignment="horizontal" horizontal-align="center" vertical-align="center">
				<image src="{$image}" />
			</layout>			
			<text padding-left="5" padding-top="2" padding-bottom="2" height="25" font="{$font.default}" text="{$text}" color="{$color.font_normal}" />			
		</layout>
	
		<!-- mouse over -->
		<layout width="250" height="auto" alignment="horizontal" horizontal-align="left" vertical-align="center" hide-on="disabled,selected" show-on="mouseover" background-color="{$color.focus}" >
			<space width="15"/>		
			<layout width="25" height="25" alignment="horizontal" horizontal-align="center" vertical-align="center">
				<image src="{$image}" />
			</layout>
			<text padding-left="5" padding-top="2" padding-bottom="2" height="25" font="{$font.default}" text="{$text}" color="{$color.font_highlight}" />
		</layout>
	
		<!-- disabled -->
		<layout width="250" height="auto" alignment="horizontal" horizontal-align="left" vertical-align="center" hide-on="selected" show-on="disabled" >
			<space width="15"/>
			<layout width="25" height="25" alignment="horizontal" horizontal-align="center" vertical-align="center">
				<image src="{$image}" />
			</layout>
			<text padding-left="5" padding-top="2" padding-bottom="2" height="25" font="{$font.default}" text="{$text}" color="{$color.font_disabled}" />
		</layout>
		
		<!-- selected -->
		<layout width="250" height="auto" alignment="horizontal" horizontal-align="left" vertical-align="center" hide-on="disabled,unselected,mouseover" >
			<space width="15"/>
			<layout width="25" height="25" alignment="horizontal" horizontal-align="center" vertical-align="center">
				<image src="{$image}" />
			</layout>
			<text padding-left="5" padding-top="2" padding-bottom="2" height="25" font="{$font.default}" text="{$text}" color="{$color.font_normal}" />
		</layout>
	
		<!-- selected, mouse over -->
		<layout width="250" height="auto" alignment="horizontal" horizontal-align="left" vertical-align="center" hide-on="disabled,unselected" show-on="mouseover" background-color="{$color.focus}" >	
			<space width="15"/>
			<layout width="25" height="25" alignment="horizontal" horizontal-align="center" vertical-align="center">
				<image src="{$image}" />
			</layout>
			<text padding-left="5" padding-top="2" padding-bottom="2" height="25" font="{$font.default}" text="{$text}" color="{$color.font_highlight}" />
		</layout>
		
		<!-- arrow -->
		<layout width="250" height="auto" alignment="horizontal" horizontal-align="left" vertical-align="center" >
			<element show-on="enabled" id="{$id}_arrow" width="15" height="25" horizontal-align="center" vertical-align="center">
				<image effect-color-mul="{$color.font_normal}" hide-on="opened,mouseover" src="resources/engine/images/arrow_right.png" vertical-align="center" />
				<image effect-color-mul="{$color.font_highlight}" hide-on="opened" src="resources/engine/images/arrow_right.png" vertical-align="center" />
				<image effect-color-mul="{$color.font_normal}" hide-on="closed,mouseover" src="resources/engine/images/arrow_down.png" vertical-align="center" />
				<image effect-color-mul="{$color.font_highlight}" hide-on="closed" src="resources/engine/images/arrow_down.png" vertical-align="center" />
			</element>	
		</layout>
		
	</layer>
		
</element>

<layout show-on="{$id}_arrow.opened" alignment="horizontal" width="100%" height="auto">
	<space width="45" />
	<layout id="{$id}_inner" alignment="vertical" width="*" height="auto">
		{__InnerXML__}
	</layout>
</layout>
