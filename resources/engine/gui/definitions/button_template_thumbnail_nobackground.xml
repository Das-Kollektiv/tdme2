<element id="{$id}" width="auto" height="auto" horizontal-align="center" vertical-align="center" value="{$value}" disabled="{$disabled}" focusable="true" on-mouse-over="{$on-mouse-over}" on-mouse-click="{$on-mouse-click}" on-mouse-out="{$on-mouse-out}" on-mouse-doubleclick="{$on-mouse-doubleclick}" show-on="{$show-on}" hide-on="{$hide-on}">
	<!-- normal -->
	<layout width="auto" height="auto" padding="10" hide-on="mouseover,click" alignment="vertical" horizontal-align="center" vertical-align="center">
		<layer>
			<layout width="{$size}" height="{$size}" alignemnt="vertical" horizontal-align="center" vertical-align="center">
				<image src="{$icon-big}" />
			</layout>
			<image width="{$size}" height="{$size}" src="{$thumbnail}" />
			<layout padding-bottom="5" padding-left="2" width="{$size}" height="{$size}" horizontal-align="left" vertical-align="bottom">
				<image src="{$icon}" />
			</layout>
		</layer>
		<space height="5" hide-on="empty('{$filename}')"/>
		<multiline-text font="{$font.default}" color="{$color.font_normal}" width="{$size}" height="auto" horizontal-align="center">
			<![CDATA[
			{$filename}
			]]>
		</multiline-text>
	</layout>
	<!-- mouse over -->
	<layout width="auto" height="auto" padding="10" hide-on="click" show-on="mouseover" alignment="vertical" horizontal-align="center" vertical-align="center" background-color="{$color.focus}">
		<layer>
			<layout width="{$size}" height="{$size}" alignemnt="vertical" horizontal-align="center" vertical-align="center">
				<image src="{$icon-big}" />
			</layout>
			<image width="{$size}" height="{$size}" src="{$thumbnail}" />
			<layout padding-bottom="5" padding-left="2" width="{$size}" height="{$size}" horizontal-align="left" vertical-align="bottom">
				<image src="{$icon}" />
			</layout>
		</layer>
		<space height="5" hide-on="empty('{$filename}')"/>
		<multiline-text font="{$font.default}" color="{$color.font_highlight}" width="{$size}" height="auto" horizontal-align="center">
			<![CDATA[
			{$filename}
			]]>
		</multiline-text>
	</layout>
	<!-- clicked -->
	<layout width="auto" height="auto" padding="10" show-on="click" alignment="vertical" horizontal-align="center" vertical-align="center" background-color="{$color.selected}">
		<layer>
			<layout width="{$size}" height="{$size}" alignemnt="vertical" horizontal-align="center" vertical-align="center">
				<image src="{$icon-big}" />
			</layout>
			<image width="{$size}" height="{$size}" src="{$thumbnail}"  />
			<layout padding-bottom="5" padding-left="2" width="{$size}" height="{$size}" horizontal-align="left" vertical-align="bottom">
				<image src="{$icon}" />
			</layout>
		</layer>
		<space height="5" hide-on="empty('{$filename}')"/>
		<multiline-text font="{$font.default}" color="{$color.font_normal}" width="{$size}" height="auto" horizontal-align="center">
			<![CDATA[
			{$filename}
			]]>
		</multiline-text>
	</layout>
</element>
