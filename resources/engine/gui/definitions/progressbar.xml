<element border="1" on-initialize="{$id}.condition={$text-on}" id="{$id}" name="{$name}" disabled="{$disabled}" width="{$width}" height="{$height}" value="{$value}">
	<image width="100%" height="100%" scale9="8" id="{$id}_background" src="resources/engine/images/progressbar.png" effect-color-mul="#DCDCDC"/>
    <image width="100%" height="100%" scale9="8" id="{$id}_bar" src="resources/engine/images/progressbar.png" effect-color-mul="#B0B0FF"/>
    <text show-on="true" width="100%" height="100%" font="{$font.default}" text="{$text}" color="#000000" horizontal-align="center" vertical-align="center" id="{$id}_text" />
</element>
