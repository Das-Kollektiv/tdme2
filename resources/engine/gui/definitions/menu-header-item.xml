<element id="{$id}" width="auto" height="20" name="{$name}" disabled="{$disabled}" focusable="false" on-change="{$on-change}" on-mouse-click="{$on-mouse-click}" on-mouse-doubleclick="{$on-mouse-doubleclick}">
	<layout alignment="vertical" width="auto">
		<layer width="auto" height="auto">
			<!-- normal -->
			<text padding-top="5" padding-bottom="5" padding-right="30" width="auto" hide-on="disabled,selected,mouseover" font="resources/engine/fonts/Roboto_14_mono.fnt" text="{$text}" color="#F0F0F0" />
			<!-- mouse over -->
			<text padding-top="5" padding-bottom="5" padding-right="30" width="auto" hide-on="disabled,selected" show-on="mouseover" font="resources/engine/fonts/Roboto_14_mono.fnt" text="{$text}" color="#FFFFFF" />
			<!-- selected -->
			<text padding-top="5" padding-bottom="5" padding-right="30" width="auto" hide-on="disabled,unselected" font="resources/engine/fonts/Roboto_14_mono.fnt" text="{$text}" color="#FFFFFF"/>
			<!-- disabled -->
			<text padding-top="5" padding-bottom="5" padding-right="30" width="auto" show-on="disabled" font="resources/engine/fonts/Roboto_14_mono.fnt" text="{$text}" color="#B0B0B0" />
		</layer>
		<layout id="{$id}_inner" border="1" padding-top="5" padding-bottom="5" width="auto" height="auto" alignment="vertical" show-on="opened" flow="floating" background-color="#585858">
			{__InnerXML__}
		</layout>
	</layout>
</element>
