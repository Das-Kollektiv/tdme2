<element id="{$id}" name="{$name}" value="{$value}" selected="{$selected}" disabled="{$disabled}" focusable="true" on-change="{$on-change}" on-mouse-click="{$on-mouse-click}" on-mouse-doubleclick="{$on-mouse-doubleclick}">

	<!-- unchecked -->
	<layout width="auto" height="auto" alignment="horizontal" horizontal-align="left" vertical-align="center" hide-on="disabled,checked,mouseover" >
		<space width="5"/>
		<layout width="25" height="25" alignment="horizontal" horizontal-align="center" vertical-align="center">
			<image effect-color-mul="#F0F0F0" src="resources/engine/images/checkbox_unlocked.png" />
		</layout>
		<text padding-left="5" padding-top="2" padding-bottom="2"  font="resources/engine/fonts/Roboto_14_mono.fnt" text="{$text}" color="#F0F0F0" />
	</layout>
	<!-- unchecked, mouse over -->
	<layout width="auto" height="auto" alignment="horizontal" horizontal-align="left" vertical-align="center" hide-on="disabled,checked" show-on="mouseover" >
		<space width="5"/>
		<layout width="25" height="25" alignment="horizontal" horizontal-align="center" vertical-align="center">
			<image effect-color-mul="#ffffff" src="resources/engine/images/checkbox_unlocked.png" />
		</layout>
		<text padding-left="5" padding-top="2" padding-bottom="2"  font="resources/engine/fonts/Roboto_14_mono.fnt" text="{$text}" color="#ffffff" />
	</layout>
	<!-- unchecked, disabled -->
	<layout width="auto" height="auto" alignment="horizontal" horizontal-align="left" vertical-align="center" hide-on="checked" show-on="disabled" >
		<space width="5"/>
		<layout width="25" height="25" alignment="horizontal" horizontal-align="center" vertical-align="center">
			<image effect-color-mul="#B0B0B0" src="resources/engine/images/checkbox_unlocked.png" />
		</layout>
		<text padding-left="5" padding-top="2" padding-bottom="2"  font="resources/engine/fonts/Roboto_14_mono.fnt" text="{$text}" color="#B0B0B0" />
	</layout>

	
	<!-- checked -->
	<layout width="auto" height="auto" alignment="horizontal" horizontal-align="left" vertical-align="center" hide-on="disabled,unchecked,mouseover" >
		<space width="5"/>
		<layout width="25" height="25" alignment="horizontal" horizontal-align="center" vertical-align="center">
			<image effect-color-mul="#F0F0F0" src="resources/engine/images/checkbox_locked.png" />
		</layout>
		<text padding-left="5" padding-top="2" padding-bottom="2"  font="resources/engine/fonts/Roboto_14_mono.fnt" text="{$text}" color="#F0F0F0" />
	</layout>
	<!-- checked, mouse over -->
	<layout width="auto" height="auto" alignment="horizontal" horizontal-align="left" vertical-align="center" hide-on="disabled,unchecked" show-on="mouseover" >
		<space width="5"/>
		<layout width="25" height="25" alignment="horizontal" horizontal-align="center" vertical-align="center">
			<image effect-color-mul="#ffffff" src="resources/engine/images/checkbox_locked.png" />
		</layout>
		<text padding-left="5" padding-top="2" padding-bottom="2"  font="resources/engine/fonts/Roboto_14_mono.fnt" text="{$text}" color="#ffffff" />
	</layout>
	<!-- checked, disabled -->
	<layout width="auto" height="auto" alignment="horizontal" horizontal-align="left" vertical-align="center" hide-on="unchecked" show-on="disabled" >
		<space width="5"/>
		<layout width="25" height="25" alignment="horizontal" horizontal-align="center" vertical-align="center">
			<image effect-color-mul="#B0B0B0" src="resources/engine/images/checkbox_locked.png" />
		</layout>
		<text padding-left="5" padding-top="2" padding-bottom="2"  font="resources/engine/fonts/Roboto_14_mono.fnt" text="{$text}" color="#B0B0B0" />
	</layout>

</element>
