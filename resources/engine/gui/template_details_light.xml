<element id="{$id}" width="100%" height="auto">
	<layout width="100%" height="auto" padding="5" alignment="vertical" vertical-align="center" horizontal-align="center">
		<button width="100%" height="25" text="Light" on-mouse-click="{$id}.condition!=open"/>
		<layout show-on="open" width="100%" height="auto" padding="5" alignment="vertical" vertical-align="top" horizontal-align="left">			
	
			<dropdown id="light_type" width="100%" height="auto" text="Select Type">
				<dropdown-option text="Point Light" value="1" on-mouse-click="light_type_details.condition=point"/>
				<dropdown-option text="Spot Light" value="2" on-mouse-click="light_type_details.condition=spot" />
				<dropdown-option text="Directional Light" value="3" on-mouse-click="light_type_details.condition=directional" />
				<dropdown-option text="Ambient Light" value="4" on-mouse-click="light_type_details.condition=ambient"/>
			</dropdown>
					
			<element id="light_type_details" width="100%" height="auto">  
				<layout width="100%" height="auto" alignment="vertical">
				
					<!-- Point Light Start -->
					<layout show-on="point" width="100%" height="auto" alignment="vertical">
						<space height="5" />						
						<template src="resources/engine/gui/template_details_shared_color.xml" id="light_point_ambient" name="Ambient" />
						<space height="5" />
						<template src="resources/engine/gui/template_details_shared_color.xml" id="light_point_diffuse" name="Diffuse" />
						<space height="5" />
						<template src="resources/engine/gui/template_details_shared_color.xml" id="light_point_specular" name="Specular" />
						<space height="5" />
						<menu-separator />
						<space height="5" />
						<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
							<text font="{$font.default}" color="{$color.font_normal}" text="C. Attenuation" width="*" height="auto"/>
							<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right" vertical-align="center">
								<input id="light_point_constant_attenuation"  width="75%" height="auto" text="100.00" options="type=float,min=0.0,step=1,decimals=2" image="resources/engine/images/inputslider.png"/>
							</layout>
						</layout>
						<space height="5" />
						<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
							<text font="{$font.default}" color="{$color.font_normal}" text="L. Attenuation" width="*" height="auto"/>
							<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right" vertical-align="center">
								<input id="light_point_linear_attenuation" width="75%" height="auto" text="100.00" options="type=float,min=0.0,step=1,decimals=2" image="resources/engine/images/inputslider.png"/>
							</layout>
						</layout>
						<space height="5" />
						<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
							<text font="{$font.default}" color="{$color.font_normal}" text="Q. Attenuation" width="*" height="auto"/>
							<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right" vertical-align="center">
								<input id="light_point_quadratic_attenuation" width="75%" height="auto" text="100.00" options="type=float,min=0.0,step=1,decimals=2" image="resources/engine/images/inputslider.png"/>
							</layout>
						</layout>
						
						<space height="5" />
						<menu-separator />
						<space height="5" />

						<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
							<text font="{$font.default}" color="{$color.font_normal}" text="Location" width="*" height="auto" horizontal-align="left" />
							<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
								<layout width="5" height="25" background-color="{$color.xaxis}" />
								<input id="light_point_position_x" width="*" height="auto" text="0.0" unit="m" options="type=float,step=1,decimals=2" image="resources/engine/images/inputslider.png" />
							</layout>
						</layout>
						<space height="5" />
						<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
							<text font="{$font.default}" color="{$color.font_normal}" text="" width="*" height="auto" horizontal-align="left" />
							<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
								<layout width="5" height="25" background-color="{$color.yaxis}" />
								<input id="light_point_position_y"  width="*" height="auto" text="0.0" unit="m" options="type=float,step=1,decimals=2" image="resources/engine/images/inputslider.png" />
							</layout>
						</layout>
						<space height="5" />
						<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
							<text font="{$font.default}" color="{$color.font_normal}" text="" width="*" height="auto" horizontal-align="left" />
							<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
								<layout width="5" height="25" background-color="{$color.zaxis}" />
								<input id="light_point_position_z"  width="*" height="auto" text="0.0" unit="m" options="type=float,step=1,decimals=2" image="resources/engine/images/inputslider.png" />
							</layout>
						</layout>						
						
						<space height="5" />
						<menu-separator />
						<space height="5" />

						<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
							<text font="{$font.default}" color="{$color.font_normal}" text="Radius" width="*" height="auto"/>
							<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
