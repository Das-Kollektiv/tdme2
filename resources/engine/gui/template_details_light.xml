							<button id="button_light_point_specular" width="25" height="25" image="resources/engine/images/edit.png"/>
						</layout>
						<space height="5" />
						<menu-separator />
						<space height="5" />
						<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
							<text font="{$font.default}" text="C. attenuation" width="90" height="auto"/>
							<space width="5" />
							<space width="*" />
							<input id="light_point_constant_attenuation"  width="70" height="auto" text="100.00" />
