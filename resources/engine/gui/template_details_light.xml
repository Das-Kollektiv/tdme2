<element id="{$id}" width="100%" height="auto">
	<layout width="100%" height="auto" padding="5" alignment="vertical" vertical-align="center" horizontal-align="center">
		<button width="100%" height="25" text="Light" on-mouse-click="{$id}.condition!=open"/>
		<layout show-on="open" width="100%" height="auto" padding="5" alignment="vertical" vertical-align="top" horizontal-align="left">			
	
			<dropdown id="presets_light" width="100%" height="auto" text="Test">
				<dropdown-option text="Point Light" value="1" selected="true" />
				<dropdown-option text="Spot Light" value="2" />
				<dropdown-option text="Directional Light" value="3" />
				<dropdown-option text="Ambient Light" value="3" />
			</dropdown>

			<space height="10" />

			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Ambient" width="90" height="auto"/>
				<space width="5" />
				<space width="*" />
				<input id="light_ambient" width="130" height="auto" text="Ambient" />
			</layout>
			
			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Diffuse" width="90" height="auto"/>
				<space width="5" />
				<space width="*" />
				<input id="light_diffuse" width="130" height="auto" text="Diffuse" />
			</layout>

			<space height="5" />

			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Specular" width="90" height="auto"/>
				<space width="5" />
				<space width="*" />
				<input id="light_specular" width="130" height="auto" text="Specular" />
			</layout>

			<space height="5" />
			<menu-separator />
			<space height="5" />

			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="C. attenuation" width="90" height="auto"/>
				<space width="5" />
				<space width="*" />
				<input id="light_constant_attenuation"  width="130" height="auto" text="C. Attenuation" />
			</layout>
			
			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="L. attenuation" width="90" height="auto"/>
				<space width="5" />
				<space width="*" />
				<input id="light_linear_attenuation" width="130" height="auto" text="L. Attenuation" />
			</layout>

			<space height="5" />

			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Q. attenuation" width="90" height="auto"/>
				<space width="5" />
				<space width="*" />
				<input id="light_quadratic_attenuation" width="130" height="auto" text="Q. Attenuation" />
			</layout>

			<space height="5" />
			<menu-separator />
			<space height="5" />

			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Spot from" width="90" height="auto"/>
				<space width="5" />
				<space width="*" />
				<input id="light_position" width="130" height="auto" text="Spot from" />
			</layout>
			
			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Spot to" width="90" height="auto"/>
				<space width="5" />
				<space width="*" />
				<input id="light_spot_to" width="130" height="auto" text="Spot to" />
			</layout>

			<space height="5" />

			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Spot direction" width="90" height="auto"/>
				<space width="5" />
				<space width="*" />
				<input id="light_spot_direction" width="130" height="auto" text="Spot direction" />
			</layout>

			<space height="5" />

			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Spot cutoff" width="90" height="auto"/>
				<space width="5" />
				<space width="*" />
				<input id="light_spot_cutoff" width="130" height="auto" text="Spot from" />
			</layout>
			
			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Spot exponent" width="90" height="auto"/>
				<space width="5" />
				<space width="*" />
				<input id="light_spot_exponent" width="130" height="auto" text="Spot to" />
			</layout>
								
		</layout>		
	</layout>
</element>