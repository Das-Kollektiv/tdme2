<element id="{$id}" width="100%" height="auto">
	<layout width="100%" height="auto" padding="5" alignment="vertical" vertical-align="center" horizontal-align="center">
		<button width="100%" height="25" text="Sound" on-mouse-click="{$id}.condition!=open"/>
		<layout show-on="open" width="100%" height="auto" padding="5" alignment="vertical" vertical-align="top" horizontal-align="left">			

			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="File" width="70" height="auto"/>
				<space width="5" />
				<space width="*" />
				<input id="sound_file" width="120" height="auto" text="./sound.obb" />
				<space width="5" />
				<button id="button_sound_open" image="resources/engine/images/folder.png" width="25" height="25" />
				<space width="5" />
				<button id="button_sound_remove" image="resources/engine/images/delete.png" width="25" height="25" />
			</layout>
			
			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Key" width="70" height="auto" />
				<space width="5" />
				<space width="*" />
				<input id="sound_key" width="180" height="auto" text="key" />
			</layout>
			
			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Animation" width="70" height="auto" />
				<space width="5" />
				<space width="*" />
				<dropdown id="sound_animation" width="180" height="auto" text="Test">		
				</dropdown>
			</layout>
			
			<space height="5" />
			<menu-separator />
			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Gain" width="90" height="auto" />
				<space width="5" />
				<space width="*" />
				<input id="sound_gain" width="55" height="auto" text="10.00" />
			</layout>

			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Pitch" width="90" height="auto" />
				<space width="5" />
				<space width="*" />
				<input id="sound_pitch" width="55" height="auto" text="10.00" />
			</layout>
			
			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Offset ms" width="90" height="auto" />
				<space width="5" />
				<space width="*" />
				<input id="sound_offset" width="55" height="auto" text="100" />
			</layout>
			
			<space height="5" />
			<menu-separator />
			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Looped" width="90" height="auto" />
				<space width="5" />
				<space width="*" />
				<checkbox id="checkbox_sound_looping" value="1" />
			</layout>
			
			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">			
				<text font="{$font.default}" text="Ambient" width="90" height="auto" />
				<space width="5" />
				<space width="*" />
				<checkbox id="checkbox_sound_ambient" value="1" />
			</layout>
								
		</layout>		
	</layout>
</element>