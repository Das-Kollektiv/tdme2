<element id="{$id}" width="100%" height="auto">
	<layout width="100%" height="auto" padding="5" alignment="vertical" vertical-align="center" horizontal-align="center">
		<button width="100%" height="25" text="PBR Material" on-mouse-click="{$id}.condition!=open"/>
		<layout show-on="open" width="100%" height="auto" padding="5" alignment="vertical" vertical-align="top" horizontal-align="center">			
								
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Enable PBR" width="90" height="auto"/>
				<space width="5" />
				<space width="*" />
				<checkbox id="checkbox_material_pbr" value="1" on-change="material_pbr_details.condition!=pbr" />
			</layout>
			
			<element id="material_pbr_details" width="100%" height="auto"> 
				<layout show-on="pbr" width="100%" height="auto" alignment="vertical">
					<space height="5" />
					<menu-separator />
					<space height="5" />
					
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Base" width="70" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="material_pbr_base_color_texture" width="120" height="auto" text="./texture.png" />
						<space width="5" />
						<button id="button_material_pbr_base_color_texture_open" image="resources/engine/images/folder.png" width="25" height="25" />
						<space width="5" />
						<button id="button_material_pbr_base_color_texture_remove" image="resources/engine/images/delete.png" width="25" height="25" />
					</layout>
					
					<space height="5" />
						
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Met./Rough." width="70" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="material_pbr_metallic_roughness_texture" width="120" height="auto" text="./texture.png" />
						<space width="5" />
						<button id="button_material_pbr_metallic_roughness_texture_open" image="resources/engine/images/folder.png" width="25" height="25" />
						<space width="5" />
						<button id="button_material_pbr_metallic_roughness_remove" image="resources/engine/images/delete.png" width="25" height="25" />
					</layout>
					
					<space height="5" />
						
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Normal" width="70" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="material_pbr_normal_texture" width="120" height="auto" text="./texture.png" />
						<space width="5" />
						<button id="button_material_pbr_normal_texture_open" image="resources/engine/images/folder.png" width="25" height="25" />
						<space width="5" />
						<button id="button_material_pbr_normal_remove" image="resources/engine/images/delete.png" width="25" height="25" />
					</layout>
					
					<space height="5" />
					<menu-separator />
					<space height="5" />
					
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Base color factor" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="material_pbr_base_color_factor" width="70" height="auto" text="#000000" />
					</layout>
					
					<space height="5" />

					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Metallic factor" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="material_pbr_metallic_factor" width="70" height="auto" text="1000.00" />
					</layout>

					<space height="5" />

					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Roughness factor" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="material_pbr_roughness_factor" width="70" height="auto" text="1000.00" />
					</layout>

					<space height="5" />

					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Normal scale" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="materials_material_pbr_normal_scale" width="70" height="auto" text="1000.00" />
					</layout>

					<space height="5" />

					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Exposure" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="material_pbr_exposure" width="70" height="auto" text="1000.00" />
					</layout>

					<space height="5" />
					<menu-separator />
					<space height="5" />
					
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Masked transp." width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<checkbox id="checkbox_material_pbr_masked_transparency" width="auto" height="auto" value="1" />	
					</layout>
				</layout>
			</element>

		</layout>		
	</layout>
</element>