<element id="{$id}" width="100%" height="auto">
	<layout width="100%" height="auto" padding="5" alignment="vertical" vertical-align="center" horizontal-align="center">
		<button width="100%" height="25" text="PBR Material" on-mouse-click="{$id}.condition!=open"/>
		<layout show-on="open" width="100%" height="auto" padding="5" alignment="vertical" vertical-align="top" horizontal-align="center">			
								
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" text="Enable PBR" width="90" height="auto"/>
				<space width="5" />
				<space width="*" />
				<checkbox id="checkbox_pbrmaterial" value="1" on-change="pbrmaterial_details.condition!=pbr" />
			</layout>
			
			<element id="pbrmaterial_details" width="100%" height="auto"> 
				<layout show-on="pbr" width="100%" height="auto" alignment="vertical">
					<space height="5" />
					<menu-separator />
					<space height="5" />
					
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Base" width="70" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="pbrmaterial_basecolor_texture" width="120" height="auto" text="./texture.png" />
						<space width="5" />
						<button id="button_pbrmaterial_basecolor_texture_open" image="resources/engine/images/folder.png" width="25" height="25" />
						<space width="5" />
						<button id="button_pbrmaterial_basecolor_texture_remove" image="resources/engine/images/delete.png" width="25" height="25" />
					</layout>
					
					<space height="5" />
						
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Met./Roug." width="70" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="pbrmaterial_metallic_roughness_texture" width="120" height="auto" text="./texture.png" />
						<space width="5" />
						<button id="button_pbrmaterial_metallic_roughness_texture_open" image="resources/engine/images/folder.png" width="25" height="25" />
						<space width="5" />
						<button id="button_pbrmaterial_metallic_roughness_remove" image="resources/engine/images/delete.png" width="25" height="25" />
					</layout>
					
					<space height="5" />
						
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Normal" width="70" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="pbrmaterial_normal_texture" width="120" height="auto" text="./texture.png" />
						<space width="5" />
						<button id="button_pbrmaterial_normal_texture_open" image="resources/engine/images/folder.png" width="25" height="25" />
						<space width="5" />
						<button id="button_pbrmaterial_normal_remove" image="resources/engine/images/delete.png" width="25" height="25" />
					</layout>
					
					<space height="5" />
					<menu-separator />
					<space height="5" />
					
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Base color" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<!-- <input id="pbrmaterial_basecolor_factor" width="70" height="auto" text="#000000" /> -->
						<image id="pbrmaterial_basecolor_factor" width="100" height="auto" src="resources/engine/images/button.png" scale9="10" effect-color-mul="red"/>
						<space width="5" />						
						<button id="button_pbrmaterial_basecolor_factor" width="25" height="25" image="resources/engine/images/edit.png"/>
					</layout>
					
					<space height="5" />
					<menu-separator />
					<space height="5" />

					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Metallic factor" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="pbrmaterial_metallic_factor" width="70" height="auto" text="1000.00" />
					</layout>

					<space height="5" />

					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Roughness factor" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="pbrmaterial_roughness_factor" width="70" height="auto" text="1000.00" />
					</layout>

					<space height="5" />

					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Normal scale" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="pbrmaterial_normal_scale" width="70" height="auto" text="1000.00" />
					</layout>

					<space height="5" />

					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Exposure" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="pbrmaterial_exposure" width="70" height="auto" text="1000.00" />
					</layout>

					<space height="5" />
					<menu-separator />
					<space height="5" />
					
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Masked transp." width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<checkbox id="checkbox_pbrmaterial_maskedtransparency" width="auto" height="auto" value="1" />	
					</layout>
				</layout>
			</element>

		</layout>		
	</layout>
</element>