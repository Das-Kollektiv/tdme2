<element id="{$id}" width="100%" height="auto">
	<layout width="100%" height="auto" padding="5" alignment="vertical" vertical-align="center" horizontal-align="center">
		<button width="100%" height="25" text="PBR Material" on-mouse-click="{$id}.condition!=open"/>
		<layout show-on="open" width="100%" height="auto" padding="5" alignment="vertical" vertical-align="top" horizontal-align="center">			
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" color="{$color.font_normal}" text="Enable PBR" width="*" height="auto"/>
				<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
					<checkbox id="pbrmaterial_enabled" width="25" height="25" value="1" on-change="pbrmaterial_details.condition!=pbr" />
				</layout>
			</layout>
			
			<element id="pbrmaterial_details" width="100%" height="auto"> 
				<layout show-on="pbr" width="100%" height="auto" alignment="vertical">
					<space height="5" />
					<menu-separator />
					<space height="5" />
					
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" color="{$color.font_normal}" text="Texture" width="*" height="auto" horizontal-align="left" />
						<layout alignment="horizontal" width="75%" height="auto" horizontal-align="right">
							<element width="85" height="85" horizontal-align="center" vertical-align="center" border="1" border-color="{$color.element_frame}" background-color="{$color.element_midground}">
								<text font="{$font.default}" color="{$color.font_hint}" text="Select"  />
								<texture id="pbrmaterial_basecolor_texture" width="100%" height="100%" />
							</element>
							<space width="5" />
							<layout width="auto" height="auto" alignment="vertical">
								<button id="pbrmaterial_basecolor_texture_open" image="resources/engine/images/folder.png" width="25" height="25" />
								<space height="5" />
								<button id="pbrmaterial_basecolor_texture_remove" image="resources/engine/images/delete.png" width="25" height="25" />
								<space height="5" />
								<button id="pbrmaterial_basecolor_texture_browseto" image="resources/engine/images/search.png" width="25" height="25" />
							</layout>
						</layout>						
					</layout>
					<space height="10" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" color="{$color.font_normal}" text="Met./Roug." width="*" height="auto" horizontal-align="left" />
						<layout alignment="horizontal" width="75%" height="auto" horizontal-align="right">
							<element width="85" height="85" horizontal-align="center" vertical-align="center" border="1" border-color="{$color.element_frame}" background-color="{$color.element_midground}">
								<text font="{$font.default}" color="{$color.font_hint}" text="Select"  />
								<texture id="pbrmaterial_metallic_roughness_texture" width="100%" height="100%" />
							</element>
							<space width="5" />
							<layout width="auto" height="auto" alignment="vertical">
								<button id="pbrmaterial_metallic_roughness_texture_open" image="resources/engine/images/folder.png" width="25" height="25" />
								<space height="5" />
								<button id="pbrmaterial_metallic_roughness_texture_remove" image="resources/engine/images/delete.png" width="25" height="25" />
								<space height="5" />
								<button id="pbrmaterial_metallic_roughness_texture_browseto" image="resources/engine/images/search.png" width="25" height="25" />
							</layout>
						</layout>						
					</layout>
					<space height="10" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" color="{$color.font_normal}" text="Normal" width="*" height="auto" horizontal-align="left" />
						<layout alignment="horizontal" width="75%" height="auto" horizontal-align="right">
							<element width="85" height="85" horizontal-align="center" vertical-align="center" border="1" border-color="{$color.element_frame}" background-color="{$color.element_midground}">
								<text font="{$font.default}" color="{$color.font_hint}" text="Select"  />
								<texture id="pbrmaterial_normal_texture" width="100%" height="100%" />
							</element>
							<space width="5" />
							<layout width="auto" height="auto" alignment="vertical">
								<button id="pbrmaterial_normal_texture_open" image="resources/engine/images/folder.png" width="25" height="25" />
								<space height="5" />
								<button id="pbrmaterial_normal_texture_remove" image="resources/engine/images/delete.png" width="25" height="25" />
								<space height="5" />
								<button id="pbrmaterial_normal_texture_browseto" image="resources/engine/images/search.png" width="25" height="25" />
							</layout>
						</layout>						
					</layout>					
					
					<space height="5" />
					<menu-separator />
					<space height="5" />
					
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" color="{$color.font_normal}" text="Base Color" width="*" height="auto"/>
						<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
							<image id="pbrmaterial_basecolor" width="*" height="auto" src="resources/engine/images/button.png" scale9="10" effect-color-mul="red"/>
							<space width="5" />						
							<button id="pbrmaterial_basecolor_edit" width="25" height="25" image="resources/engine/images/edit.png"/>
						</layout>
					</layout>					
					
					<space height="5" />
					<menu-separator />
					<space height="5" />

					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" color="{$color.font_normal}" text="Metallic factor" width="*" height="auto"/>
						<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
							<input id="pbrmaterial_metallic_factor" width="75%" height="auto" text="1000.00" options="type=float,min=0.0,step=0.25,decimals=2" image="resources/engine/images/inputslider.png" />
						</layout>
					</layout>

					<space height="5" />

					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" color="{$color.font_normal}" text="Roughness factor" width="*" height="auto"/>
						<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
							<input id="pbrmaterial_roughness_factor" width="75%" height="auto" text="1000.00" options="type=float,min=0.0,step=0.25,decimals=2" image="resources/engine/images/inputslider.png"/>
						</layout>
					</layout>

					<space height="5" />

					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" color="{$color.font_normal}" text="Normal scale" width="*" height="auto"/>
						<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
							<input id="pbrmaterial_normal_scale" width="75%" height="auto" text="1000.00" options="type=float,min=0.0,step=0.25,decimals=2" image="resources/engine/images/inputslider.png"/>
						</layout>
					</layout>

					<space height="5" />

					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" color="{$color.font_normal}" text="Exposure" width="*" height="auto"/>
						<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
							<input id="pbrmaterial_exposure" width="75%" height="auto" text="1000.00" options="type=float,min=0.0,step=0.25,decimals=2" image="resources/engine/images/inputslider.png"/>
						</layout>
					</layout>

					<space height="5" />
					<menu-separator />
					<space height="5" />
					
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" color="{$color.font_normal}" text="Masked Transparency" width="*" height="auto"/>
						<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right">
							<checkbox id="pbrmaterial_maskedtransparency" width="25" height="25" value="1" />
						</layout>
					</layout>
				</layout>
			</element>

		</layout>		
	</layout>
</element>