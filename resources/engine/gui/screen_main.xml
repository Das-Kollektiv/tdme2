<screen id="screen_main" background-color="{$color.element_background}" min-width="1024" min-height="768" max-width="1920" max-height="1080">
	<layout alignment="vertical" width="100%" height="100%">
		<layout padding="5" alignment="horizontal" vertical-align="center" width="100%" height="30">
			<space width="5"/>
			<image src="resources/engine/images/tdme.png"/>
			<space width="5"/>
			<menu-header>
				<menu-header-item text="File">
					<menu-item id="menu_file_new" image="resources/engine/images/new_data.png" text="New Project" shortcut="ctrl + n"/>
					<menu-item id="menu_file_open" image="resources/engine/images/folder.png" text="Open Project" shortcut="ctrl + o"/>
					<menu-separator />
					<menu-item id="menu_file_saveall" image="resources/engine/images/save.png" text="Save all" shortcut="ctrl + s"/>
					<menu-separator />
					<menu-item id="menu_file_quit" image="resources/engine/images/quit.png" text="Quit" shortcut="ctrl + q" />
				</menu-header-item>
				<menu-header-item text="Edit">
					<menu-item text="Undo" id="menu_edit_undo" />
					<menu-item text="Redo" id="menu_edit_redo" />
					<menu-separator />
					<menu-item text="Cut" id="menu_edit_cut" />
					<menu-item text="Copy" id="menu_edit_copy" />
					<menu-item text="Paste" id="menu_edit_paste" />
					<menu-separator />
					<menu-item text="Delete" id="menu_edit_delete" />
				</menu-header-item>
				<menu-header-item text="Help">
					<menu-item text="Documentation" id="menu_help_documentation" />
					<menu-item text="Community" id="menu_help_community" />
					<menu-item text="Bug Tracker" id="menu_help_bugtracker" />
					<menu-separator />
					<menu-item text="About" id="menu_help_about" />
				</menu-header-item>
			</menu-header>
		</layout>
		
		<layout alignment="horizontal" width="100%" height="*">
		
			<space width="5"/>
		
			<!-- project library -------------------------------------------------->
			<tabs alignment="vertical" width="220" height="100%">
				<tabs-header>
					<tab id="tab_projectlibrary" text="Files" />
				</tabs-header>
				<tabs-content>
					<tab-content tab-id="tab_projectlibrary" alignment="vertical">
					
						<layout padding="5" alignment="vertical" width="100%" height="100%">
						
							<input width="100%" height="auto" hint="Search" image="resources/engine/images/search.png" />
							
							<space height="5"/>
							
							<selectbox id="selectbox_projectlibrary" boder="0">
								<scrollarea width="100%" height="200" focusable="true" background-color="{$color.element_midground}">
								
									<selectbox-parent-option image="resources/engine/images/folder.png" text="resources" value="1">
										<selectbox-option image="resources/engine/images/folder.png" text="textures" value="1.1" selected="true" />
										<selectbox-option image="resources/engine/images/folder.png" text="models" value="1.2" />
										<selectbox-option image="resources/engine/images/folder.png" text="scenes" value="1.3" />
										<selectbox-option image="resources/engine/images/folder.png" text="particles" value="1.4" />
										<selectbox-parent-option image="resources/engine/images/folder.png" text="gui" value="1.5">
											<selectbox-option image="resources/engine/images/folder.png" text="definitions" value="1.5.1" />
										</selectbox-parent-option>
									</selectbox-parent-option>
					
								</scrollarea>
							</selectbox>
							
							<space height="20"/>
							
							<input width="100%" height="auto" hint="Search" image="resources/engine/images/search.png" />
							
							<space height="5"/>
							
							<layout alignment="horizontal" width="100%" height="auto">
								<dropdown template="dropdown_template_button.xml" id="dropdown_projectlibrary_add" width="50%" height="25" image="resources/engine/images/add.png" text="Create">
									<dropdown-option text="Folder" value="1" />
									<menu-separator />
									<dropdown-option text="Prototype" value="2" />
									<dropdown-option text="Scene" value="3" />
									<dropdown-option text="Particle" value="4" />
									<dropdown-option text="Script" value="4" />
									<dropdown-option text="GUI" value="4" />
								</dropdown>
								<space width="5"/>
								<button id="button_projectlibrary_import" width="*" height="25" image="resources/engine/images/import.png" text="Import" />
							</layout>
							
							<space height="5"/>
							
							<scrollarea border="1" background-color="{$color.element_midground}" width="100%" height="*" focusable="true">
							
								<layout alignment="horizontal" >
									<button template="button_template_thumbnail.xml" size="75" thumbnail="resources/engine/textures/terrain_dirt.png" icon="resources/engine/images/folder.png" filename="terrain_dirt.png"/>
									<button template="button_template_thumbnail.xml" size="75" thumbnail="resources/engine/textures/terrain_dirt.png" icon="resources/engine/images/folder.png" filename="terrain_dirt.png"/>
								</layout>
								
								<layout alignment="horizontal" >
									<button template="button_template_thumbnail.xml" size="75" thumbnail="resources/engine/textures/terrain_dirt.png" icon="resources/engine/images/folder.png" filename="terrain_dirt.png"/>
									<button template="button_template_thumbnail.xml" size="75" thumbnail="resources/engine/textures/terrain_dirt.png" icon="resources/engine/images/folder.png" filename="terrain_dirt.png"/>
								</layout>
								
								<layout alignment="horizontal" >
									<button template="button_template_thumbnail.xml" size="75" thumbnail="resources/engine/textures/terrain_dirt.png" icon="resources/engine/images/folder.png" filename="terrain_dirt.png"/>
									<button template="button_template_thumbnail.xml" size="75" thumbnail="resources/engine/textures/terrain_dirt.png" icon="resources/engine/images/folder.png" filename="terrain_dirt.png"/>
								</layout>
								
								<layout alignment="horizontal" >
									<button template="button_template_thumbnail.xml" size="75" thumbnail="resources/engine/textures/terrain_dirt.png" icon="resources/engine/images/folder.png" filename="terrain_dirt.png"/>
									<button template="button_template_thumbnail.xml" size="75" thumbnail="resources/engine/textures/terrain_dirt.png" icon="resources/engine/images/folder.png" filename="terrain_dirt.png"/>
								</layout>
								
								<layout alignment="horizontal" >
									<button template="button_template_thumbnail.xml" size="75" thumbnail="resources/engine/textures/terrain_dirt.png" icon="resources/engine/images/folder.png" filename="terrain_dirt.png"/>
									<button template="button_template_thumbnail.xml" size="75" thumbnail="resources/engine/textures/terrain_dirt.png" icon="resources/engine/images/folder.png" filename="terrain_dirt.png"/>
								</layout>
								
								<layout alignment="horizontal" >
									<button template="button_template_thumbnail.xml" size="75" thumbnail="resources/engine/textures/terrain_dirt.png" icon="resources/engine/images/folder.png" filename="terrain_dirt.png"/>
									<button template="button_template_thumbnail.xml" size="75" thumbnail="resources/engine/textures/terrain_dirt.png" icon="resources/engine/images/folder.png" filename="terrain_dirt.png"/>
								</layout>
								
								<layout alignment="horizontal" >
									<button template="button_template_thumbnail.xml" size="75" thumbnail="resources/engine/textures/terrain_dirt.png" icon="resources/engine/images/folder.png" filename="terrain_dirt.png"/>
									<button template="button_template_thumbnail.xml" size="75" thumbnail="resources/engine/textures/terrain_dirt.png" icon="resources/engine/images/folder.png" filename="terrain_dirt.png"/>
								</layout>
								
								<layout alignment="horizontal" >
									<button template="button_template_thumbnail.xml" size="75" thumbnail="resources/engine/textures/terrain_dirt.png" icon="resources/engine/images/folder.png" filename="terrain_dirt.png"/>
									<button template="button_template_thumbnail.xml" size="75" thumbnail="resources/engine/textures/terrain_dirt.png" icon="resources/engine/images/folder.png" filename="terrain_dirt.png"/>
								</layout>
								
								<layout alignment="horizontal" >
									<button template="button_template_thumbnail.xml" size="75" thumbnail="resources/engine/textures/terrain_dirt.png" icon="resources/engine/images/folder.png" filename="terrain_dirt.png"/>
									<button template="button_template_thumbnail.xml" size="75" thumbnail="resources/engine/textures/terrain_dirt.png" icon="resources/engine/images/folder.png" filename="terrain_dirt.png"/>
								</layout>
							
							</scrollarea>
							
						</layout>
			
					</tab-content>
				</tabs-content>
			</tabs>
			<!-------------------------------------------------------------------->
			
			
			<space width="5"/>
			
			
			<!-- viewport -------------------------------------------------------->
			<tabs alignment="vertical" width="*" height="100%">
				<tabs-header>
					<tab id="tab_viewport_1" text="newscene.tl" closeable="true" />
					<tab id="tab_viewport_2" text="terrain.tm" closeable="true" />
					<tab id="tab_viewport_3" text="terrain.tm" closeable="true" />
				</tabs-header>
				<tabs-content>
					<tab-content tab-id="tab_viewport_1">
						<template id="scene_1" src="resources/engine/gui/template_viewport_scene.xml"/>
					</tab-content>
					<tab-content tab-id="tab_viewport_2">
						<template id="scene_2" src="resources/engine/gui/template_viewport_terrain.xml"/>
					</tab-content>
					<tab-content tab-id="tab_viewport_3">
						<template id="scene_3" src="resources/engine/gui/template_viewport_foliage.xml"/>
					</tab-content>						
				</tabs-content>
			</tabs>
			<!------------------------------------------------------------------->
			
			
			<space width="5"/>
			
			
			<layout alignment="vertical" width="300" height="100%">


				<!-- outliner --------------------------------------------------->
				<tabs alignment="vertical" width="100%" height="40%">
					<tabs-header>
						<tab id="tab_outliner" text="Outliner" />
					</tabs-header>
					<tabs-content>
						<tab-content tab-id="tab_outliner" vertical-align="center">
							<layout padding="5" alignment="vertical" width="100%" height="100%">
							
								<layout alignment="horizontal" width="100%" height="auto">
									<input width="*" height="auto" hint="Search" image="resources/engine/images/search.png" />
									<space width="5"/>
									<dropdown template="dropdown_template_button.xml" id="dropdown_outliner_add" width="75" height="25" image="resources/engine/images/add.png" text="Add">
										<dropdown-option text="Folder" value="1" />
										<menu-separator />
										<dropdown-option text="Light" value="2" />
										<dropdown-option text="Terrain" value="3" />
										<dropdown-option text="Sky" value="4" />
										<dropdown-option text="Empty" value="5" />
										<dropdown-option text="Trigger" value="6" />
										<dropdown-option text="Env.Map" value="7" />
										<dropdown-option text="BV" value="8" />
										<dropdown-option text="LOD" value="9" />
										<dropdown-option text="Particle" value="10" />
										<dropdown-option text="Sound" value="11" />
										<dropdown-option text="Foliage" value="12" />
									</dropdown>
								</layout>
								
								<space height="5"/>
							
								<selectbox id="selectbox_outliner" boder="0" height="*">
							
									<scrollarea background-color="{$color.element_midground}" width="100%" height="100%" focusable="true">
									
										<selectbox-parent-option image="resources/engine/images/folder.png" text="scene" value="1">
											<selectbox-option image="resources/engine/images/mesh.png" text="model1" value="1.1" selected="true" />
											<selectbox-option image="resources/engine/images/mesh.png" text="model2" value="1.2" />
											<selectbox-option image="resources/engine/images/mesh.png" text="model3" value="1.3" />
											<selectbox-option image="resources/engine/images/mesh.png" text="model4" value="1.4" />
										</selectbox-parent-option>
										
									</scrollarea>
									
								</selectbox>
								
							</layout>
						</tab-content>	
					</tabs-content>
				</tabs>
				<!------------------------------------------------------------------->
				
				
				<space height="5"/>
				
				<!-- details panel -->
				<tabs alignment="vertical" width="100%" height="*">
					<tabs-header>
						<tab id="tab_details" text="Details" />
					</tabs-header>
					<tabs-content>
						<tab-content tab-id="tab_details" horizontal-align="center" vertical-align="top">
							<layout padding="5" alignment="vertical" width="100%" height="100%">
								<scrollarea width="100%" height="100%" focusable="true">
								
									<!-- <input width="100%" height="auto" hint="Filter" /> -->
									<!-- <space height="5"/> -->
									<template id="foliagebrush" src="resources/engine/gui/template_details_foliagebrush.xml"/>
									<template id="terrainbrush" src="resources/engine/gui/template_details_terrainbrush.xml"/>
									<template id="terrain" src="resources/engine/gui/template_details_terrain.xml"/>
									<template id="environmentmapping" src="resources/engine/gui/template_details_environmentmapping.xml"/>
									<template id="particleemitter" src="resources/engine/gui/template_details_particleemitter.xml"/>
									<template id="particletype" src="resources/engine/gui/template_details_particletype.xml"/>
									<template id="light" src="resources/engine/gui/template_details_light.xml"/>
									<template id="reflection" src="resources/engine/gui/template_details_reflection.xml"/>
									<template id="transformation" src="resources/engine/gui/template_details_transformation.xml"/>
									<template id="sky" src="resources/engine/gui/template_details_sky.xml"/>
									<template id="sound" src="resources/engine/gui/template_details_sound.xml"/>
									<template id="animation" src="resources/engine/gui/template_details_animation.xml"/>
									<template id="preview" src="resources/engine/gui/template_details_animationpreview.xml"/>
									<template id="specular_material" src="resources/engine/gui/template_details_specularmaterial.xml"/>
									<template id="pbr_material" src="resources/engine/gui/template_details_pbrmaterial.xml"/>
									<template id="properties" src="resources/engine/gui/template_details_properties.xml"/>
									<template id="physics" src="resources/engine/gui/template_details_physics.xml"/>
									<template id="rendering" src="resources/engine/gui/template_details_rendering.xml"/>
									<template id="lod" src="resources/engine/gui/template_details_lod.xml"/>
									<template id="boundingvolume" src="resources/engine/gui/template_details_boundingvolume.xml"/>
								
								</scrollarea>
							</layout>
						</tab-content>	
					</tabs-content>
				</tabs>
			
			</layout>
			
			<space width="5"/>
		
		</layout>
		
		<space height="5"/>
	
	</layout>	
</screen>
