<element id="{$id}" width="100%" height="auto">
	<layout width="100%" height="auto" padding="5" alignment="vertical" vertical-align="center" horizontal-align="center">
		<button width="100%" height="25" text="Sky" on-mouse-click="{$id}.condition!=open"/>
		<layout show-on="open" width="100%" height="auto" padding="5" alignment="vertical" vertical-align="top" horizontal-align="left">			

			<space height="5" />
			
			<template src="resources/engine/gui/template_details_shared_fileinput.xml" id="sky_model" type="Model" />
			
			<space height="5" />
			<menu-separator />
			<space height="5" />
			
			<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
				<text font="{$font.default}" color="{$color.font_normal}" text="Scale" width="*" height="auto" />
				<layout alignment="horizontal" width="50%" height="auto" horizontal-align="right" vertical-align="center">
					<input id="sky_model_scale" width="100%" height="auto" text="10.00" options="type=float,min=0.0,step=0.25,decimals=2" image="resources/engine/images/inputslider.png" />	
				</layout>
			</layout>
								
		</layout>		
	</layout>
</element>