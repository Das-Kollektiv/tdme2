<element id="{$id}" width="100%" height="auto">
	<layout width="100%" height="auto" padding="5" alignment="vertical" vertical-align="center" horizontal-align="center">
		<button width="100%" height="25" text="Bounding Volume" on-mouse-click="{$id}.condition!=open"/>
		<layout show-on="open" width="100%" height="auto" padding="5" alignment="vertical" vertical-align="top" horizontal-align="center">			
		

			<dropdown id="boundingvolume_type" name="boundingvolume_type" width="100%" height="auto" text="Select Type">

					<dropdown-option text="Sphere" value="1" on-mouse-click="boundingvolume_type_details.condition=sphere" />
					<dropdown-option text="Capsule" value="2" on-mouse-click="boundingvolume_type_details.condition=capsule" />
					<dropdown-option text="Bounding Box" value="3" on-mouse-click="boundingvolume_type_details.condition=obb" />
					<dropdown-option text="Imported Mesh" value="4" on-mouse-click="boundingvolume_type_details.condition=imported" />
					<dropdown-option text="Generated Mesh" value="5" on-mouse-click="boundingvolume_type_details.condition=generated" />
					<dropdown-option text="Terrain" value="6" on-mouse-click="boundingvolume_type_details.condition=terrain"/>

			</dropdown>

			<space height="10" />
			<element id="boundingvolume_type_details" width="100%" height="auto">  
				<layout show-on="sphere" id="boundingvolume_sphere" alignment="vertical" width="100%" height="auto" horizontal-align="center">
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Location" width="90" height="auto" horizontal-align="left" />
						<space width="5" />
						<space width="*" />
						<input id="boundingvolume_sphere_x" width="40" height="auto" text="0.0" />
						<space width="5" />
						<input id="boundingvolume_sphere_y"  width="40" height="auto" text="0.0" />
						<space width="5" />
						<input id="boundingvolume_sphere_z"  width="40" height="auto" text="0.0" />
					</layout>
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Radius" width="90" height="auto" horizontal-align="left" />
						<space width="5" />
						<space width="*" />
						<input id="boundingvolume_sphere_radius" name="boundingvolume_sphere_radius" width="130" height="auto" text="0.0" />
					</layout>
				</layout>
				
				<layout show-on="capsule" id="boundingvolume_capsule" alignment="vertical" width="100%" height="auto" horizontal-align="center">
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Point A" width="90" height="auto" horizontal-align="left" />
						<space width="5" />
						<space width="*" />
						<input id="boundingvolume_capsule_a_x" width="40" height="auto" text="0.0" />
						<space width="5" />
						<input id="boundingvolume_capsule_a_y"  width="40" height="auto" text="0.0" />
						<space width="5" />
						<input id="boundingvolume_capsule_a_z"  width="40" height="auto" text="0.0" />
					</layout>
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Point B" width="90" height="auto" horizontal-align="left" />
						<space width="5" />
						<space width="*" />
						<input id="boundingvolume_capsule_b_x" width="40" height="auto" text="0.0" />
						<space width="5" />
						<input id="boundingvolume_capsule_b_y"  width="40" height="auto" text="0.0" />
						<space width="5" />
						<input id="boundingvolume_capsule_b_z"  width="40" height="auto" text="0.0" />
					</layout>
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Radius" width="90" height="auto" horizontal-align="left" />
						<space width="5" />
						<space width="*" />
						<input id="boundingvolume_capsule_radius" name="boundingvolume_capsule_radius" width="130" height="auto" text="0.0" />
					</layout>
				</layout>
				
				<layout show-on="obb" id="boundingvolume_obb" alignment="vertical" width="100%" height="auto" horizontal-align="center">
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Location" width="90" height="auto" horizontal-align="left" />
						<space width="5" />
						<space width="*" />
						<input id="boundingvolume_obb_x" width="40" height="auto" text="0.0" />
						<space width="5" />
						<input id="boundingvolume_obb_y"  width="40" height="auto" text="0.0" />
						<space width="5" />
						<input id="boundingvolume_obb_z"  width="40" height="auto" text="0.0" />
					</layout>
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">	
						<text font="{$font.default}" text="Rotation" width="90" height="auto" horizontal-align="left" />
						<space width="5" />
						<space width="*" />
						<input id="boundingvolume_obb_rotation_x" width="40" height="auto" text="0.0" />
						<space width="5" />
						<input id="boundingvolume_obb_rotation_y"  width="40" height="auto" text="0.0" />
						<space width="5" />
						<input id="boundingvolume_obb_rotation_z"  width="40" height="auto" text="0.0" />
					</layout>
					<space height="5" />
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Halfsize" width="90" height="auto" horizontal-align="left" />
						<space width="5" />
						<space width="*" />
						<input id="boundingvolume_obb_halfextension" name="boundingvolume_obb_halfextension" width="130" height="auto" text="0.0" />
					</layout>
				</layout>
				
				<layout show-on="imported" id="boundingvolume_imported" alignment="vertical" width="100%" height="auto" horizontal-align="center">
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<input id="boundingvolume_imported_file" width="*" height="auto" text="./model.tm"/>										
						<space width="5" />
						<button id="button_boundingvolume_imported_open" image="resources/engine/images/folder.png" width="25" height="25"/>
						<space width="5" />
						<button id="button_boundingvolume_imported_remove" image="resources/engine/images/delete.png" width="25" height="25"/>
					</layout>
				</layout> 
				
				<layout show-on="generated" id="boundingvolume_generated" alignment="vertical" width="100%" height="auto" horizontal-align="center">

					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Resolution" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="boundingvolume_generated_resolution" width="70" height="auto" text="1000.00" />
					</layout>

					<space height="5" />
					
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Depth" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="boundingvolume_generated_depth" width="70" height="auto" text="1000.00" />
					</layout>

					<space height="5" />
					
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Concavity" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="boundingvolume_generated_concavity" width="70" height="auto" text="1000.00" />
					</layout>

					<space height="5" />
				
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="P down sampling" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="boundingvolume_generated_planedownsampling" width="70" height="auto" text="1000.00" />
					</layout>

					<space height="5" />

					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="CH down sampling" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="boundingvolume_generated_convexhullownsampling" width="70" height="auto" text="1000.00" />
					</layout>

					<space height="5" />
				
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Alpha" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="boundingvolume_generated_alpha" width="70" height="auto" text="1000.00" />
					</layout>

					<space height="5" />
					
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Beta" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="boundingvolume_generated_beta" width="70" height="auto" text="1000.00" />
					</layout>

					<space height="5" />
					
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Max vertices / CH" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="boundingvolume_generated_maxverticesperch" width="70" height="auto" text="1000.00" />
					</layout>

					<space height="5" />
					
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="Min volume / CH" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="boundingvolume_generated_minvolumeperch" width="70" height="auto" text="1000.00" />
					</layout>

					<space height="5" />
					
					<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
						<text font="{$font.default}" text="PCA" width="90" height="auto"/>
						<space width="5" />
						<space width="*" />
						<input id="boundingvolume_generated_pca" width="70" height="auto" text="1000.00" />
					</layout>
					
					<space height="10" />
					
					<button id="button_boundingvolume_generated_generate" text="Generate" width="auto" height="25" />

				</layout> 
				
				<layout show-on="terrain" id="boundingvolume_terrain" alignment="vertical" width="100%" height="auto" horizontal-align="center">
				</layout>				

			</element>			
		</layout>		
	</layout>
</element>