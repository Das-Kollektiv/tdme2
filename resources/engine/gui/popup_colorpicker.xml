<screen id="popup_colorpicker" popup="true" min-width="1024" min-height="768" max-width="2560" max-height="1440">
	<layout alignment="vertical" horizontal-align="center" vertical-align="center" width="100%" height="100%">	
		<tabs width="300" height="500">
			<tabs-header id="filedialog_tabs-header">
				<tab id="colorpicker_caption" image="resources/engine/images/attention.png" text="Color Picker" closeable="true"/>
			</tabs-header>
			<tabs-content>
				<tab-content tab-id="colorpicker_caption">
				
					<layout padding="5" border="1" border-color="{$color.element_frame}" width="auto" height="auto" alignment="vertical" background-color="{$color.element_foreground}">
						<layout alignment="horizontal" width="200" height="auto">
							<image src="resources/engine/images/colorpicker.png"/>
							<space width="5" />
							<space width="*" />
							<slider-vertical template="slider-v_template_gradient.xml" id="slider_colorpicker_brightness" value="0.5" height="175" />
						</layout>
						<space height="5" />
						<menu-separator />
						<layout padding="5" width="200" height="auto" alignment="horizontal">	
							<layout width="*" height="auto" alignment="vertical">	
								<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
									<text font="{$font.default}" text="Red" width="45" height="auto" />
									<space width="5" />
									<space width="*" />
									<input id="colorpicker_red" width="60" height="auto" text="255" options="type=int,min=0,max=255,step=1" image="resources/engine/images/inputslider.png" />
								</layout>
								<space height="5" />
								<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
									<text font="{$font.default}" text="Green" width="45" height="auto" />
									<space width="5" />
									<space width="*" />
									<input id="colorpicker_green" width="60" height="auto" text="255" options="type=int,min=0,max=255,step=1" image="resources/engine/images/inputslider.png" />
								</layout>
								<space height="5" />
								<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
									<text font="{$font.default}" text="Blue" width="45" height="auto" />
									<space width="5" />
									<space width="*" />
									<input id="colorpicker_blue" width="60" height="auto" text="255" options="type=int,min=0,max=255,step=1" image="resources/engine/images/inputslider.png" />
								</layout>
								<space height="10" />
								<layout width="100%" height="auto" alignment="horizontal" vertical-align="center">
									<text font="{$font.default}" text="Alpha" width="45" height="auto" />
									<space width="5" />
									<space width="*" />
									<input id="colorpicker_alpha" width="60" height="auto" text="255" options="type=int,min=0,max=255,step=1" image="resources/engine/images/inputslider.png"  />
								</layout>
							</layout>
							<space width="10" />
							<layout width="auto" height="auto" alignment="vertical">
								<button id="colorpicker_pipette" image="resources/engine/images/pipette.png" width="25" height="25" />
							</layout>
						</layout>
						<menu-separator />
						<layout padding="5" width="100%" height="auto" alignment="horizontal" vertical-align="center">
							<text font="{$font.default}" text="Hex" width="90" height="auto" />
							<space width="5" />
							<space width="*" />
							<input id="colorpicker_hex" width="95" height="auto" text="#00000000" />
						</layout>		
					</layout>
				
				</tab-content>
			</tabs-content>
		</tabs>
	</layout>
</screen>
